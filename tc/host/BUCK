"""
Host PATH toolchain: wraps whatever cc/c++/ar/strip/make is on PATH.

Used as the bootstrap fallback when the bootstrap configuration
transition is active â€” host tool targets build with host PATH tools
to break the circular dependency with the seed toolchain.

Also usable directly during initial bootstrap when no seed exists yet.
"""

load("//tc:toolchain_rules.bzl", "buckos_toolchain")

buckos_toolchain(
    name = "host-toolchain",
    cc = "cc",
    cxx = "c++",
    ar = "ar",
    strip_bin = "strip",
    make = "make",
    pkg_config = "pkg-config",
    target_triple = "x86_64-linux-gnu",
    extra_ldflags = ["-fuse-ld=mold"],
    visibility = ["PUBLIC"],
)
