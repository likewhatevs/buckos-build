load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")
load("//defs:platform_defs.bzl", "PLATFORM_MACOS")

autotools_package(
    name = "make",
    version = "4.4.1",
    src_uri = "https://mirrors.kernel.org/gnu/make/make-4.4.1.tar.gz",
    sha256 = "dd16fb1d67bfab79a72f5e8390735c49e3e8e70b4945a15ab1f81ddb78658fb3",
    signature_sha256 = "b0085e6c3f9a7461e739786a8d28dec9aeb090335bb8818e42b497fdeb73b929",
    signature_required=False,
    description = "GNU make utility to maintain groups of programs",
    homepage = "https://www.gnu.org/software/make/",
    license = "GPL-3.0",

    # USE flags this package supports
    iuse = [
        "nls",
        "guile",
    ],

    # Default USE flags
    use_defaults = ["nls"],

    # Conditional configure arguments
    use_configure = {
        "nls": "--enable-nls",
        "-nls": "--disable-nls",
        "guile": "--with-guile",
        "-guile": "--without-guile",
    },

    # Base configure arguments
    configure_args = [
        "--program-prefix=g",
    ],

    maintainers = ["mac-team"],
    visibility = ["PUBLIC"],
)
