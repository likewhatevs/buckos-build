# Core system libraries and utilities for macOS

filegroup(
    name = "all-core",
    srcs = [
        "//packages/mac/core/zlib:zlib",
        "//packages/mac/core/bzip2:bzip2",
        "//packages/mac/core/xz:xz",
        "//packages/mac/core/ncurses:ncurses",
        "//packages/mac/core/readline:readline",
        "//packages/mac/core/libffi:libffi",
        "//packages/mac/core/coreutils:coreutils",
        "//packages/mac/core/findutils:findutils",
        "//packages/mac/core/gnu-sed:gnu-sed",
        "//packages/mac/core/gnu-tar:gnu-tar",
        "//packages/mac/core/gawk:gawk",
        "//packages/mac/core/grep:grep",
    ],
    target_compatible_with = ["prelude//os/constraints:macos"],
    visibility = ["PUBLIC"],
)

# Compression libraries
filegroup(
    name = "compression",
    srcs = [
        "//packages/mac/core/zlib:zlib",
        "//packages/mac/core/bzip2:bzip2",
        "//packages/mac/core/xz:xz",
    ],
    target_compatible_with = ["prelude//os/constraints:macos"],
    visibility = ["PUBLIC"],
)

# Terminal libraries
filegroup(
    name = "terminal-libs",
    srcs = [
        "//packages/mac/core/ncurses:ncurses",
        "//packages/mac/core/readline:readline",
    ],
    target_compatible_with = ["prelude//os/constraints:macos"],
    visibility = ["PUBLIC"],
)

# GNU utilities (prefixed with 'g' on macOS)
filegroup(
    name = "gnu-utils",
    srcs = [
        "//packages/mac/core/coreutils:coreutils",
        "//packages/mac/core/findutils:findutils",
        "//packages/mac/core/gnu-sed:gnu-sed",
        "//packages/mac/core/gnu-tar:gnu-tar",
        "//packages/mac/core/gawk:gawk",
        "//packages/mac/core/grep:grep",
    ],
    target_compatible_with = ["prelude//os/constraints:macos"],
    visibility = ["PUBLIC"],
)
