load("@root//defs:package_defs.bzl", "download_source", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "pdns-recursor",
    version = "5.0.2",
    src_uri = "https://downloads.powerdns.com/releases/pdns-recursor-5.0.2.tar.bz2",
    sha256 = "a90e8b61fdc181b596144c35920118ca71c3b95f46658cce7e8222750de45ca9",
    signature_sha256 = "b9444894682b941186912b10df117371182f9d248563644a4cfb94d61ba30ce9",
    signature_required=False,

    iuse = [
        "debug",
        "dns-over-tls",
        "dnstap",
        "lua",
        "snmp",
        "sodium",
        "ssl",
        "systemd",
        "valgrind",
    ],
    use_defaults = ["ssl", "dnstap", "lua", "sodium"],

    use_deps = {
        "ssl": ["//packages/linux/system/libs/crypto/openssl:openssl"],
    },

    use_configure = {
        "-debug": "--disable-debug",
        "-dns-over-tls": "--disable-dns-over-tls",
        "-dnstap": "--disable-dnstap",
        "-lua": "--without-lua",
        "-snmp": "--disable-snmp",
        "-sodium": "--without-libsodium",
        "-ssl": "--disable-dns-over-tls",
        "-systemd": "--disable-systemd",
        "-valgrind": "--disable-valgrind",
        "debug": "--enable-debug",
        "dns-over-tls": "--enable-dns-over-tls",
        "dnstap": "--enable-dnstap",
        "lua": "--with-lua=luajit",
        "snmp": "--enable-snmp",
        "sodium": "--with-libsodium",
        "ssl": "--enable-dns-over-tls",
        "systemd": "--enable-systemd",
        "valgrind": "--enable-valgrind",
    },

    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc/powerdns",
        "--localstatedir=/var",
        "--disable-static",
    ],

    deps = [
        "//packages/linux/core/zlib:zlib",
        "//packages/linux/dev-libs/boost:boost",
    ],

    description = "PowerDNS recursive resolver",
    homepage = "https://www.powerdns.com/recursor.html",
    license = "GPL-2.0-only",
    visibility = ["PUBLIC"],
)
