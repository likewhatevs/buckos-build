load("//defs:package.bzl", "package")

package(
    build_rule = "autotools",
    name = "pdns-recursor",
    version = "5.0.2",
    url = "https://downloads.powerdns.com/releases/pdns-recursor-5.0.2.tar.bz2",
    sha256 = "a90e8b61fdc181b596144c35920118ca71c3b95f46658cce7e8222750de45ca9",

    use_deps = {
        "ssl": "//packages/linux/system/libs/crypto/openssl:openssl",
    },

    use_configure = {
        "debug": ("--enable-debug", "--disable-debug"),
        "dns-over-tls": ("--enable-dns-over-tls", "--disable-dns-over-tls"),
        "dnstap": ("--enable-dnstap", "--disable-dnstap"),
        "lua": ("--with-lua=luajit", "--without-lua"),
        "snmp": ("--enable-snmp", "--disable-snmp"),
        "sodium": ("--with-libsodium", "--without-libsodium"),
        "ssl": ("--enable-dns-over-tls", "--disable-dns-over-tls"),
        "systemd": ("--enable-systemd", "--disable-systemd"),
        "valgrind": ("--enable-valgrind", "--disable-valgrind"),
    },

    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc/powerdns",
        "--localstatedir=/var",
        "--disable-static",
    ],

    deps = [
        "//packages/linux/core/zlib:zlib",
        "//packages/linux/dev-libs/boost:boost",
    ],

    description = "PowerDNS recursive resolver",
    homepage = "https://www.powerdns.com/recursor.html",
    license = "GPL-2.0-only",
)
