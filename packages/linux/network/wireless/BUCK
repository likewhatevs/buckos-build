    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# Wireless monitoring tools
filegroup(
    name = "wireless-monitoring",
    srcs = [
        "network//wireless/wavemon:wavemon",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# Software-defined radio tools
filegroup(
    name = "sdr-tools",
    srcs = [
        "network//wireless/rtl-sdr:rtl-sdr",
    ],
    default_target_platform = "//platforms:linux-target",
