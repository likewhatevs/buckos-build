# Wireless networking tools and utilities
# Includes WiFi, Bluetooth, and software-defined radio tools

# WiFi configuration and authentication tools
filegroup(
    name = "wifi-tools",
    srcs = [
        "network//wireless/wpa-supplicant:wpa-supplicant",
        "network//wireless/hostapd:hostapd",
        "network//wireless/iw:iw",
        "network//wireless/wireless-tools:wireless-tools",
        "network//wireless/wireless-regdb:wireless-regdb",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# Bluetooth protocol stack and utilities
filegroup(
    name = "bluetooth-tools",
    srcs = [
        "network//wireless/bluez:bluez",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# Wireless security and analysis tools
filegroup(
