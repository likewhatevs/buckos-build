)

# All wireless tools combined
filegroup(
    name = "all",
    srcs = [
        ":wifi-tools",
        ":bluetooth-tools",
        ":wireless-security",
        ":wireless-monitoring",
        ":sdr-tools",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
