# Boot loader packages
filegroup(
    name = "all-bootloaders",
    srcs = [
        "boot//grub:grub",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# EFI bootloaders
filegroup(
    name = "efi-bootloaders",
    srcs = [
        "boot//grub:grub",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# BIOS bootloaders
filegroup(
