    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# Cloud Hypervisor firmware
filegroup(
    name = "cloud-hypervisor-firmware",
    srcs = [
        "boot//rust-hypervisor-firmware:rust-hypervisor-firmware",
        "boot//edk2-cloudhv:edk2-cloudhv",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

