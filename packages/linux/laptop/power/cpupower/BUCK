load("//defs:package.bzl", "package")

# cpupower - CPU Frequency Scaling Utilities
# Tools to examine and tune power saving features

# USE flags: See use_flags.bzl for available flags

package(
    name = "cpupower",
    build_rule = "autotools",
    skip_configure = True,
    url = "https://cdn.kernel.org/pub/linux/kernel/v6.x/linux-6.6.8.tar.xz",

