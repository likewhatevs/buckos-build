    use_configure = {
        "nls": ("--enable-nls", "--disable-nls"),
    },
    version = "6.6.8",
    description = "CPU frequency scaling and power policy utilities",
    homepage = "https://kernel.org/",
    license = "GPL-2.0",
    make_args = [
        "-C", "tools/power/cpupower",
        "prefix=/usr",
        "sbindir=/usr/sbin",
        "mandir=/usr/share/man",
        "docdir=/usr/share/doc/cpupower",
        "libdir=/usr/lib",
        "confdir=/etc",
        "DEBUG=false",
        "NLS=false",
        "CPUFREQ_BENCH=false",
    ],
    deps = [
    ],
    visibility = ["PUBLIC"],
)
