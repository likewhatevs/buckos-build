# mtdev - Multitouch Protocol Translation Library
# Transforms all multitouch events to the slotted type B protocol

load("@root//defs:package_defs.bzl", "download_source", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags")

download_source(
    name = "mtdev-src",
    src_uri = "https://bitmath.org/code/mtdev/mtdev-1.1.6.tar.bz2",
    sha256 = "15d7b28da8ac71d8bc8c9287c2045fd174267bc740bec10cfda332dc1204e0e0",
    signature_required = False,
)

# USE flags: See use_flags.bzl for available flags

autotools_package(
    name = "mtdev",
    # Official release tarball includes pre-generated configure script
    bdepend = [],
    src_prepare = "",
    source = ":mtdev-src",
    version = "1.1.6",
    description = "Multitouch Protocol Translation Library",
    homepage = "https://bitmath.org/code/mtdev/",
    license = "MIT",
    configure_args = [
        "--prefix=/usr",
        "--disable-static",
    ],
    deps = [
    ],
    visibility = ["PUBLIC"],
)
