        "-wavpack": "CONFIG_WAVPACK=n",
        "aac": "CONFIG_AAC=y",
        "alsa": "CONFIG_ALSA=y",
        "ao": "--enable-ao",
        "cddb": "--enable-cddb",
        "cdio": "--enable-cdio",
        "debug": "--enable-debug",
        "discid": "--enable-discid",
        "elogind": "--enable-elogind",
        "examples": "--enable-examples",
        "ffmpeg": "CONFIG_FFMPEG=y",
        "flac": "CONFIG_FLAC=y",
        "jack": "--enable-jack",
        "libsamplerate": "--enable-libsamplerate",
        "mad": "--enable-mad",
        "mikmod": "--enable-mikmod",
        "modplug": "--enable-modplug",
        "mp3": "CONFIG_MAD=y",
        "mp4": "--enable-mp4",
        "musepack": "--enable-musepack",
        "opus": "CONFIG_OPUS=y",
        "oss": "--enable-oss",
        "pidgin": "--enable-pidgin",
        "pulseaudio": "CONFIG_PULSE=y",
        "sndio": "--enable-sndio",
        "systemd": "--enable-systemd",
        "tremor": "--enable-tremor",
        "unicode": "--enable-unicode",
        "vorbis": "CONFIG_VORBIS=y",
        "wavpack": "CONFIG_WAVPACK=y",
