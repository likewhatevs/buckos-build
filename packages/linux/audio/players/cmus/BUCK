        "CONFIG_DISCID=n",
        "CONFIG_MPRIS=n",
        "CONFIG_VTX=n",
        "CONFIG_BASS=n",
        "CONFIG_ROAR=n",
    ],
    use_configure = {
        "-aac": "CONFIG_AAC=n",
        "-alsa": "CONFIG_ALSA=n",
        "-ao": "--disable-ao",
        "-cddb": "--disable-cddb",
        "-cdio": "--disable-cdio",
        "-debug": "--disable-debug",
        "-discid": "--disable-discid",
        "-elogind": "--disable-elogind",
        "-examples": "--disable-examples",
        "-ffmpeg": "CONFIG_FFMPEG=n",
        "-flac": "CONFIG_FLAC=n",
        "-jack": "--disable-jack",
