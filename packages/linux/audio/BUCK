# Audio packages - sound servers, players, production tools, libraries, and utilities

# Audio daemons and sound servers
filegroup(
    name = "daemons",
    srcs = [
        "audio//daemons:all-daemons",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# Audio players
filegroup(
    name = "players",
    srcs = [
        "audio//players:all-players",
