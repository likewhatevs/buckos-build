# Audio daemons and sound servers

filegroup(
    name = "alsa-packages",
    srcs = [
        "//packages/linux/system/libs/audio/alsa-lib:alsa-lib",
        "//packages/linux/audio/daemons/alsa-utils:alsa-utils",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "sound-servers",
    srcs = [
        "//packages/linux/audio/daemons/pulseaudio:pulseaudio",
        "//packages/linux/audio/daemons/pipewire:pipewire",
        "//packages/linux/media/audio/jack2:jack2",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "all-daemons",
    srcs = [
        ":alsa-packages",
        ":sound-servers",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)
