load("//defs:package_defs.bzl", "download_source", "binary_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# USE flags for jack2 (waf build system):
# - alsa: ALSA driver support (default: enabled)
# - dbus: D-Bus support for jack_control (default: enabled)
# - readline: Readline support for jack_transport (default: disabled)
# - portaudio: PortAudio driver support (default: disabled)
# - iio: Industrial I/O driver support (default: disabled)
# - samplerate: libsamplerate support (default: disabled)
# - systemd: systemd integration (default: disabled)

download_source(
    name = "jack2-src",
    src_uri = "https://github.com/jackaudio/jack2/archive/refs/tags/v1.9.22.tar.gz",
    sha256 = "1e42b9fc4ad7db7befd414d45ab2f8a159c0b30fcd6eee452be662298766a849",
    signature_required = False,
)

# Jack2 uses waf build system
binary_package(
    name = "jack2",
    srcs = [":jack2-src"],
    version = "1.9.22",
    description = "Multiplatform low-latency audio connection kit",
    homepage = "https://jackaudio.org/",
    license = "GPL-2",
    install_script = """
        cd $SRCS

        # Remove bundled waflib that doesn't support Python 3.12+
        rm -rf waflib

        # Remove the wscript loading of xcode6 (macOS-specific)
        sed -i '/xcode6/d' wscript

        # Download newer waf that supports Python 3.12+
        curl -sL https://waf.io/waf-2.1.2 -o waf
        chmod +x waf

        # Extract the newer waflib from the downloaded waf
        python3 ./waf --help >/dev/null 2>&1 || true

        # Set library path for linking (use LD_LIBRARY_PATH which was set by dep setup)
        if [ -n "$LD_LIBRARY_PATH" ]; then
            export LIBRARY_PATH="$LD_LIBRARY_PATH"
            # Convert LD_LIBRARY_PATH to LDFLAGS -L options
            IFS=':' read -ra LIBDIRS <<< "$LD_LIBRARY_PATH"
            for libdir in "${LIBDIRS[@]}"; do
                export LDFLAGS="${LDFLAGS:+$LDFLAGS }-L$libdir"
            done
        fi
        echo "LIBRARY_PATH=$LIBRARY_PATH"
        echo "LDFLAGS=$LDFLAGS"

        # Configure with waf
        # --classic builds standard jackd without dbus (jackdbus requires expat)
        python3 ./waf configure \
            --prefix=/usr \
            --libdir=/usr/lib64 \
            --alsa=yes \
            --classic \
            --iio=no \
            --portaudio=no \
            --samplerate=no \
            --systemd=no \
            --firewire=no

        # Build
        python3 ./waf build

        # Install
        python3 ./waf install --destdir=$OUT
    """,
    deps = [
        "//packages/linux/audio/daemons/alsa-lib:alsa-lib",
    ],
    visibility = ["PUBLIC"],
)
