load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# screen - Terminal multiplexer with detach capability
# USE flags: pam, multiuser, selinux

autotools_package(
    name = "screen",
    version = "4.9.1",
    src_uri = "https://mirrors.kernel.org/gnu/screen/screen-4.9.1.tar.gz",
    sha256 = "26cef3e3c42571c0d484ad6faf110c5c15091fbf872b06fa7aa4766c7405ac69",
    signature_sha256 = "4c13f278b975b27877d096a3bd2d6bceb3ac0dc4ad89b0f65161040773a0611a",
    signature_required = False,
    description = "GNU screen terminal multiplexer",
    homepage = "https://www.gnu.org/software/screen",
    license = "GPL-3+",
    iuse = [
        "debug",
        "multiuser",
        "nethack",
        "pam",
        "selinux",
        "utempter",
    ],
    use_defaults = [],
    use_deps = {
        "pam": ["//packages/linux/system/security/auth/pam:pam"],
        "selinux": ["//packages/linux/system/security/selinux:selinux"],
    },
    use_configure = {
        "-debug": "--disable-debug",
        "-multiuser": "--disable-socket-dir",
        "-nethack": "--disable-nethack",
        "-pam": "--disable-pam",
        "-selinux": "--disable-selinux",
        "-utempter": "--disable-utempter",
        "debug": "--enable-debug",
        "multiuser": "--enable-socket-dir",
        "nethack": "--enable-nethack",
        "pam": "--enable-pam",
        "selinux": "--enable-selinux",
        "utempter": "--enable-utempter",
    },
    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
    ],
    env = {"CFLAGS": "-std=gnu17 -O2"},
    deps = [
        "//packages/linux/core/ncurses:ncurses",
    ],
    visibility = ["PUBLIC"],
)
