load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# sysklogd - System logging daemons
# USE flags: systemd, logger

autotools_package(
    name = "sysklogd",
    # GitHub releases/download tarball includes pre-generated configure script
    bdepend = [],
    src_prepare = "",
    version = "2.5.2",
    src_uri = "https://github.com/troglobit/sysklogd/releases/download/v2.5.2/sysklogd-2.5.2.tar.gz",
    sha256 = "9da4444285772ce2bfc9c687be8f978b7a9fe7d3937347cd4938eda0c4545e05",
    signature_required = False,
    description = "System logging daemons",
    homepage = "https://github.com/troglobit/sysklogd",
    license = "BSD-3-Clause",
    iuse = ["logger", "logrotate", "systemd"],
    use_defaults = [],
    use_deps = {
        "systemd": ["//packages/linux/system/init/systemd:systemd"],
    },
    use_configure = {
        "-logger": "--disable-logger",
        "-logrotate": "--disable-logrotate",
        "-systemd": "--without-systemd",
        "logger": "--enable-logger",
        "logrotate": "--enable-logrotate",
        "systemd": "--with-systemd",
    },
    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
        "--localstatedir=/var",
    ],
    deps = [
    ],
    visibility = ["PUBLIC"],
)
