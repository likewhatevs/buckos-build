# Hardware utilities - System hardware inspection tools
# Provides utilities for inspecting PCI, USB, DMI/SMBIOS, and general hardware

# Essential hardware inspection tools
filegroup(
    name = "essential",
    srcs = [
        "system//hardware/usbutils:usbutils",
        "system//hardware/dmidecode:dmidecode",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# All hardware inspection tools
filegroup(
    name = "all-hardware",
    srcs = [
        "system//hardware/usbutils:usbutils",
        "system//hardware/lshw:lshw",
        "system//hardware/dmidecode:dmidecode",
        "system//hardware/hwinfo:hwinfo",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# PCI inspection tools
filegroup(
    name = "pci",
