# Security packages for Linux systems
# This directory contains various security-related programs and utilities

# Auditing and monitoring tools
filegroup(
    name = "audit-packages",
    srcs = [
        "//packages/linux/system/security/audit:audit",
        "//packages/linux/system/security/aide:aide",
        "//packages/linux/system/security/lynis:lynis",
        "//packages/linux/system/security/rkhunter:rkhunter",
    ],
    default_target_platform = "//platforms:linux-target",
)

# Authentication and authorization
filegroup(
