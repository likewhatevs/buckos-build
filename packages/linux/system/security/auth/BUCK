        "system//security/auth/mfa:pam-u2f",
        "system//security/auth/mfa:yubico-pam",
        "system//security/auth/mfa:yubikey-manager",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# Network authentication
filegroup(
    name = "network-auth",
    srcs = [
        "system//security/auth/network:pam-radius",
        "system//security/auth/network:pam-tacplus",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

