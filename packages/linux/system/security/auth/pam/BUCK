load("//defs:package_defs.bzl", "download_source", "ebuild_package")
load("//defs:use_flags.bzl", "set_use_flags")

# pam - Pluggable Authentication Modules
ebuild_package(
    name = "pam",
    src_uri = "https://github.com/linux-pam/linux-pam/releases/download/v1.6.1/Linux-PAM-1.6.1.tar.xz",

    sha256 = "f8923c740159052d719dbfc2a2f81942d68dd34fcaf61c706a02c9b80feeef8e",

    signature_sha256 = "ef0e0597974d988c9f25f5a155e001b9dcb972618a4a166b8acefac1f5357303",
    iuse = [
        "audit",
        "berkdb",
        "debug",
        "elogind",
        "examples",
        "nis",
        "nls",
        "selinux",
        "systemd",
    ],
    use_configure = {
        "-audit": "--disable-audit",
        "-berkdb": "--disable-berkdb",
        "-debug": "--disable-debug",
        "-elogind": "--disable-elogind",
        "-examples": "--disable-examples",
        "-nis": "--disable-nis",
        "-nls": "--disable-nls",
        "-selinux": "--disable-selinux",
        "-systemd": "--disable-systemd",
        "audit": "--enable-audit",
        "berkdb": "--enable-berkdb",
        "debug": "--enable-debug",
        "elogind": "--enable-elogind",
        "examples": "--enable-examples",
        "nis": "--enable-nis",
        "nls": "--enable-nls",
        "selinux": "--enable-selinux",
        "systemd": "--enable-systemd",
    },
    version = "1.6.1",
    category = "system/security/auth",
    slot = "0",
    description = "Pluggable Authentication Modules",
    homepage = "https://github.com/linux-pam/linux-pam",
    license = "BSD-3-Clause",

    src_configure = '''
# For cross-compilation: --build is the build machine, --host is the target
BUILD_SYSTEM=$(./build-aux/config.guess 2>/dev/null || echo x86_64-pc-linux-gnu)
HOST_SYSTEM=${CHOST:-$(${CC:-gcc} -dumpmachine)}

./configure \\
    --prefix=/usr \\
    --sysconfdir=/etc \\
    --libdir=/usr/lib \\
    --sbindir=/usr/sbin \\
    --enable-securedir=/lib/security \\
    --disable-nls \\
    --disable-db \\
    --build=$BUILD_SYSTEM \\
    --host=$HOST_SYSTEM
''',

    src_compile = '''
make -j${MAKEOPTS:-$(nproc)}
''',

    src_install = '''
make DESTDIR="$DESTDIR" install

# Remove libtool .la files to prevent host path contamination
# The .la files reference /usr/lib/libpam.la which breaks cross-builds
echo "Removing PAM .la files..."
find "$DESTDIR" -name "*.la" -type f -delete 2>/dev/null || true

# Create system-auth PAM config (required by login, su, and other services)
mkdir -p "$DESTDIR/etc/pam.d"
cat > "$DESTDIR/etc/pam.d/system-auth" << 'SYSTEMAUTH'
#%PAM-1.0
# System authentication configuration

auth      required  pam_env.so
auth      sufficient pam_unix.so try_first_pass nullok
auth      required  pam_deny.so

account   required  pam_unix.so

password  sufficient pam_unix.so try_first_pass nullok sha512 shadow
password  required  pam_deny.so

session   required  pam_limits.so
session   required  pam_unix.so
-session  optional  pam_systemd.so
SYSTEMAUTH

# Fix login PAM config to use system-auth (which includes pam_systemd.so for logind sessions)
cat > "$DESTDIR/etc/pam.d/login" << 'LOGINPAM'
#%PAM-1.0
# Login PAM configuration

auth      optional  pam_securetty.so
auth      include   system-auth

account   optional  pam_nologin.so
account   include   system-auth

password  include   system-auth

session   include   system-auth
session   optional  pam_loginuid.so
LOGINPAM

# Create "other" fallback PAM config
cat > "$DESTDIR/etc/pam.d/other" << 'OTHERPAM'
#%PAM-1.0
# Default fallback for unlisted services

auth      required  pam_unix.so nullok
account   required  pam_unix.so
password  required  pam_unix.so nullok sha512 shadow
session   required  pam_unix.so
OTHERPAM

# Create system-login PAM config (used by display managers like SDDM)
cat > "$DESTDIR/etc/pam.d/system-login" << 'SYSTEMLOGIN'
#%PAM-1.0
# System login configuration for display managers

auth       required   pam_env.so
-auth      optional   pam_faildelay.so delay=2000000
auth       sufficient pam_unix.so try_first_pass nullok
auth       required   pam_deny.so

account    required   pam_unix.so
-account   optional   pam_nologin.so

password   sufficient pam_unix.so try_first_pass nullok sha512 shadow
password   required   pam_deny.so

-session   optional   pam_loginuid.so
-session   optional   pam_keyinit.so force revoke
-session   optional   pam_limits.so
session    required   pam_unix.so
-session   optional   pam_systemd.so
SYSTEMLOGIN

# Create systemd-user PAM config (for user sessions)
cat > "$DESTDIR/etc/pam.d/systemd-user" << 'SYSTEMDUSER'
#%PAM-1.0
# PAM configuration for systemd user sessions

account  required pam_unix.so
session  required pam_unix.so
session  required pam_loginuid.so
SYSTEMDUSER
''',

    depend = [
        "//packages/linux/system/libs/ipc/libtirpc:libtirpc",
        "//packages/linux/system/libs/network/libnsl:libnsl",
        "//packages/linux/system/libs/crypto/libxcrypt:libxcrypt",  # libcrypt.so.2 for password hashing
    ],
    visibility = ["PUBLIC"],
)
