# Firmware packages for Linux kernel drivers
filegroup(
    name = "all-firmware",
    srcs = [
        "system//firmware/linux-firmware:linux-firmware",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# Alias for convenience
alias(
    name = "linux-firmware",
    actual = "system//firmware/linux-firmware:linux-firmware",
    visibility = ["PUBLIC"],
)
