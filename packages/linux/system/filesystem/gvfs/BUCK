        "mtp",
        "nfs",
        "onedrive",
        "policykit",
        "samba",
        "systemd",
        "udev",
        "udisks",
        "zeroconf",
    ],
    use_configure = {
        "-afp": "--disable-afp",
        "-archive": "--disable-archive",
        "-bluray": "--disable-bluray",
        "-cdda": "--disable-cdda",
        "-cdr": "--disable-cdr",
        "-elogind": "--disable-elogind",
        "-fuse": "--disable-fuse",
        "-gnome-online-accounts": "--disable-gnome-online-accounts",
        "-google": "--disable-google",
        "-gphoto2": "--disable-gphoto2",
        "-http": "--disable-http",
        "-ios": "--disable-ios",
        "-keyring": "--disable-keyring",
        "-mtp": "--disable-mtp",
        "-nfs": "--disable-nfs",
        "-onedrive": "--disable-onedrive",
        "-policykit": "--disable-policykit",
        "-samba": "--disable-samba",
        "-systemd": "--disable-systemd",
        "-udev": "--disable-udev",
        "-udisks": "--disable-udisks",
        "-zeroconf": "--disable-zeroconf",
        "afp": "--enable-afp",
        "archive": "--enable-archive",
        "bluray": "--enable-bluray",
        "cdda": "--enable-cdda",
        "cdr": "--enable-cdr",
        "elogind": "--enable-elogind",
        "fuse": "--enable-fuse",
        "gnome-online-accounts": "--enable-gnome-online-accounts",
        "google": "--enable-google",
        "gphoto2": "--enable-gphoto2",
        "http": "--enable-http",
        "ios": "--enable-ios",
        "keyring": "--enable-keyring",
        "mtp": "--enable-mtp",
        "nfs": "--enable-nfs",
        "onedrive": "--enable-onedrive",
        "policykit": "--enable-policykit",
        "samba": "--enable-samba",
        "systemd": "--enable-systemd",
        "udev": "--enable-udev",
        "udisks": "--enable-udisks",
        "zeroconf": "--enable-zeroconf",
    },
    src_uri = "https://download.gnome.org/sources/gvfs/1.54/gvfs-1.54.0.tar.xz",
    sha256 = "f53d81df86c2e86cdd25182c2d8a669a22371e83623ded1b9d5416dcfc6de366",
    signature_required = False,
    description = "GNOME Virtual File System for userspace programs",
    homepage = "https://wiki.gnome.org/Projects/gvfs",
    license = "LGPL-2.0-or-later",
    meson_args = [
        "-Dsystemduserunitdir=/usr/lib/systemd/user",
        "-Dtmpfilesdir=/usr/lib/tmpfiles.d",
        "-Dadmin=false",
        "-Dafc=false",
        "-Dafp=true",
        "-Darchive=true",
        "-Dcdda=false",
        "-Ddnssd=false",
        "-Dgoa=false",
        "-Dgoogle=false",
        "-Dgphoto2=false",
        "-Dhttp=true",
        "-Dmtp=false",
        "-Dnfs=true",
        "-Donedrive=false",
        "-Dsftp=true",
