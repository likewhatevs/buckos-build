# =============================================================================
# GVFS - GNOME Virtual File System
# =============================================================================

meson_package(
    name = "gvfs",
    version = "1.54.0",
    iuse = [
        "afp",
        "archive",
        "bluray",
        "cdda",
        "cdr",
        "elogind",
        "fuse",
        "gnome-online-accounts",
        "google",
        "gphoto2",
