load("//defs:package.bzl", "package")

package(
    name = "squashfs-tools",
    build_rule = "autotools",
    skip_configure = True,
    version = "4.6.1",
    url = "https://github.com/plougher/squashfs-tools/archive/refs/tags/4.6.1.tar.gz",
    sha256 = "9c4974e07c61547dae14af4ed1f358b7d04618ae194e54d6be72ee126f0d2f53",
    description = "Tools for creating and extracting SquashFS filesystems",
    homepage = "https://github.com/plougher/squashfs-tools",
    license = "GPL-2.0",
    # Makefile lives in squashfs-tools/ subdirectory (no top-level Makefile).
    # squashfs uses INSTALL_PREFIX not DESTDIR; we override it via make_args
    # so make install puts binaries into $DESTDIR/usr/bin.
    make_args = ["-C", "squashfs-tools"],
    install_prefix_var = "INSTALL_PREFIX",
    post_install_cmds = [
        # INSTALL_PREFIX is set to the raw prefix dir; relocate into usr/
        "mkdir -p usr/bin usr/share/man/man1",
        "mv bin/* usr/bin/ && rmdir bin",
        "mv man/man1/* usr/share/man/man1/ || true",
        "rm -rf man || true",
    ],
    deps = [
        "//packages/linux/core/zlib:zlib",
        "//packages/linux/system/libs/compression/xz:xz",
        "//packages/linux/system/libs/compression/lzo:lzo",
        "//packages/linux/system/libs/compression/zstd:zstd",
    ],
    visibility = ["PUBLIC"],
)
