        "//packages/linux/system/filesystem/management/hdparm:hdparm",
        "//packages/linux/system/power/nvme-cli:nvme-cli",
        "//packages/linux/system/filesystem/management/smartmontools:smartmontools",
        "//packages/linux/system/filesystem/management/udisks2:udisks2",
        "//packages/linux/system/filesystem/management/quota:quota",
        "//packages/linux/system/filesystem/management/fio:fio",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

