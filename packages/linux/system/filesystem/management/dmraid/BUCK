load("@root//defs:package_defs.bzl", "autotools_package", "download_source", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags")

download_source(
    name = "dmraid-src",
    src_uri = "https://people.redhat.com/~heinzm/sw/dmraid/src/dmraid-1.0.0.rc16-3.tar.bz2",
    sha256 = "93421bd169d71ff5e7d2db95b62b030bfa205a12010b6468dcdef80337d6fbd8",
    signature_required = False,
)

autotools_package(
    name = "dmraid",
    source = ":dmraid-src",
    iuse = [
        "intel-led",
        "led",
        "mini",
        "static",
    ],
    use_configure = {
        "-intel-led": "--disable-intel-led",
        "-led": "--disable-led",
        "-mini": "--disable-mini",
        "-static": "--disable-static",
        "intel-led": "--enable-intel-led",
        "led": "--enable-led",
        "mini": "--enable-mini",
        "static": "--enable-static",
    },
    version = "1.0.0.rc16",
    description = "Device-mapper RAID activation tool for BIOS RAID sets",
    homepage = "https://people.redhat.com/~heinzm/sw/dmraid/",
    license = "GPL-2.0",
    configure_args = [],
    deps = [
        "//packages/linux/system/filesystem/management/lvm2:lvm2",
    ],
    visibility = ["PUBLIC"],
)
