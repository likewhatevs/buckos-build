load("//defs:package_defs.bzl", "autotools_package", "download_source")
load("//defs:use_flags.bzl", "set_use_flags")

download_source(
    name = "gptfdisk-src",
    src_uri = "https://sourceforge.net/projects/gptfdisk/files/gptfdisk/1.0.9/gptfdisk-1.0.9.tar.gz",
    sha256 = "dafead2693faeb8e8b97832b23407f6ed5b3219bc1784f482dd855774e2d50c2",
    signature_required = False,
)

autotools_package(
    name = "gptfdisk",
    source = ":gptfdisk-src",
    iuse = ["ncurses", "static"],
    use_configure = {
        "-ncurses": "--without-ncurses",
        "-static": "--disable-static",
        "ncurses": "--with-ncurses",
        "static": "--enable-static",
    },
    version = "1.0.9",
    description = "GPT partitioning tools (gdisk, sgdisk, cgdisk, fixparts)",
    homepage = "https://www.rodsbooks.com/gdisk/",
    license = "GPL-2.0",
    # gptfdisk uses plain Makefile, no configure script
    src_configure = """
# gptfdisk uses plain Makefile, no configure needed
echo "gptfdisk: Skipping configure (Makefile-only package)"
""",
    src_compile = """
# Build only gdisk and fixparts (don't need sgdisk/cgdisk which require popt/ncurses)
# Or build all if deps are available
make -j${MAKEOPTS:-$(nproc)} gdisk fixparts
""",
    src_install = """
# gptfdisk has no install target, manually install binaries
install -d "$DESTDIR/usr/sbin"
install -m 755 gdisk "$DESTDIR/usr/sbin/"
install -m 755 fixparts "$DESTDIR/usr/sbin/"

# Install man pages
install -d "$DESTDIR/usr/share/man/man8"
install -m 644 gdisk.8 "$DESTDIR/usr/share/man/man8/"
install -m 644 fixparts.8 "$DESTDIR/usr/share/man/man8/"

echo "gptfdisk installed: gdisk, fixparts"
""",
    deps = [
        "//packages/linux/core/util-linux:util-linux",
    ],
    visibility = ["PUBLIC"],
)
