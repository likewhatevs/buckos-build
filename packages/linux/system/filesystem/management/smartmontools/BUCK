load("@root//defs:package_defs.bzl","autotools_package", "download_source")
load("@root//defs:use_flags.bzl", "set_use_flags")

download_source(
    name = "smartmontools-src",
    src_uri = "https://sourceforge.net/projects/smartmontools/files/smartmontools/7.4/smartmontools-7.4.tar.gz",
    sha256 = "e9a61f641ff96ca95319edfb17948cd297d0cd3342736b2c49c99d4716fb993d",
    signature_required = False,
)

autotools_package(
    name = "smartmontools",
    source = ":smartmontools-src",
    iuse = [
        "caps",
        "daemon",
        "selinux",
        "static",
        "systemd",
        "update-drivedb",
    ],
    use_configure = {
        "-caps": "--disable-libcap",
        "-daemon": "--disable-daemon",
        "-selinux": "--disable-selinux",
        "-static": "--disable-static",
        "-systemd": "--disable-systemd",
        "-update-drivedb": "--disable-update-drivedb",
        "caps": "--enable-libcap",
        "daemon": "--enable-daemon",
        "selinux": "--enable-selinux",
        "static": "--enable-static",
        "systemd": "--enable-systemd",
        "update-drivedb": "--enable-update-drivedb",
    },
    version = "7.4",
    description = "Tools for monitoring SMART capable hard disks",
    homepage = "https://www.smartmontools.org/",
    license = "GPL-2.0",
    deps = [],
    visibility = ["PUBLIC"],
)
