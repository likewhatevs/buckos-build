# =============================================================================
# Combined Filegroups
# =============================================================================

# Complete filesystem stack - all filesystem tools
filegroup(
    name = "filesystem",
    srcs = [
        ":native",
        ":network",
        ":fuse",
        ":management",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

