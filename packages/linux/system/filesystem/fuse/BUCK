# =============================================================================
# FUSE Filesystem Tools
# =============================================================================
# FUSE (Filesystem in Userspace) framework and FUSE-based filesystem utilities
# for accessing various filesystem types without kernel modules.

# Filegroup for all FUSE filesystem tools
filegroup(
    name = "fuse",
    srcs = [
        "//packages/linux/system/security/encryption:fuse3",
        "//packages/linux/system/filesystem/fuse/ntfs-3g:ntfs-3g",
        "//packages/linux/system/filesystem/fuse/exfat-fuse:exfat-fuse",
        "//packages/linux/system/filesystem/fuse/bindfs:bindfs",
        "//packages/linux/system/filesystem/fuse/unionfs-fuse:unionfs-fuse",
        "//packages/linux/system/filesystem/fuse/archivemount:archivemount",
        "//packages/linux/system/filesystem/fuse/encfs:encfs",
        "//packages/linux/system/filesystem/fuse/gocryptfs:gocryptfs",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# Common FUSE tools
filegroup(
    name = "common",
    srcs = [
        "//packages/linux/system/security/encryption:fuse3",
        "//packages/linux/system/filesystem/fuse/ntfs-3g:ntfs-3g",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# Encrypted FUSE filesystems
filegroup(
    name = "encrypted",
    srcs = [
        "//packages/linux/system/filesystem/fuse/encfs:encfs",
        "//packages/linux/system/filesystem/fuse/gocryptfs:gocryptfs",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)
