load("//defs:package.bzl", "package")

# Container Packages Category
# This directory contains packages for container runtimes, tools, and orchestration

# =============================================================================
# Package Groups
# =============================================================================

# Core container runtime packages
filegroup(
    name = "container-runtime",
    srcs = [
        "//packages/linux/system/containers/runtime:crun",
        "//packages/linux/system/containers/runtime:runc",
        "//packages/linux/system/containers/runtime:conmon",
    ],
    default_target_platform = "//platforms:linux-target",
)

