load("@root//defs:package_defs.bzl", "cmake_package")

cmake_package(
    name = "dynolog",
    version = "0.3.2",
    iuse = ["perf-events"],
    use_cmake = {
        "-perf-events": "-DENABLE_PERF_EVENTS=OFF",
        "perf-events": "-DENABLE_PERF_EVENTS=ON",
    },
    src_uri = "https://github.com/facebookincubator/dynolog/archive/refs/tags/v0.3.2.tar.gz",
    sha256 = "c68091b30ff3abcc157d6472a084e31146ee354a5fa4989957b7b7046c322334",
    description = "Dynolog is a lightweight monitoring daemon for heterogeneous CPU/GPU systems",
    homepage = "https://github.com/facebookincubator/dynolog",
    license = "MIT",
    deps = [
        "dev-libs//logging/glog:glog",
        "dev-libs//misc/gflags:gflags",
        "dev-libs//json/nlohmann-json:nlohmann-json",
        "dev-libs//misc/fmt:fmt",
    ],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TESTS=OFF",
        "-DUSE_PROMETHEUS=OFF",
    ],
    visibility = ["PUBLIC"],
)
