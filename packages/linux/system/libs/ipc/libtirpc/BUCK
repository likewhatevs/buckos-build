load("@root//defs:package_defs.bzl", "download_source", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags")

download_source(
    name = "libtirpc-src",
    src_uri = "https://downloads.sourceforge.net/sourceforge/libtirpc/libtirpc-1.3.7.tar.bz2",
    sha256 = "b47d3ac19d3549e54a05d0019a6c400674da716123858cfdb6d3bdd70a66c702",
    signature_required = False,
)

autotools_package(
    name = "libtirpc",
    # SourceForge release tarball includes pre-generated configure script
    bdepend = [],
    src_prepare = "",
    source = ":libtirpc-src",
    iuse = ["kerberos", "static-libs"],
    use_configure = {
        "-kerberos": "--disable-kerberos",
        "-static-libs": "--disable-static",
        "kerberos": "--enable-kerberos",
        "static-libs": "--enable-static",
    },
    version = "1.3.7",
    description = "Transport Independent RPC library (TI-RPC)",
    homepage = "https://sourceforge.net/projects/libtirpc/",
    license = "BSD-3-Clause",
    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
        "--disable-static",
        "--disable-gssapi",
    ],
    visibility = ["PUBLIC"],
)
