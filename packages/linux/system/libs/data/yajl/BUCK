load("//defs:package_defs.bzl", "cmake_package", "autotools_package")

cmake_package(
    name = "yajl",
    version = "2.1.0",
    src_uri = "https://github.com/lloyd/yajl/archive/refs/tags/2.1.0.tar.gz",
    sha256 = "3fb73364a5a30efe615046d07e6db9d09fd2b41c763c5f7d3bfb121cd5c5ac5a",
    signature_required = False,
    description = "Yet Another JSON Library - A fast streaming JSON parser",
    homepage = "https://lloyd.github.io/yajl/",
    license = "ISC",
    # Patch deprecated CMake patterns before configure
    pre_configure = """
# Disable all subdirectories except src (the library) - they use deprecated CMake patterns
sed -i 's/ADD_SUBDIRECTORY(reformatter)/# disabled/' CMakeLists.txt
sed -i 's/ADD_SUBDIRECTORY(verify)/# disabled/' CMakeLists.txt
sed -i 's/ADD_SUBDIRECTORY(test)/# disabled/' CMakeLists.txt
sed -i 's/ADD_SUBDIRECTORY(example)/# disabled/' CMakeLists.txt
sed -i 's/ADD_SUBDIRECTORY(perf)/# disabled/' CMakeLists.txt
# Update cmake_minimum_required to a modern version
sed -i 's/CMAKE_MINIMUM_REQUIRED(VERSION 2.6)/cmake_minimum_required(VERSION 3.5)/' CMakeLists.txt
""",
    cmake_args = [
        "-DCMAKE_INSTALL_PREFIX=/usr",
        "-DCMAKE_BUILD_TYPE=Release",
        "-Wno-dev",  # Suppress developer warnings
    ],
    visibility = ["PUBLIC"],
)
