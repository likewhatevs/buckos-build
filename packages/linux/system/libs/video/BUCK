# Video Libraries aggregator

filegroup(
    name = "codecs",
    srcs = [
        "//packages/linux/system/libs/video/theora:theora",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "subtitles",
    srcs = [
        "//packages/linux/system/libs/video/libass:libass",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "dvd-support",
    srcs = [
        "//packages/linux/system/libs/video/libdvdcss:libdvdcss",
        "//packages/linux/system/libs/video/libdvdread:libdvdread",
        "//packages/linux/system/libs/video/libdvdnav:libdvdnav",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "bluray-support",
    srcs = [
        "//packages/linux/system/libs/video/libbluray:libbluray",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "disc-support",
    srcs = [
        ":dvd-support",
        ":bluray-support",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "all",
    srcs = [
        ":codecs",
        ":subtitles",
        ":disc-support",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)
