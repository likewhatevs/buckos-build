# 2D Graphics Libraries aggregator

filegroup(
    name = "core-graphics",
    srcs = [
        "system//libs/graphics/pixman:pixman",
        "system//libs/graphics/cairo:cairo",
        "system//libs/graphics/lcms2:lcms2",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "all",
    srcs = [
        ":core-graphics",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)
