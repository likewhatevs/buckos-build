            "//packages/linux/graphics/xorg/libXau:libXau",
            "//packages/linux/graphics/xorg/libXdmcp:libXdmcp",
        ],
    },
    env = {
        "CFLAGS": "-DHAVE_CTIME_R=1",
    },
    configure_args = [
        "-Dfreetype=enabled",
        "-Dfontconfig=enabled",
        "-Dpng=enabled",
        "-Dzlib=enabled",
        "-Dgtk2-utils=disabled",
        "-Dtests=disabled",
        "-Dspectre=disabled",
        "--wrap-mode=nofallback",
    ],
    deps = [
