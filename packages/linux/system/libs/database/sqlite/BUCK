load("//defs:package.bzl", "package")

package(
    build_rule = "autotools",
    name = "sqlite",
    url = "https://www.sqlite.org/2024/sqlite-autoconf-3460100.tar.gz",

    sha256 = "67d3fe6d268e6eaddcae3727fce58fcc8e9c53869bdd07a0c61e38ddf2965071",
    use_configure = {
        "debug": ("--enable-debug", "--disable-debug"),
        "icu": ("--enable-icu", "--disable-icu"),
        "readline": ("--with-readline", "--without-readline"),
        "secure-delete": ("--enable-secure-delete", "--disable-secure-delete"),
        "static-libs": ("--enable-static", "--disable-static"),
        "tcl": ("--enable-tcl", "--disable-tcl"),
        "tools": ("--enable-tools", "--disable-tools"),
    },
    version = "3.46.1",
    description = "SQL database engine library",
    homepage = "https://www.sqlite.org/",
    license = "blessing",
    configure_args = [
        "--disable-static",
        "--enable-fts5",
        "--disable-readline",
    ],
    # Build library only; skip shell CLI to avoid libtool link ordering
    # issues with dep library paths under exec platform builds
    # sqlite's configure generates a Makefile that links the shell against
    # libsqlite3.so from the build dir.  Under exec platform builds the
    # rpath isn't set correctly causing link failures.  LDFLAGS with -L.
    # and the CPPFLAGS feature flags ensure both the library and shell build.
    env = {
        "CPPFLAGS": "-DSQLITE_ENABLE_COLUMN_METADATA=1 -DSQLITE_ENABLE_FTS3=1 -DSQLITE_ENABLE_FTS4=1 -DSQLITE_ENABLE_FTS5=1 -DSQLITE_ENABLE_RTREE=1 -DSQLITE_ENABLE_UNLOCK_NOTIFY=1 -DSQLITE_SECURE_DELETE=1",
    },
    # gawk needed for configure script - system gawk is used since bootstrap gawk
    # links against glibc 2.38 which may not be available on all hosts
    # exec_bdepend = [
    #     "//packages/linux/editors/gawk:gawk",
    # ],
    deps = [
        "//packages/linux/core/zlib:zlib",
        "//packages/linux/system/terminal/readline:readline",
    ],
    visibility = ["PUBLIC"],
)
