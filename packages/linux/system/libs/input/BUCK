# Input Libraries aggregator

filegroup(
    name = "core-input",
    srcs = [
        "system//libs/input/libevdev:libevdev",
        "system//libs/input/mtdev:mtdev",
        "system//libs/input/libinput:libinput",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "keyboard",
    srcs = [
        "system//libs/input/libxkbcommon:libxkbcommon",
        "system//libs/input/libfakekey:libfakekey",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "all",
    srcs = [
        ":core-input",
        ":keyboard",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)
