# Audio Libraries aggregator

filegroup(
    name = "core-codecs",
    srcs = [
        "system//libs/audio/libogg:libogg",
        "system//libs/audio/libvorbis:libvorbis",
        "system//libs/audio/flac:flac",
        "system//libs/audio/opus:opus",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "mp3-support",
    srcs = [
        "system//libs/audio/lame:lame",
        "system//libs/audio/mpg123:mpg123",
        "system//libs/audio/mpg123:libmpg123",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "speech-codecs",
    srcs = [
        "system//libs/audio/speex:speex",
        "system//libs/audio/speex:speexdsp",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "lossless-codecs",
    srcs = [
        "system//libs/audio/flac:flac",
        "system//libs/audio/wavpack:wavpack",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "cd-support",
    srcs = [
        "system//libs/audio/libcdio:libcdio",
        "system//libs/audio/libcdio:libcdio-paranoia",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "audio-io",
    srcs = [
        "system//libs/audio/alsa-lib:alsa-lib",
        "system//libs/audio/libsamplerate:libsamplerate",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "all-codecs",
    srcs = [
        ":core-codecs",
        ":mp3-support",
        ":speech-codecs",
        ":lossless-codecs",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "all",
    srcs = [
        ":all-codecs",
        ":audio-io",
        ":cd-support",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)
