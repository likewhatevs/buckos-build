# Minimal initramfs for QEMU testing
initramfs(
    name = "buckos-initramfs",
    rootfs = ":buckos-rootfs",
    compression = "gz",
    init = "/sbin/init",
    visibility = ["PUBLIC"],
)

# Initramfs with xz compression (smaller but slower)
initramfs(
    name = "buckos-initramfs-xz",
    rootfs = ":buckos-rootfs",
    compression = "xz",
    init = "/sbin/init",
    visibility = ["PUBLIC"],
)

