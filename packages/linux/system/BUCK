        "//packages/linux/system/libs/compression/xz:xz",
        "//packages/linux/system/libs/compression/gzip:gzip",
        "//packages/linux/system/apps/tar:tar",
        # Basic libraries
        "//packages/linux/core/zlib:zlib",
    ],
    visibility = ["PUBLIC"],
)

