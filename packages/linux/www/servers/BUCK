# Web servers, application servers, and reverse proxies

filegroup(
    name = "http-servers",
    srcs = [
        "www//servers/nginx:nginx",
        "www//servers/caddy:caddy",
        "www//servers/lighttpd:lighttpd",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "reverse-proxies",
    srcs = [
        "www//servers/nginx:nginx",
        "www//servers/haproxy:haproxy",
        "www//servers/traefik:traefik",
        "www//servers/caddy:caddy",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "lightweight",
    srcs = [
        "www//servers/caddy:caddy",
        "www//servers/lighttpd:lighttpd",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "proxy-servers",
    srcs = [
        "www//servers/squid:squid",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "all-web-servers",
    srcs = [
        "www//servers/nginx:nginx",
        "www//servers/caddy:caddy",
        "www//servers/lighttpd:lighttpd",
        "www//servers/haproxy:haproxy",
        "www//servers/traefik:traefik",
        "www//servers/squid:squid",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)
