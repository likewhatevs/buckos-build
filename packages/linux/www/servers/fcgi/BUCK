load("//defs:package.bzl", "package")

# FastCGI - Fast Common Gateway Interface library
#
# FastCGI is a language-independent, scalable extension to CGI that provides
# high performance without the limitations of server-specific APIs.
#
# This library provides support for writing FastCGI applications in C/C++.

package(
    build_rule = "autotools",
    name = "fcgi",
    deps = [
        "//packages/linux/dev-tools/build-systems/autoconf:autoconf",
        "//packages/linux/dev-tools/build-systems/automake:automake",
        "//packages/linux/dev-tools/build-systems/libtool:libtool",
    ],
    pre_configure_cmds = ["""
autoreconf -fi
"""],
    version = "2.4.2",
    use_configure = {
        "html": ("--enable-html", "--disable-html"),
    },
    url = "https://github.com/FastCGI-Archives/fcgi2/archive/refs/tags/2.4.2.tar.gz",
    sha256 = "1fe83501edfc3a7ec96bb1e69db3fd5ea1730135bd73ab152186fd0b437013bc",
    description = "Fast Common Gateway Interface library",
    homepage = "https://github.com/FastCGI-Archives/fcgi2",
    license = "Open-Market",
    configure_args = [
        "--prefix=${PREFIX}",
        "--enable-shared",
        "--enable-static",
    ],
    visibility = ["PUBLIC"],
)
