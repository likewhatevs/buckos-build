load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "file",
    # Official release tarball includes pre-generated configure script
    bdepend = [],
    src_prepare = "",
    # Cross-compilation: file needs to run the compiled binary to generate magic.mgc.
    # Build a native file binary first using a separate build, then use it for cross-compilation.
    src_compile = """
# Build a native file binary first for magic generation (using HOST compiler/linker)
NATIVE_BUILD_DIR="${WORKDIR}/native-build"
echo "=== Building native file binary for magic generation ==="

# Clean the source tree to allow VPATH builds
make distclean 2>/dev/null || true

# Create and configure native build directory
mkdir -p "$NATIVE_BUILD_DIR"
cd "$NATIVE_BUILD_DIR"

# Save the original environment
ORIG_PATH="$PATH"
ORIG_LIBRARY_PATH="${LIBRARY_PATH:-}"
ORIG_LD_LIBRARY_PATH="${LD_LIBRARY_PATH:-}"
ORIG_CFLAGS="${CFLAGS:-}"
ORIG_CXXFLAGS="${CXXFLAGS:-}"
ORIG_CPPFLAGS="${CPPFLAGS:-}"
ORIG_LDFLAGS="${LDFLAGS:-}"
ORIG_CC="${CC:-}"
ORIG_CXX="${CXX:-}"

# Completely clean the environment for native build - no bootstrap toolchain paths
export PATH="/usr/bin:/bin:/usr/sbin:/sbin"
export LIBRARY_PATH=""
export LD_LIBRARY_PATH=""
export CFLAGS=""
export CXXFLAGS=""
export CPPFLAGS=""
export LDFLAGS=""
export CC=/usr/bin/gcc
export CXX=/usr/bin/g++
unset C_INCLUDE_PATH CPLUS_INCLUDE_PATH

echo "Native build environment:"
echo "  PATH=$PATH"
echo "  CC=$CC"
echo "  CFLAGS=$CFLAGS"
echo "  CPPFLAGS=$CPPFLAGS"

# Configure native build with HOST compiler/linker and minimal dependencies
LD=/usr/bin/ld AR=/usr/bin/ar RANLIB=/usr/bin/ranlib NM=/usr/bin/nm STRIP=/usr/bin/strip OBJDUMP=/usr/bin/objdump \
    "$S/configure" --disable-shared --disable-bzlib --disable-xzlib --disable-zlib --disable-libseccomp

# Build only the file binary with HOST compiler
# First build magic.h (generated header), then build file
make -j$(nproc) -C src magic.h
make -j$(nproc) -C src file

# Restore original environment
export PATH="$ORIG_PATH"
export LIBRARY_PATH="$ORIG_LIBRARY_PATH"
export LD_LIBRARY_PATH="$ORIG_LD_LIBRARY_PATH"
export CFLAGS="$ORIG_CFLAGS"
export CXXFLAGS="$ORIG_CXXFLAGS"
export CPPFLAGS="$ORIG_CPPFLAGS"
export LDFLAGS="$ORIG_LDFLAGS"
export CC="$ORIG_CC"
export CXX="$ORIG_CXX"

# Verify the native file binary was built and can run
if [ ! -x "$NATIVE_BUILD_DIR/src/file" ]; then
    echo "ERROR: Failed to build native file binary"
    exit 1
fi

# Verify it actually works (links against host glibc)
echo "Testing native file binary:"
ldd "$NATIVE_BUILD_DIR/src/file" || true
"$NATIVE_BUILD_DIR/src/file" --version || {
    echo "ERROR: Native file binary cannot execute (glibc mismatch?)"
    exit 1
}

# Return to source directory and reconfigure for the target
cd "$S"
echo "=== Reconfiguring for target build ==="
# Use EXTRA_ECONF which contains the USE-flag based configure options
./configure --prefix=/usr --libdir=/usr/lib64 ${EXTRA_ECONF:-}

echo "=== Building main file package ==="
make -j${MAKEOPTS:-$(nproc)} FILE_COMPILE="$NATIVE_BUILD_DIR/src/file"
""",
    version = "5.45",
    src_uri = "https://astron.com/pub/file/file-5.45.tar.gz",
    sha256 = "fc97f51029bb0e2c9f4e3bffefdaf678f0e039ee872b9de5c002a6d09c784d82",
    signature_sha256 = "34af47be1584ed99529c21a916444bbce4caf1ca289b241d8e649f7fdd9e3ec6",
    signature_required=False,
    description = "File type identification utility",
    homepage = "https://www.darwinsys.com/file/",
    license = "BSD-2-Clause",

    # USE flags this package supports
    iuse = [
        "bzip2",
        "lzip",
        "lzma",
        "python",
        "seccomp",
        "static-libs",
        "zlib",
        "zstd",
    ],

    # Default USE flags
    use_defaults = ["zlib"],

    # Conditional dependencies
    use_deps = {
        "zlib": ["//packages/linux/core/zlib:zlib"],
        "bzip2": ["//packages/linux/system/libs/compression/bzip2:bzip2"],
        "lzma": ["//packages/linux/system/libs/compression/xz:xz"],
    },

    # Conditional configure arguments
    use_configure = {
        "-bzip2": "--disable-bzlib",
        "-lzip": "--disable-lzip",
        "-lzma": "--disable-xzlib",
        "-python": "--disable-python",
        "-seccomp": "--disable-seccomp",
        "-static-libs": "--disable-static",
        "-zlib": "--disable-zlib",
        "-zstd": "--without-zstd",
        "bzip2": "--enable-bzlib",
        "lzip": "--enable-lzip",
        "lzma": "--enable-xzlib",
        "python": "--enable-python",
        "seccomp": "--enable-seccomp",
        "static-libs": "--enable-static",
        "zlib": "--enable-zlib",
        "zstd": "--with-zstd",
    },

    visibility = ["PUBLIC"],
)
