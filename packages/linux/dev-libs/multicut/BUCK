load("@root//defs:package_defs.bzl", "simple_package")

# multicut - C++ graph algorithms library (multicut and graph components)

simple_package(
    name = "multicut",
    version = "1.11",
    src_uri = "https://github.com/bjoern-andres/graph/archive/refs/tags/v1.11.tar.gz",
    sha256 = "00432f3007b4cb2a8d6f2e021fd5625a79e307d6532971719ca6ab81dd0ae752",
    description = "C++ template library for directed/undirected graphs with constant-time random access",
    homepage = "https://github.com/bjoern-andres/graph",
    license = "BSD-3-Clause",
    deps = [
        "dev-libs//eigen:eigen",
    ],
    build_commands = [
        "mkdir -p ${PREFIX}/include",
        "cp -r include/andres ${PREFIX}/include/",
        "cp -r include/nl-lmp ${PREFIX}/include/",
    ],
    visibility = ["PUBLIC"],
)
