# Digital Signal Processing (DSP) Libraries
# This directory contains signal processing libraries for:
# - Fast Fourier Transforms (FFT)
# - Software-defined radio (SDR)
# - Digital communications
# - Signal analysis and generation

# Re-export all DSP packages for easy access
alias(
    name = "kissfft",
    actual = "dev-libs//dsp/kissfft:kissfft",
    visibility = ["PUBLIC"],
)

alias(
    name = "liquid-dsp",
    actual = "dev-libs//dsp/liquid-dsp:liquid-dsp",
    visibility = ["PUBLIC"],
)

alias(
    name = "gnuradio",
    actual = "dev-libs//dsp/gnuradio:gnuradio",
    visibility = ["PUBLIC"],
)
