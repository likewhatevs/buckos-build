load("//defs:package_defs.bzl", "cmake_package")

# kissfft - Keep It Simple, Stupid Fast Fourier Transform
# A small, simple, and efficient FFT library
cmake_package(
    name = "kissfft",
    version = "131.1.0",
    src_uri = "https://github.com/mborgerding/kissfft/archive/refs/tags/131.1.0.tar.gz",
    sha256 = "76c1aac87ddb7258f34b08a13f0eebf9e53afa299857568346aa5c82bcafaf1a",
    cmake_args = [
        "-DKISSFFT_PKGCONFIG=ON",
        "-DKISSFFT_STATIC=OFF",
        "-DKISSFFT_TEST=OFF",
        "-DKISSFFT_TOOLS=ON",
        "-DKISSFFT_USE_ALLOCA=OFF",
    ],
    iuse = ["openmp", "simd"],
    use_defaults = ["simd"],
    use_options = {
        "openmp": "KISSFFT_OPENMP",
        "simd": "KISSFFT_SIMD",
    },
    description = "Mixed-radix Fast Fourier Transform library in C",
    homepage = "https://github.com/mborgerding/kissfft",
    license = "BSD-3-Clause",
    maintainers = ["buckos"],
    visibility = ["PUBLIC"],
)
