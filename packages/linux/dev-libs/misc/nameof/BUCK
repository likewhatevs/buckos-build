# nameof - Header-only library for obtaining name of variables, types, functions, macros

cmake_package(
    name = "nameof",
    version = "0.10.4",
    src_uri = "https://github.com/Neargye/nameof/archive/refs/tags/v0.10.4.tar.gz",
    sha256 = "b67ed2155a32760067eee0d33c727b9badfd8c12393ebbe3b7ab219b4faa0149",
    description = "Header-only library for obtaining name of variables, types, functions",
    homepage = "https://github.com/Neargye/nameof",
    license = "MIT",
    deps = [],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DNAMEOF_OPT_BUILD_TESTS=OFF",
        "-DNAMEOF_OPT_BUILD_EXAMPLES=OFF",
    ],
    visibility = ["PUBLIC"],
)
