load("@root//defs:package_defs.bzl", "cmake_package")

# Folly - Facebook Open Source Library

cmake_package(
    name = "folly",
    version = "2024.01.01.00",
    src_uri = "https://github.com/facebook/folly/archive/refs/tags/v2024.01.01.00.tar.gz",
    sha256 = "3043ad0bf552ea9d56eb8f824b701cbe72d04f818cbf8bc1052fba038f6ad021",
    description = "Facebook Open Source Library - C++ utilities",
    homepage = "https://github.com/facebook/folly",
    license = "Apache-2.0",
    iuse = [
        "bzip2",
        "io-uring",
        "jemalloc",
        "llvm-libunwind",
        "lz4",
        "snappy",
        "zstd",
    ],
    use_cmake = {
        "-io-uring": "-DENABLE_IO_URING=OFF",
        "-llvm-libunwind": "-DENABLE_LLVM_LIBUNWIND=OFF",
        "io-uring": "-DENABLE_IO_URING=ON",
        "llvm-libunwind": "-DENABLE_LLVM_LIBUNWIND=ON",
    },
    use_defaults = ["jemalloc", "lz4", "zstd"],
    deps = [
        "dev-libs//boost:boost",
        "dev-libs//google/glog:glog",
        "dev-libs//google/gflags:gflags",
        "dev-libs//misc/double-conversion:double-conversion",
        "dev-libs//misc/libevent:libevent",
        "system//libs/crypto/openssl:openssl",
        "dev-libs//misc/fmt:fmt",
        "core//zlib:zlib",
    ],
    use_deps = {
        "jemalloc": ["dev-libs//allocators/jemalloc:jemalloc"],
        "lz4": ["system//libs/compression/lz4:lz4"],
        "zstd": ["system//libs/compression/zstd:zstd"],
        "snappy": ["system//libs/compression/snappy:snappy"],
        "bzip2": ["system//libs/compression/bzip2:bzip2"],
    },
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TESTS=OFF",
        "-DFOLLY_USE_JEMALLOC=ON",
    ],
    visibility = ["PUBLIC"],
)
