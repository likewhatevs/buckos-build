    name = "magic_enum",
    version = "0.9.5",
    use_configure = {
        "examples": ("-DBUILD_EXAMPLES=ON", "-DBUILD_EXAMPLES=OFF"),
    },
    url = "https://github.com/Neargye/magic_enum/archive/refs/tags/v0.9.5.tar.gz",
    sha256 = "44ad80db5a72f5047e01d90e18315751d9ac90c0ab42cbea7a6f9ec66a4cd679",
