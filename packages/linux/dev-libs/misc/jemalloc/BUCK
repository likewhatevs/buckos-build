load("@root//defs:package_defs.bzl", "autotools_package")

# jemalloc - General purpose memory allocator

autotools_package(
    name = "jemalloc",
    # GitHub release tarball includes pre-generated configure script
    bdepend = [],
    src_prepare = "",
    version = "5.3.0",
    src_uri = "https://github.com/jemalloc/jemalloc/releases/download/5.3.0/jemalloc-5.3.0.tar.bz2",
    sha256 = "2db82d1e7119df3e71b7640219b6dfe84789bc0537983c3b7ac4f7189aecfeaa",
    description = "General purpose memory allocator with scalable concurrency support",
    homepage = "https://jemalloc.net/",
    license = "BSD-2-Clause",
    iuse = [
        "debug",
        "lazy-lock",
        "prof",
        "stats",
        "xmalloc",
    ],
    use_defaults = ["stats"],
    deps = [],
    configure_args = [
        "--prefix=${PREFIX}",
        "--enable-shared",
        "--disable-static",
    ],
    use_configure = {
        "-debug": "--disable-debug",
        "-lazy-lock": "--disable-lazy-lock",
        "-prof": "--disable-prof",
        "-stats": "--disable-stats",
        "-xmalloc": "--disable-xmalloc",
        "debug": "--enable-debug",
        "lazy-lock": "--enable-lazy-lock",
        "prof": "--enable-prof",
        "stats": "--enable-stats",
        "xmalloc": "--enable-xmalloc",
    },
    visibility = ["PUBLIC"],
)
