package(
    build_rule = "cmake",
    name = "cpp-subprocess",
    version = "2.0",
    url = "https://github.com/arun11299/cpp-subprocess/archive/4025693decacaceb9420efedbf4967a04cb028e7.tar.gz",
    sha256 = "1e6a9f13cfefcaaf71f94a8969a4509ef0ae8c169413e52cab74b247009568c9",
