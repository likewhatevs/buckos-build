# libuv - Cross-platform asynchronous I/O

cmake_package(
    name = "libuv",
    version = "1.48.0",
    src_uri = "https://github.com/libuv/libuv/archive/refs/tags/v1.48.0.tar.gz",
    sha256 = "8c253adb0f800926a6cbd1c6576abae0bc8eb86a4f891049b72f9e5b7dc58f33",
    description = "Cross-platform asynchronous I/O library",
    homepage = "https://libuv.org/",
    license = "MIT",
    deps = [],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_TESTING=OFF",
        "-DLIBUV_BUILD_SHARED=ON",
    ],
    visibility = ["PUBLIC"],
)
