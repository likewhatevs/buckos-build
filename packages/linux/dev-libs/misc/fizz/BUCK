# Fizz - Facebook's TLS 1.3 implementation

cmake_package(
    name = "fizz",
    version = "2024.01.01.00",
    src_uri = "https://github.com/facebookincubator/fizz/archive/refs/tags/v2024.01.01.00.tar.gz",
    sha256 = "0e4a92ad12805daf32354113efab985d53689fed42c69379371e3f63e2d0b031",
    description = "Facebook's TLS 1.3 implementation",
    homepage = "https://github.com/facebookincubator/fizz",
    license = "BSD-3-Clause",
    deps = [
        "dev-libs//misc/folly:folly",
        "system//libs/crypto/openssl:openssl",
        "dev-libs//boost:boost",
        "dev-libs//google/glog:glog",
        "dev-libs//google/gflags:gflags",
        "dev-libs//misc/libevent:libevent",
        "dev-libs//misc/double-conversion:double-conversion",
        "dev-libs//misc/libsodium:libsodium",
    ],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TESTS=OFF",
    ],
    visibility = ["PUBLIC"],
