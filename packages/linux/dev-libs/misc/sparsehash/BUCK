load("//defs:package.bzl", "package")

# sparsehash - Memory-efficient hash maps and hash sets

package(
    build_rule = "autotools",
    name = "sparsehash",
    deps = [
        "//packages/linux/dev-tools/build-systems/autoconf:autoconf",
        "//packages/linux/dev-tools/build-systems/automake:automake",
        "//packages/linux/dev-tools/build-systems/libtool:libtool",
    ],
    pre_configure_cmds = ["""
autoreconf -fi
"""],
    version = "2.0.4",
    url = "https://github.com/sparsehash/sparsehash/archive/refs/tags/sparsehash-2.0.4.tar.gz",
    sha256 = "8cd1a95827dfd8270927894eb77f62b4087735cbede953884647f16c521c7e58",
    description = "Memory-efficient hash_map and hash_set implementation",
    homepage = "https://github.com/sparsehash/sparsehash",
    license = "BSD-3-Clause",
    configure_args = [
        "--prefix=${PREFIX}",
        "--enable-shared",
        "--disable-static",
    ],
)
