load("@root//defs:package_defs.bzl", "cmake_package")

# LevelDB - A fast key-value storage library from Google

cmake_package(
    name = "leveldb",
    version = "1.23",
    src_uri = "https://github.com/google/leveldb/archive/refs/tags/1.23.tar.gz",
    sha256 = "9a37f8a6174f09bd622bc723b55881dc541cd50747cbd08831c2a82d620f6d76",
    description = "A fast key-value storage library from Google",
    homepage = "https://github.com/google/leveldb",
    license = "BSD-3-Clause",
    iuse = ["snappy", "tcmalloc"],
    use_defaults = ["snappy"],
    deps = [],
    use_deps = {
        "snappy": ["system//libs/compression/snappy:snappy"],
    },
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DLEVELDB_BUILD_TESTS=OFF",
        "-DLEVELDB_BUILD_BENCHMARKS=OFF",
    ],
    visibility = ["PUBLIC"],
)
