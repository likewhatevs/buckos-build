load("@root//defs:package_defs.bzl", "cmake_package", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags", "use_dep")

cmake_package(
    name = "fmt",
    version = "10.2.1",
    src_uri = "https://github.com/fmtlib/fmt/archive/refs/tags/10.2.1.tar.gz",
    sha256 = "1250e4cc58bf06ee631567523f48848dc4596133e163f02615c97f78bab6c811",
    signature_required = False,
    description = "Modern formatting library for C++",
    homepage = "https://fmt.dev/",
    license = "MIT",
    cmake_args = [
        "-DBUILD_SHARED_LIBS=ON",
        "-DFMT_TEST=OFF",
        "-DFMT_DOC=OFF",
    ],
    visibility = ["PUBLIC"],
)
