load("//defs:package_defs.bzl", "cmake_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags", "use_dep")

cmake_package(
    name = "libgit2",
    version = "1.7.2",
    iuse = [
        "examples",
        "gssapi",
        "ssh",
        "threads",
        "trace",
    ],
    use_cmake = {
        "-examples": "-DBUILD_EXAMPLES=OFF",
        "-gssapi": "-DENABLE_GSSAPI=OFF",
        "-ssh": "-DENABLE_SSH=OFF",
        "-threads": "-DENABLE_THREADS=OFF",
        "-trace": "-DENABLE_TRACE=OFF",
        "examples": "-DBUILD_EXAMPLES=ON",
        "gssapi": "-DENABLE_GSSAPI=ON",
        "ssh": "-DENABLE_SSH=ON",
        "threads": "-DENABLE_THREADS=ON",
        "trace": "-DENABLE_TRACE=ON",
    },
    src_uri = "https://github.com/libgit2/libgit2/archive/refs/tags/v1.7.2.tar.gz",
    sha256 = "de384e29d7efc9330c6cdb126ebf88342b5025d920dcb7c645defad85195ea7f",
    signature_required = False,
    description = "Portable, pure C implementation of the Git core methods",
    homepage = "https://libgit2.org/",
    license = "GPL-2.0-only WITH GCC-exception-3.1",
    cmake_args = [
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TESTS=OFF",
        "-DUSE_SSH=ON",
        "-DUSE_HTTPS=OpenSSL",
    ],
    deps = [
        "//packages/linux/system/libs/crypto/openssl:openssl",
        "//packages/linux/system/libs/network/libssh2:libssh2",
        "//packages/linux/core/zlib:zlib",
        "//packages/linux/system/libs/utility/pcre2:pcre2",
    ],
    visibility = ["PUBLIC"],
)
