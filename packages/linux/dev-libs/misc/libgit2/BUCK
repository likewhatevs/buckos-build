load("//defs:package.bzl", "package")

package(
    build_rule = "cmake",
    name = "libgit2",
    version = "1.7.2",
    use_configure = {
        "examples": ("-DBUILD_EXAMPLES=ON", "-DBUILD_EXAMPLES=OFF"),
        "gssapi": ("-DENABLE_GSSAPI=ON", "-DENABLE_GSSAPI=OFF"),
        "ssh": ("-DENABLE_SSH=ON", "-DENABLE_SSH=OFF"),
        "threads": ("-DENABLE_THREADS=ON", "-DENABLE_THREADS=OFF"),
        "trace": ("-DENABLE_TRACE=ON", "-DENABLE_TRACE=OFF"),
    },
    url = "https://github.com/libgit2/libgit2/archive/refs/tags/v1.7.2.tar.gz",
    sha256 = "de384e29d7efc9330c6cdb126ebf88342b5025d920dcb7c645defad85195ea7f",
    description = "Portable, pure C implementation of the Git core methods",
    homepage = "https://libgit2.org/",
    license = "GPL-2.0-only WITH GCC-exception-3.1",
    configure_args = [
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TESTS=OFF",
        "-DUSE_SSH=ON",
        "-DUSE_HTTPS=OpenSSL",
    ],
    deps = [
        "//packages/linux/system/libs/crypto/openssl:openssl",
        "//packages/linux/system/libs/network/libssh2:libssh2",
        "//packages/linux/core/zlib:zlib",
        "//packages/linux/system/libs/utility/pcre2:pcre2",
    ],
)
