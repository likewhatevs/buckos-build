load("//defs:package.bzl", "package")

# SWIG - Simplified Wrapper and Interface Generator
# Uses official release tarball with pre-generated configure script

package(
    build_rule = "autotools",
    name = "swig",
    version = "4.2.0",
    use_configure = {
        "ccache": ("--enable-ccache", "--disable-ccache"),
        "pcre": ("--enable-pcre", "--disable-pcre"),
    },
    url = "https://mirror.buckos.org/s/swig-4.2.0.tar.gz",
    sha256 = "261ca2d7589e260762817b912c075831572b72ff2717942f75b3e51244829c97",
    description = "Simplified Wrapper and Interface Generator",
    homepage = "https://www.swig.org/",
    license = "GPL-3.0",
    deps = [
        "//packages/linux/system/libs/utility/pcre2:pcre2",
                "//packages/linux/dev-tools/build-systems/pkg-config:pkg-config"
    ],
    configure_args = [
        "--prefix=${PREFIX}",
    ],
)
