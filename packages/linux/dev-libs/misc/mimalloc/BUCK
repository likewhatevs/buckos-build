load("//defs:package_defs.bzl", "cmake_package")

# mimalloc - Compact general-purpose allocator

cmake_package(
    name = "mimalloc",
    version = "2.1.2",
    src_uri = "https://github.com/microsoft/mimalloc/archive/refs/tags/v2.1.2.tar.gz",
    sha256 = "2b1bff6f717f9725c70bf8d79e4786da13de8a270059e4ba0bdd262ae7be46eb",
    description = "Compact general purpose allocator with excellent performance",
    homepage = "https://github.com/microsoft/mimalloc",
    license = "MIT",
    iuse = [
        "debug",
        "hardened",
        "secure",
        "valgrind",
    ],
    deps = [],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DMI_BUILD_SHARED=ON",
        "-DMI_BUILD_STATIC=ON",
        "-DMI_BUILD_TESTS=OFF",
    ],
    use_cmake = {
        "-debug": "-DCMAKE_BUILD_TYPE=Release",
        "-hardened": "-DENABLE_HARDENED=OFF",
        "-secure": "-DMI_SECURE=OFF",
        "-valgrind": "-DENABLE_VALGRIND=OFF",
        "debug": "-DCMAKE_BUILD_TYPE=Debug",
        "hardened": "-DENABLE_HARDENED=ON",
        "secure": "-DMI_SECURE=ON",
        "valgrind": "-DENABLE_VALGRIND=ON",
    },
    visibility = ["PUBLIC"],
)
