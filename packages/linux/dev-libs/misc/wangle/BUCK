load("@root//defs:package_defs.bzl", "cmake_package")

# Wangle - Facebook's C++ networking library

cmake_package(
    name = "wangle",
    version = "2024.01.01.00",
    src_uri = "https://github.com/facebook/wangle/archive/refs/tags/v2024.01.01.00.tar.gz",
    sha256 = "b09bae0554aaf0dde7a3ab2171c04f2a48722f8609a622f6b21136b6f2f0e05b",
    description = "Facebook's C++ networking library",
    homepage = "https://github.com/facebook/wangle",
    license = "Apache-2.0",
    deps = [
        "dev-libs//misc/folly:folly",
        "dev-libs//misc/fizz:fizz",
        "system//libs/crypto/openssl:openssl",
        "dev-libs//boost:boost",
        "dev-libs//google/glog:glog",
        "dev-libs//google/gflags:gflags",
        "dev-libs//misc/libevent:libevent",
        "dev-libs//misc/double-conversion:double-conversion",
    ],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TESTS=OFF",
    ],
    visibility = ["PUBLIC"],
)
