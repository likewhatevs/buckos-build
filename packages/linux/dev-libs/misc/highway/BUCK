load("//defs:package_defs.bzl", "cmake_package")

# Highway - Performance-portable SIMD library

cmake_package(
    name = "highway",
    version = "1.0.7",
    iuse = ["cpu_flags_arm_neon"],
    use_cmake = {
        "-cpu_flags_arm_neon": "-DENABLE_CPU_FLAGS_ARM_NEON=OFF",
        "cpu_flags_arm_neon": "-DENABLE_CPU_FLAGS_ARM_NEON=ON",
    },
    src_uri = "https://github.com/google/highway/archive/refs/tags/1.0.7.tar.gz",
    sha256 = "5434488108186c170a5e2fca5e3c9b6ef59a1caa4d520b008a9b8be6b8abe6c5",
    description = "Performance-portable, length-agnostic SIMD with runtime dispatch",
    homepage = "https://github.com/google/highway",
    license = "Apache-2.0",
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DHWY_ENABLE_TESTS=OFF",
        "-DHWY_ENABLE_EXAMPLES=OFF",
    ],
    visibility = ["PUBLIC"],
)
