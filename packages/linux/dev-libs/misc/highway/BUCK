load("//defs:package.bzl", "package")

# Highway - Performance-portable SIMD library

package(
    build_rule = "cmake",
    name = "highway",
    version = "1.0.7",
    use_configure = {
        "cpu_flags_arm_neon": ("-DENABLE_CPU_FLAGS_ARM_NEON=ON", "-DENABLE_CPU_FLAGS_ARM_NEON=OFF"),
    },
    url = "https://github.com/google/highway/archive/refs/tags/1.0.7.tar.gz",
    sha256 = "5434488108186c170a5e2fca5e3c9b6ef59a1caa4d520b008a9b8be6b8abe6c5",
    description = "Performance-portable, length-agnostic SIMD with runtime dispatch",
    homepage = "https://github.com/google/highway",
    license = "Apache-2.0",
    configure_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DHWY_ENABLE_TESTS=OFF",
        "-DHWY_ENABLE_EXAMPLES=OFF",
    ],
)
