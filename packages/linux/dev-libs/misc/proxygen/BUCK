    src_uri = "https://github.com/facebook/proxygen/archive/refs/tags/v2024.01.01.00.tar.gz",
    sha256 = "4d65fc89771fc6be738bcde13442e16cd4f7ebcf4cb70c9888d0d10d7a694d46",
    description = "Facebook's C++ HTTP Libraries",
    homepage = "https://github.com/facebook/proxygen",
    license = "BSD-3-Clause",
    deps = [
        "dev-libs//misc/folly:folly",
        "dev-libs//misc/fizz:fizz",
        "dev-libs//misc/wangle:wangle",
        "dev-libs//misc/mvfst:mvfst",
        "dev-libs//boost:boost",
        "dev-libs//google/glog:glog",
        "dev-libs//google/gflags:gflags",
        "system//libs/crypto/openssl:openssl",
        "core//zlib:zlib",
    ],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TESTS=OFF",
    ],
    visibility = ["PUBLIC"],
