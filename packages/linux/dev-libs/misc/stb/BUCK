load("@root//defs:package_defs.bzl", "simple_package")

# stb - Single-file public domain libraries for C/C++

simple_package(
    name = "stb",
    version = "2024.01",
    src_uri = "https://github.com/nothings/stb/archive/refs/heads/master.tar.gz",
    sha256 = "aa1cd65973cf814b11e5823889cb10650cf25c1badf11a80bbbc23e0c32622ee",
    description = "Single-file public domain libraries for C/C++",
    homepage = "https://github.com/nothings/stb",
    license = "MIT",
    deps = [],
    build_commands = [
        "mkdir -p ${PREFIX}/include/stb",
        "cp *.h ${PREFIX}/include/stb/",
    ],
    visibility = ["PUBLIC"],
)
