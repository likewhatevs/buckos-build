load("//defs:package.bzl", "package")

package(
    build_rule = "binary",
    name = "tree-sitter",
    version = "0.22.6",
    url = "https://github.com/tree-sitter/tree-sitter/archive/refs/tags/v0.22.6.tar.gz",
    sha256 = "e2b687f74358ab6404730b7fb1a1ced7ddb3780202d37595ecd7b20a8f41861f",
    description = "Incremental parsing system for programming tools",
    homepage = "https://tree-sitter.github.io/tree-sitter/",
    license = "MIT",
    install_script = """
        cd $SRCS
        # Build library - use standard make targets
        make PREFIX=/usr libtree-sitter.a libtree-sitter.so
        make PREFIX=/usr DESTDIR=$OUT install
    """,
    visibility = ["PUBLIC"],
)
