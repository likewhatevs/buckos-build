# Gaia-ECS - High-performance Entity Component System framework

package(
    build_rule = "cmake",
    name = "gaia-ecs",
    version = "0.8.7",
    url = "https://github.com/richardbiely/gaia-ecs/archive/refs/tags/v0.8.7.tar.gz",
    sha256 = "97049ea096e730f58f9f97042ea15405950dcaa7cdc7936544f46b1046927691",
    source = "//third-party/gaia-ecs:gaia-ecs",
    description = "High-performance Entity Component System (ECS) framework for modern C++17",
    homepage = "https://github.com/richardbiely/gaia-ecs",
    license = "MIT",
    deps = [],
    configure_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DGAIA_BUILD_UNITTEST=OFF",
        "-DGAIA_BUILD_BENCHMARK=OFF",
        "-DGAIA_BUILD_EXAMPLES=OFF",
        "-DGAIA_DEVMODE=OFF",
        "-DGAIA_ECS_CHUNK_ALLOCATOR=ON",
        "-DGAIA_DISABLE_ASSERTS=OFF",
    ],
    visibility = ["PUBLIC"],
)
