load("//defs:package.bzl", "package")

package(
    build_rule = "binary",
    name = "incbin",
    version = "20231001",
    url = "https://github.com/graphitemaster/incbin/archive/refs/heads/main.tar.gz",
    sha256 = "b396e20e4f859b4a91e8eb5af3d9db8e94630ea79f928db81f5312531cdfef7a",
    description = "Include binary and textual files in C/C++ applications",
    homepage = "https://github.com/graphitemaster/incbin",
    license = "Unlicense",
    install_script = """
        mkdir -p $OUT/usr/include/incbin
        cp $SRCS/incbin.h $OUT/usr/include/incbin/
        cp $SRCS/incbin.h $OUT/usr/include/
    """,
    deps = [],
)
