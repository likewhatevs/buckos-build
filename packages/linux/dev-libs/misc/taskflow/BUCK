# Taskflow - A General-purpose Parallel and Heterogeneous Task Programming System

cmake_package(
    name = "taskflow",
    version = "3.6.0",
    iuse = ["examples"],
    use_cmake = {
        "-examples": "-DBUILD_EXAMPLES=OFF",
        "examples": "-DBUILD_EXAMPLES=ON",
    },
    src_uri = "https://github.com/taskflow/taskflow/archive/refs/tags/v3.6.0.tar.gz",
    sha256 = "5a1cd9cf89f93a97fcace58fd73ed2fc8ee2053bcb43e047acb6bc121c3edf4c",
    description = "A General-purpose Parallel and Heterogeneous Task Programming System",
    homepage = "https://taskflow.github.io/",
    license = "MIT",
    deps = [],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DTF_BUILD_TESTS=OFF",
        "-DTF_BUILD_EXAMPLES=OFF",
        "-DTF_BUILD_BENCHMARKS=OFF",
    ],
    visibility = ["PUBLIC"],
)
