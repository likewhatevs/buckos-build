load("//defs:package.bzl", "package")

package(
    build_rule = "binary",
    name = "croaring",
    version = "0.7.0",
    url = "https://github.com/RoaringBitmap/CRoaring/archive/refs/tags/v0.7.0.tar.gz",
    sha256 = "a2a9033eb44fb958dd19887e69a5934e59ebc56370f5853d3a22f8c64a9da268",
    description = "Roaring bitmaps in C (and C++)",
    homepage = "https://github.com/RoaringBitmap/CRoaring",
    license = "Apache-2.0",
    install_script = """
        cd "$SRCS"
        mkdir -p build && cd build
        cmake .. \
            -DCMAKE_INSTALL_PREFIX=/usr \
            -DCMAKE_INSTALL_LIBDIR=lib64 \
            -DCMAKE_BUILD_TYPE=Release \
            -DCMAKE_POLICY_VERSION_MINIMUM=3.5 \
            -DBUILD_SHARED_LIBS=ON \
            -DROARING_BUILD_STATIC=OFF \
            -DENABLE_ROARING_TESTS=OFF \
            -DROARING_EXCEPTIONS=ON
        make -j${MAKEOPTS:-$(nproc)}
        make install DESTDIR="$OUT"
    """,
    deps = [],
)
