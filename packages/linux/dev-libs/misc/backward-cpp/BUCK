load("@root//defs:package_defs.bzl", "cmake_package")

# backward-cpp - A stack trace pretty printer for C++

cmake_package(
    name = "backward-cpp",
    version = "1.6",
    src_uri = "https://github.com/bombela/backward-cpp/archive/refs/tags/v1.6.tar.gz",
    sha256 = "c654d0923d43f1cea23d086729673498e4741fb2457e806cfaeaea7b20c97c10",
    description = "A stack trace pretty printer for C++",
    homepage = "https://github.com/bombela/backward-cpp",
    license = "MIT",
    iuse = ["dw", "bfd", "dwarf"],
    use_defaults = ["dw"],
    deps = [],
    use_deps = {
        "dw": ["//packages/linux/dev-tools/dev-utils/elfutils:elfutils"],
    },
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBACKWARD_TESTS=OFF",
    ],
    visibility = ["PUBLIC"],
)
