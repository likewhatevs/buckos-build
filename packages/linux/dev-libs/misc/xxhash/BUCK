load("@root//defs:package_defs.bzl", "cmake_package", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags", "use_dep")

# xxhash uses a Makefile build system (cmake is unofficial)
autotools_package(
    name = "xxhash",
    version = "0.8.2",
    src_uri = "https://github.com/Cyan4973/xxHash/archive/refs/tags/v0.8.2.tar.gz",
    sha256 = "baee0c6afd4f03165de7a4e67988d16f0f2b257b51d0e3cb91909302a26a79c4",
    signature_required = False,
    description = "Extremely fast non-cryptographic hash algorithm",
    homepage = "https://cyan4973.github.io/xxHash/",
    license = "BSD-2-Clause",
    src_configure = "true",
    src_compile = """
# Build only specific targets - avoid 'lib' target which includes static library
make -j$(nproc) PREFIX=/usr LIBDIR=/usr/lib libxxhash.so.0.8.2 xxhsum
# Create symlinks
ln -sf libxxhash.so.0.8.2 libxxhash.so.0
ln -sf libxxhash.so.0 libxxhash.so
""",
    src_install = """
# Install only shared library and binary
install -d "$DESTDIR/usr/lib"
install -d "$DESTDIR/usr/include"
install -d "$DESTDIR/usr/bin"
install -m755 libxxhash.so.* "$DESTDIR/usr/lib/"
ln -sf libxxhash.so.0.8.2 "$DESTDIR/usr/lib/libxxhash.so.0"
ln -sf libxxhash.so.0.8.2 "$DESTDIR/usr/lib/libxxhash.so"
install -m644 xxhash.h "$DESTDIR/usr/include/"
install -m755 xxhsum "$DESTDIR/usr/bin/"
""",
    visibility = ["PUBLIC"],
)
