load("//defs:package_defs.bzl", "cmake_package")

# date - Howard Hinnant's date and time library for C++

cmake_package(
    name = "date",
    version = "3.0.1",
    src_uri = "https://github.com/HowardHinnant/date/archive/refs/tags/v3.0.1.tar.gz",
    sha256 = "7a390f200f0ccd207e8cff6757e04817c1a0aec3e327b006b7eb451c57ee3538",
    description = "Howard Hinnant's date and time library for C++",
    homepage = "https://github.com/HowardHinnant/date",
    license = "MIT",
    iuse = ["only-c-locale", "tz"],
    use_defaults = [],
    deps = [],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TZ_LIB=OFF",
        "-DUSE_SYSTEM_TZ_DB=ON",
        "-DENABLE_DATE_TESTING=OFF",
    ],
    use_cmake = {
        "-only-c-locale": "-DENABLE_ONLY_C_LOCALE=OFF",
        "-tz": "-DBUILD_TZ_LIB=OFF",
        "only-c-locale": "-DENABLE_ONLY_C_LOCALE=ON",
        "tz": "-DBUILD_TZ_LIB=ON",
    },
    visibility = ["PUBLIC"],
)
