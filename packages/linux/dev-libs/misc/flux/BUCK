# flux - A C++20 library for sequence-oriented programming

cmake_package(
    name = "flux",
    version = "0.4.0",
    iuse = ["hardened"],
    use_cmake = {
        "-hardened": "-DENABLE_HARDENED=OFF",
        "hardened": "-DENABLE_HARDENED=ON",
    },
    src_uri = "https://github.com/tcbrindle/flux/archive/refs/tags/v0.4.0.tar.gz",
    sha256 = "95e7d9d71c9ee9e89bb24b46ccba77ddfb0a1580630c2faab0b415dacc7c8d56",
    description = "A C++20 library for sequence-oriented programming",
    homepage = "https://github.com/tcbrindle/flux",
    license = "BSL-1.0",
    deps = [],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DFLUX_BUILD_TESTS=OFF",
        "-DFLUX_BUILD_EXAMPLES=OFF",
        "-DFLUX_BUILD_BENCHMARKS=OFF",
    ],
    visibility = ["PUBLIC"],
)
