load("@root//defs:package_defs.bzl", "cmake_package", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags", "use_dep")

cmake_package(
    name = "spdlog",
    version = "1.13.0",
    src_uri = "https://github.com/gabime/spdlog/archive/refs/tags/v1.13.0.tar.gz",
    sha256 = "534f2ee1a4dcbeb22249856edfb2be76a1cf4f708a20b0ac2ed090ee24cfdbc9",
    signature_required = False,
    description = "Fast C++ logging library",
    homepage = "https://github.com/gabime/spdlog",
    license = "MIT",
    cmake_args = [
        "-DBUILD_SHARED_LIBS=ON",
        "-DSPDLOG_BUILD_EXAMPLE=OFF",
        "-DSPDLOG_BUILD_TESTS=OFF",
        "-DSPDLOG_FMT_EXTERNAL=ON",
    ],
    deps = [
        "dev-libs//misc/fmt:fmt",
    ],
    visibility = ["PUBLIC"],
)
