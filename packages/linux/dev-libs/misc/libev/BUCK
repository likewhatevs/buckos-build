load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "use_dep")

autotools_package(
    name = "libev",
    # Release tarball includes pre-generated configure script
    src_uri = "https://dist.schmorp.de/libev/libev-4.33.tar.gz",

    sha256 = "507eb7b8d1015fbec5b935f34ebed15bf346bed04a11ab82b8eee848c4205aea",
    iuse = ["static-libs"],
    use_configure = {
        "-static-libs": "--disable-static",
        "static-libs": "--enable-static",
    },
    version = "4.33",
    description = "High-performance event loop library",
    homepage = "http://software.schmorp.de/pkg/libev.html",
    license = "BSD-2-Clause",
    configure_args = [
        "--disable-static",
    ],
    visibility = ["PUBLIC"],
)
