# parallel-hashmap - A family of header-only, fast hash maps

package(
    build_rule = "cmake",
    name = "parallel-hashmap",
    version = "1.3.11",
    url = "https://github.com/greg7mdp/parallel-hashmap/archive/refs/tags/v1.3.11.tar.gz",
    sha256 = "0515a681bfb24207013786a7737e9d8561302e656689d8a65ea480bbabab460f",
    description = "A family of header-only, very fast and memory-friendly hash maps",
    homepage = "https://github.com/greg7mdp/parallel-hashmap",
    license = "Apache-2.0",
    deps = [],
    configure_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DPHMAP_BUILD_TESTS=OFF",
        "-DPHMAP_BUILD_EXAMPLES=OFF",
    ],
)
