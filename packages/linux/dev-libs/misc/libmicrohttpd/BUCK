load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags", "use_dep")

download_source(
    name = "libmicrohttpd-src",
    src_uri = "https://mirrors.kernel.org/gnu/libmicrohttpd/libmicrohttpd-1.0.1.tar.gz",
    sha256 = "a89e09fc9b4de34dde19f4fcb4faaa1ce10299b9908db1132bbfa1de47882b94",
    signature_sha256 = "f67c9f77ed7cd3b5305623b3b19318e5400369c7a2d8fe685520b8b78d9845a4",
    signature_required = False,
)

autotools_package(
    name = "libmicrohttpd",
    source = ":libmicrohttpd-src",
    iuse = [
        "debug",
        "epoll",
        "eventfd",
        "ssl",
        "static-libs",
        "thread-names",
    ],
    use_configure = {
        "-debug": "--disable-debug",
        "-epoll": "--disable-epoll",
        "-eventfd": "--disable-eventfd",
        "-ssl": "--disable-ssl",
        "-static-libs": "--disable-static",
        "-thread-names": "--disable-thread-names",
        "debug": "--enable-debug",
        "epoll": "--enable-epoll",
        "eventfd": "--enable-eventfd",
        "ssl": "--enable-ssl",
        "static-libs": "--enable-static",
        "thread-names": "--enable-thread-names",
    },
    version = "1.0.1",
    description = "Small C library for embedding HTTP server functionality",
    homepage = "https://www.gnu.org/software/libmicrohttpd/",
    license = "LGPL-2.1+",
    configure_args = [
        "--disable-static",
        "--enable-https",
    ],
    deps = [
        "//packages/linux/system/libs/crypto/gnutls:gnutls",
    ],
    visibility = ["PUBLIC"],
)
