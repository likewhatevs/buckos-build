load("//defs:package.bzl", "package")

package(
    build_rule = "autotools",
    name = "libmicrohttpd",
    url = "https://mirrors.kernel.org/gnu/libmicrohttpd/libmicrohttpd-1.0.1.tar.gz",

    sha256 = "a89e09fc9b4de34dde19f4fcb4faaa1ce10299b9908db1132bbfa1de47882b94",
    use_configure = {
        "debug": ("--enable-debug", "--disable-debug"),
        "epoll": ("--enable-epoll", "--disable-epoll"),
        "eventfd": ("--enable-eventfd", "--disable-eventfd"),
        "ssl": ("--enable-ssl", "--disable-ssl"),
        "static-libs": ("--enable-static", "--disable-static"),
        "thread-names": ("--enable-thread-names", "--disable-thread-names"),
    },
    version = "1.0.1",
    description = "Small C library for embedding HTTP server functionality",
    homepage = "https://www.gnu.org/software/libmicrohttpd/",
    license = "LGPL-2.1+",
    configure_args = [
        "--disable-static",
        "--enable-https",
    ],
    deps = [
        "//packages/linux/system/libs/crypto/gnutls:gnutls",
    ],
)
