load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "use_dep")

autotools_package(
    name = "boehm-gc",
    src_uri = "https://github.com/ivmai/bdwgc/releases/download/v8.2.6/gc-8.2.6.tar.gz",

    sha256 = "b9183fe49d4c44c7327992f626f8eaa1d8b14de140f243edb1c9dcff7719a7fc",
    iuse = [
        "cxx",
        "large",
        "static-libs",
        "threads",
    ],
    use_configure = {
        "-cxx": "--disable-cxx",
        "-large": "--disable-large",
        "-static-libs": "--disable-static",
        "-threads": "--disable-threads",
        "cxx": "--enable-cxx",
        "large": "--enable-large",
        "static-libs": "--enable-static",
        "threads": "--enable-threads",
    },
    version = "8.2.6",
    description = "Conservative garbage collector for C and C++",
    homepage = "https://www.hboehm.info/gc/",
    license = "MIT",
    configure_args = [
        "--disable-static",
        "--enable-cplusplus",
        "--enable-large-config",
    ],
    deps = [
        "//packages/linux/dev-libs/misc/libatomic_ops:libatomic_ops",
    ],
    visibility = ["PUBLIC"],
)
