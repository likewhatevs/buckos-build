load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags", "use_dep")

# gettext - GNU internationalization utilities
download_source(
    name = "gettext-src",
    src_uri = "https://mirrors.kernel.org/gnu/gettext/gettext-0.26.tar.xz",
    sha256 = "d1fb86e260cfe7da6031f94d2e44c0da55903dbae0a2fa0fae78c91ae1b56f00",
    signature_sha256 = "a0c4b074f63dcddf49f430ac9dcc94b78bf47d51d9db60167dea047cb9fc4f1d",
    signature_required = False,
)

autotools_package(
    name = "gettext",
    source = ":gettext-src",
    iuse = [
        "acl",
        "cxx",
        "emacs",
        "git",
        "java",
        "ncurses",
        "nls",
        "openmp",
        "static-libs",
        "xattr",
    ],
    use_configure = {
        "-acl": "--disable-acl",
        "-cxx": "--disable-cxx",
        "-emacs": "--disable-emacs",
        "-git": "--disable-git",
        "-java": "--disable-java",
        "-ncurses": "--without-ncurses",
        "-nls": "--disable-nls",
        "-openmp": "--disable-openmp",
        "-static-libs": "--disable-static",
        "-xattr": "--disable-xattr",
        "acl": "--enable-acl",
        "cxx": "--enable-cxx",
        "emacs": "--enable-emacs",
        "git": "--enable-git",
        "java": "--enable-java",
        "ncurses": "--with-ncurses",
        "nls": "--enable-nls",
        "openmp": "--enable-openmp",
        "static-libs": "--enable-static",
        "xattr": "--enable-xattr",
    },
    version = "0.26",
    description = "GNU internationalization and localization utilities",
    homepage = "https://www.gnu.org/software/gettext",
    license = "GPL-3+",
    configure_args = [
        "--disable-java",
        "--disable-csharp",
        "--disable-openmp",
        "--without-emacs",
        "--disable-selinux",
        # Disable C++ libasprintf - causes stdlib.h not found issue in cross-compilation
        "--disable-cxx",
        "--disable-libasprintf",
    ],
    deps = [
        "//packages/linux/core/ncurses:ncurses",
    ],
    visibility = ["PUBLIC"],
)
