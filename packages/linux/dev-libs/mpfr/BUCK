load("@root//defs:package_defs.bzl", "download_source", "ebuild_package", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags")

# mpfr - Multiple Precision Floating-Point Reliable Library
download_source(
    name = "mpfr-src",
    src_uri = "https://www.mpfr.org/mpfr-4.2.1/mpfr-4.2.1.tar.xz",
    sha256 = "277807353a6726978996945af13e52829e3abd7a9a5b7fb2793894e18f1fcbb2",
    signature_sha256 = "0282b0d59da3546f6175ff6218a43e8779bb31de6dbbc47b708e808ee94d11ff",
    signature_required=False,
)

ebuild_package(
    name = "mpfr",
    source = ":mpfr-src",
    iuse = ["static-libs"],
    use_configure = {
        "-static-libs": "--disable-static",
        "static-libs": "--enable-static",
    },
    version = "4.2.1",
    description = "Multiple-precision floating-point computations library",
    homepage = "https://www.mpfr.org/",
    license = "LGPL-3.0-or-later",
    src_configure = """
./configure --prefix=/usr --enable-shared
""",
    src_compile = """
make
""",
    src_install = """
make install DESTDIR="$DESTDIR"
""",
    rdepend = [
        "//packages/linux/dev-libs/gmp:gmp",
    ],
    visibility = ["PUBLIC"],
)
