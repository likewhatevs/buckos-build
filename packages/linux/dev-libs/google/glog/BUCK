load("//defs:package.bzl", "package")

package(
    build_rule = "cmake",
    name = "glog",
    version = "0.7.0",
    use_configure = {
        "gflags": ("-DENABLE_GFLAGS=ON", "-DENABLE_GFLAGS=OFF"),
        "libunwind": ("-DENABLE_LIBUNWIND=ON", "-DENABLE_LIBUNWIND=OFF"),
        "llvm-libunwind": ("-DENABLE_LLVM_LIBUNWIND=ON", "-DENABLE_LLVM_LIBUNWIND=OFF"),
    },
    url = "https://github.com/google/glog/archive/refs/tags/v0.7.0.tar.gz",
    sha256 = "375106b5976231b92e66879c1a92ce062923b9ae573c42b56ba28b112ee4cc11",
    description = "Google logging library for C++",
    homepage = "https://github.com/google/glog",
    license = "BSD-3-Clause",
    configure_args = [
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TESTING=OFF",
        "-DWITH_GFLAGS=ON",
    ],
    deps = [
        "//packages/linux/dev-libs/google/gflags:gflags",
    ],
)
