load("@root//defs:package_defs.bzl", "download_source", "binary_package")

download_source(
    name = "qat-zstd-plugin-src",
    src_uri = "https://github.com/intel/qat-zstd-plugin/archive/3ef18c7cf122539613c1d956670f744864b8a0bc.tar.gz",
    sha256 = "b7a783bdd115f07e2fd42d1d8cb20c72f255c65cb434d0507df14ba8eda67744",
)

binary_package(
    name = "qat-zstd-plugin",
    srcs = [":qat-zstd-plugin-src"],
    version = "0.0.1",
    description = "Intel QAT ZSTD Plugin - Hardware acceleration for ZSTD compression",
    homepage = "https://github.com/intel/qat-zstd-plugin",
    license = "BSD-3-Clause",
    install_script = """
        cd "$SRCS/src"

        # Build with INTREE flag (no external QAT SDK required, uses system qatlib)
        make CFLAGS="-DINTREE" lib

        # Install library and header
        mkdir -p "$OUT/usr/lib" "$OUT/usr/include"
        cp libqatseqprod.a "$OUT/usr/lib/"
        cp libqatseqprod.so "$OUT/usr/lib/"
        cp qatseqprod.h "$OUT/usr/include/"
    """,
    deps = [
        "dev-libs//compression/zstd:zstd",
    ],
    visibility = ["PUBLIC"],
)
