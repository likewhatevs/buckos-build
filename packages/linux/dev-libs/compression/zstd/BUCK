load("//defs:package_defs.bzl", "cmake_package")

# Zstandard - Fast real-time compression algorithm

cmake_package(
    name = "zstd",
    version = "1.5.5",
    src_uri = "https://github.com/facebook/zstd/releases/download/v1.5.5/zstd-1.5.5.tar.gz",
    sha256 = "9c4396cc829cfae319a6e2615202e82aad41372073482fce286fac78646d3ee4",
    description = "Zstandard - Fast real-time compression algorithm",
    homepage = "https://facebook.github.io/zstd/",
    license = "BSD-3-Clause OR GPL-2.0-only",
    iuse = [
        "cli",
        "lz4",
        "lzma",
        "static-libs",
        "threads",
        "zlib",
    ],
    use_defaults = ["cli", "threads"],
    deps = [],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DZSTD_BUILD_STATIC=OFF",
        "-DZSTD_BUILD_TESTS=OFF",
        "-DZSTD_LEGACY_SUPPORT=ON",
        "-DZSTD_PROGRAMS_LINK_SHARED=ON",
    ],
    use_cmake = {
        "-cli": "-DZSTD_BUILD_PROGRAMS=OFF",
        "-lz4": "-DZSTD_LZ4_SUPPORT=OFF",
        "-lzma": "-DZSTD_LZMA_SUPPORT=OFF",
        "-static-libs": "-DBUILD_STATIC_LIBS=OFF",
        "-threads": "-DZSTD_MULTITHREAD_SUPPORT=OFF",
        "-zlib": "-DENABLE_ZLIB=OFF",
        "cli": "-DZSTD_BUILD_PROGRAMS=ON",
        "lz4": "-DZSTD_LZ4_SUPPORT=ON",
        "lzma": "-DZSTD_LZMA_SUPPORT=ON",
        "static-libs": "-DBUILD_STATIC_LIBS=ON",
        "threads": "-DZSTD_MULTITHREAD_SUPPORT=ON",
        "zlib": "-DENABLE_ZLIB=ON",
    },
    src_subdir = "build/cmake",
    visibility = ["PUBLIC"],
)
