load("//defs:package_defs.bzl", "cmake_package")

cmake_package(
    name = "libdeflate",
    version = "1.25",
    iuse = ["utils"],
    use_cmake = {
        "-utils": "-DENABLE_UTILS=OFF",
        "utils": "-DENABLE_UTILS=ON",
    },
    src_uri = "https://github.com/ebiggers/libdeflate/releases/download/v1.25/libdeflate-1.25.tar.gz",
    sha256 = "fed5cd22f00f30cc4c2e5329f94e2b8a901df9fa45ee255cb70e2b0b42344477",
    cmake_args = [
        "-DLIBDEFLATE_BUILD_STATIC_LIB=ON",
        "-DLIBDEFLATE_BUILD_SHARED_LIB=ON",
        "-DLIBDEFLATE_BUILD_GZIP=OFF",
        "-DLIBDEFLATE_BUILD_TESTS=OFF",
    ],
)
