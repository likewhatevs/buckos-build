load("//defs:package.bzl", "package")

package(
    build_rule = "cmake",
    name = "google-cloud-cpp",
    version = "2.43.0",
    url = "https://github.com/googleapis/google-cloud-cpp/archive/refs/tags/v2.43.0.tar.gz",
    sha256 = "2aea914128db8a550bd926e1e08c155fae1caff8a451e1b644602952dd6d8b5c",
    description = "C++ client libraries for Google Cloud Platform APIs",
    homepage = "https://github.com/googleapis/google-cloud-cpp",
    license = "Apache-2.0",
    deps = [
        "//packages/linux/dev-libs/google/abseil-cpp:abseil-cpp",
        "//packages/linux/dev-libs/crc32c:crc32c",
        "//packages/linux/system/libs/network/curl:curl",
        "//packages/linux/dev-libs/rpc/grpc:grpc",
        "//packages/linux/system/libs/crypto/openssl:openssl",
        "//packages/linux/dev-libs/serialization/protobuf:protobuf",
        "//packages/linux/dev-libs/json/nlohmann-json:nlohmann-json",
    ],
    configure_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TESTING=OFF",
        "-DGOOGLE_CLOUD_CPP_ENABLE_EXAMPLES=OFF",
        "-DGOOGLE_CLOUD_CPP_ENABLE_CCACHE=OFF",
        "-DGOOGLE_CLOUD_CPP_GENERATE_DOXYGEN=OFF",
    ],
)
