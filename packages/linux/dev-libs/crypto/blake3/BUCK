load("@root//defs:package_defs.bzl", "cmake_package")

# BLAKE3 - Fast cryptographic hash function
# BLAKE3 is a cryptographic hash function much faster than MD5, SHA-1, SHA-2, SHA-3, and BLAKE2.
# It is secure, highly parallelizable, capable of verified streaming and incremental updates.

cmake_package(
    name = "blake3",
    version = "1.8.2",
    src_uri = "https://github.com/BLAKE3-team/BLAKE3/archive/1.8.2.tar.gz",
    sha256 = "6b51aefe515969785da02e87befafc7fdc7a065cd3458cf1141f29267749e81f",
    description = "BLAKE3 cryptographic hash function - fast, secure, highly parallelizable",
    homepage = "https://github.com/BLAKE3-team/BLAKE3",
    license = "CC0-1.0 OR Apache-2.0 OR Apache-2.0 WITH LLVM-exception",
    iuse = ["tbb", "static-libs"],
    use_defaults = [],
    deps = [],
    pre_configure = """
        # CMakeLists.txt is in the c/ subdirectory
        cd c
    """,
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
    ],
    use_cmake = {
        "tbb": "-DBLAKE3_USE_TBB=ON",
        "-tbb": "-DBLAKE3_USE_TBB=OFF",
        "static-libs": "-DBUILD_SHARED_LIBS=OFF",
        "-static-libs": "-DBUILD_SHARED_LIBS=ON",
    },
    use_deps = {
        "tbb": ["//packages/linux/dev-libs/misc/tbb:tbb"],
    },
    visibility = ["PUBLIC"],
)
