    name = "picosha2",
    version = "1.0.0",
    src_uri = "https://github.com/okdshin/PicoSHA2/archive/27fcf6979298949e8a462e16d09a0351c18fcaf2.tar.gz",
    sha256 = "18d82bb79c021ccf4ce58125b64691accef54237ba5194462740bacf8b39d8a9",
    signature_required = False,
    description = "Header-only C++ SHA256 hash generator",
    homepage = "https://github.com/okdshin/PicoSHA2",
    license = "MIT",
    src_configure = "true",
    src_compile = "true",
    src_install = """
install -Dm644 picosha2.h "$DESTDIR/usr/include/picosha2.h"
""",
    visibility = ["PUBLIC"],
)
