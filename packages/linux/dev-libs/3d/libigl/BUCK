load("@root//defs:package_defs.bzl", "cmake_package")

cmake_package(
    name = "libigl",
    version = "2.3.0",
    iuse = ["static-libs"],
    use_cmake = {
        "-static-libs": "-DBUILD_STATIC_LIBS=OFF",
        "static-libs": "-DBUILD_STATIC_LIBS=ON",
    },
    src_uri = "https://github.com/libigl/libigl/archive/refs/tags/v2.3.0.tar.gz",
    sha256 = "9d6de3bdb9c1cfc61a0a0616fd96d14ef8465995600328c196fa672ee4579b70",
    description = "Simple C++ geometry processing library",
    homepage = "https://libigl.github.io/",
    license = "MPL-2.0",
    cmake_args = [
        "-DLIBIGL_USE_STATIC_LIBRARY=OFF",
        "-DLIBIGL_BUILD_TESTS=OFF",
        "-DLIBIGL_BUILD_TUTORIALS=OFF",
        "-DLIBIGL_WITH_COMISO=OFF",
        "-DLIBIGL_WITH_EMBREE=OFF",
        "-DLIBIGL_WITH_OPENGL=OFF",
        "-DLIBIGL_WITH_OPENGL_GLFW=OFF",
        "-DLIBIGL_WITH_OPENGL_GLFW_IMGUI=OFF",
        "-DLIBIGL_WITH_PNG=OFF",
        "-DLIBIGL_WITH_TETGEN=OFF",
        "-DLIBIGL_WITH_TRIANGLE=OFF",
        "-DLIBIGL_WITH_PREDICATES=OFF",
        "-DLIBIGL_WITH_XML=OFF",
        "-DLIBIGL_WITH_PYTHON=OFF",
    ],
    deps = [
        "//packages/linux/dev-libs/eigen:eigen",
    ],
    visibility = ["PUBLIC"],
)
