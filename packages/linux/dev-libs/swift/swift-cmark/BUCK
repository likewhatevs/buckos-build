load("//defs:package_defs.bzl", "cmake_package")

cmake_package(
    name = "swift-cmark",
    version = "0.7.1",
    src_uri = "https://github.com/swiftlang/swift-cmark/archive/refs/tags/0.7.1.tar.gz",
    sha256 = "1f446f9de52a4d0031995f2c5a4d197384d53ac4cb479e09ebf3e4984cff9525",
    signature_required = False,
    description = "CommonMark parsing and rendering library with GitHub Flavored Markdown extensions",
    homepage = "https://github.com/swiftlang/swift-cmark",
    license = "BSD-2-Clause",
    cmake_args = [
        "-DCMARK_TESTS=OFF",
        "-DCMARK_STATIC=ON",
        "-DCMARK_SHARED=ON",
    ],
    visibility = ["PUBLIC"],
)
