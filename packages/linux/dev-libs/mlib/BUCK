load("//defs:package_defs.bzl", "simple_package")

# mLib - C++ library for research projects (header-only)

simple_package(
    name = "mlib",
    version = "0.0.1",
    src_uri = "https://github.com/cy94/mlib/archive/eb523a1d80930f13de8e5eccfe915f0ad8a68bac.tar.gz",
    sha256 = "82596f7f7bc59f1b398f9b38c49e46293044edcb562189069d55b5604854edbd",
    description = "C++ template library for research projects",
    homepage = "https://github.com/cy94/mlib",
    license = "MIT",
    deps = [],
    src_configure = "true",
    src_compile = "true",
    src_install = """
mkdir -p "$DESTDIR/usr/include/mLib"
cp -r include/* "$DESTDIR/usr/include/mLib/"
cp -r src/* "$DESTDIR/usr/include/mLib/"
""",
    visibility = ["PUBLIC"],
)
