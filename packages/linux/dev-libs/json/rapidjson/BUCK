load("@root//defs:package_defs.bzl", "cmake_package", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags", "use_dep")

cmake_package(
    name = "rapidjson",
    version = "1.1.0",
    iuse = ["examples"],
    use_cmake = {
        "-examples": "-DBUILD_EXAMPLES=OFF",
        "examples": "-DBUILD_EXAMPLES=ON",
    },
    src_uri = "https://github.com/Tencent/rapidjson/archive/refs/tags/v1.1.0.tar.gz",
    sha256 = "bf7ced29704a1e696fbccf2a2b4ea068e7774fa37f6d7dd4039d0787f8bed98e",
    signature_required = False,
    description = "Fast JSON parser/generator for C++ with SAX/DOM style API",
    homepage = "https://rapidjson.org/",
    license = "MIT",
    cmake_args = [
        "-DRAPIDJSON_BUILD_DOC=OFF",
        "-DRAPIDJSON_BUILD_EXAMPLES=OFF",
        "-DRAPIDJSON_BUILD_TESTS=OFF",
        "-DCMAKE_POLICY_VERSION_MINIMUM=3.5",
    ],
    visibility = ["PUBLIC"],
)
