load("//defs:package_defs.bzl", "cmake_package", "autotools_package")
load("//defs:use_flags.bzl", "use_dep")

cmake_package(
    name = "simdjson",
    version = "3.9.1",
    iuse = ["all-impls", "tools"],
    use_cmake = {
        "-all-impls": "-DENABLE_ALL_IMPLS=OFF",
        "-tools": "-DENABLE_TOOLS=OFF",
        "all-impls": "-DENABLE_ALL_IMPLS=ON",
        "tools": "-DENABLE_TOOLS=ON",
    },
    src_uri = "https://github.com/simdjson/simdjson/archive/refs/tags/v3.9.1.tar.gz",
    sha256 = "a4b6e7cd83176e0ccb107ce38521da40a8df41c2d3c90566f2a0af05b0cd05c4",
    signature_required = False,
    description = "Parsing gigabytes of JSON per second using SIMD instructions",
    homepage = "https://simdjson.org/",
    license = "Apache-2.0",
    cmake_args = [
        "-DSIMDJSON_BUILD_STATIC_LIB=OFF",
        "-DSIMDJSON_ENABLE_THREADS=ON",
    ],
    visibility = ["PUBLIC"],
)
