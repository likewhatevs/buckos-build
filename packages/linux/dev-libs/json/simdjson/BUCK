load("//defs:package.bzl", "package")

package(
    build_rule = "cmake",
    name = "simdjson",
    version = "3.9.1",
    use_configure = {
        "all-impls": ("-DENABLE_ALL_IMPLS=ON", "-DENABLE_ALL_IMPLS=OFF"),
        "tools": ("-DENABLE_TOOLS=ON", "-DENABLE_TOOLS=OFF"),
    },
    url = "https://github.com/simdjson/simdjson/archive/refs/tags/v3.9.1.tar.gz",
    sha256 = "a4b6e7cd83176e0ccb107ce38521da40a8df41c2d3c90566f2a0af05b0cd05c4",
    description = "Parsing gigabytes of JSON per second using SIMD instructions",
    homepage = "https://simdjson.org/",
    license = "Apache-2.0",
    configure_args = [
        "-DSIMDJSON_BUILD_STATIC_LIB=OFF",
        "-DSIMDJSON_ENABLE_THREADS=ON",
    ],
)
