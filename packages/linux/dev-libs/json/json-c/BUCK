    iuse = ["cpu_flags_x86_rdrand", "static-libs", "threads"],
    use_cmake = {
        "-cpu_flags_x86_rdrand": "-DENABLE_CPU_FLAGS_X86_RDRAND=OFF",
        "-static-libs": "-DBUILD_STATIC_LIBS=OFF",
        "-threads": "-DENABLE_THREADS=OFF",
        "cpu_flags_x86_rdrand": "-DENABLE_CPU_FLAGS_X86_RDRAND=ON",
        "static-libs": "-DBUILD_STATIC_LIBS=ON",
        "threads": "-DENABLE_THREADS=ON",
    },
    src_uri = "https://github.com/json-c/json-c/archive/refs/tags/json-c-0.17-20230812.tar.gz",
