load("@root//defs:package_defs.bzl", "cmake_package")

cmake_package(
    name = "libyaml",
    version = "0.2.5",
    iuse = ["static-libs"],
    use_cmake = {
        "-static-libs": "-DBUILD_STATIC_LIBS=OFF",
        "static-libs": "-DBUILD_STATIC_LIBS=ON",
    },
    src_uri = "https://github.com/yaml/libyaml/archive/refs/tags/0.2.5.tar.gz",
    sha256 = "fa240dbf262be053f3898006d502d514936c818e422afdcf33921c63bed9bf2e",
    description = "LibYAML is a YAML 1.1 parser and emitter written in C",
    homepage = "https://github.com/yaml/libyaml",
    license = "MIT",
    deps = [],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TESTING=OFF",
    ],
    visibility = ["PUBLIC"],
)
