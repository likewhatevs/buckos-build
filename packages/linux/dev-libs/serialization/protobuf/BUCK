load("//defs:package_defs.bzl", "cmake_package")

# Protocol Buffers - Google's language-neutral data serialization

cmake_package(
    name = "protobuf",
    version = "25.1",
    src_uri = "https://github.com/protocolbuffers/protobuf/releases/download/v25.1/protobuf-25.1.tar.gz",
    sha256 = "9bd87b8280ef720d3240514f884e56a712f2218f0d693b48050c836028940a42",
    description = "Google's language-neutral, platform-neutral, extensible data serialization format",
    homepage = "https://protobuf.dev/",
    license = "BSD-3-Clause",
    iuse = [
        "conformance",
        "debug",
        "emacs",
        "examples",
        "java",
        "libprotoc",
        "libupb",
        "lite",
        "protobuf",
        "protoc",
        "python",
        "zlib",
    ],
    deps = [
        "//packages/linux/core/zlib:zlib",
        "//packages/linux/dev-libs/google/abseil-cpp:abseil-cpp",
    ],
    use_deps = {
        "python": ["//packages/linux/lang/python:python"],
    },
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-Dprotobuf_BUILD_TESTS=OFF",
        "-Dprotobuf_BUILD_EXAMPLES=OFF",
        "-Dprotobuf_ABSL_PROVIDER=package",
    ],
    use_cmake = {
        "-conformance": "-DENABLE_CONFORMANCE=OFF",
        "-debug": "-DCMAKE_BUILD_TYPE=Release",
        "-emacs": "-DENABLE_EMACS=OFF",
        "-examples": "-DBUILD_EXAMPLES=OFF",
        "-libprotoc": "-DENABLE_LIBPROTOC=OFF",
        "-libupb": "-DENABLE_LIBUPB=OFF",
        "-lite": "-Dprotobuf_BUILD_LIBPROTOC=ON",
        "-protobuf": "-DENABLE_PROTOBUF=OFF",
        "-protoc": "-DENABLE_PROTOC=OFF",
        "-zlib": "-DENABLE_ZLIB=OFF",
        "conformance": "-DENABLE_CONFORMANCE=ON",
        "debug": "-DCMAKE_BUILD_TYPE=Debug",
        "emacs": "-DENABLE_EMACS=ON",
        "examples": "-DBUILD_EXAMPLES=ON",
        "libprotoc": "-DENABLE_LIBPROTOC=ON",
        "libupb": "-DENABLE_LIBUPB=ON",
        "lite": "-Dprotobuf_BUILD_LIBPROTOC=OFF",
        "protobuf": "-DENABLE_PROTOBUF=ON",
        "protoc": "-DENABLE_PROTOC=ON",
        "zlib": "-DENABLE_ZLIB=ON",
    },
    visibility = ["PUBLIC"],
)
