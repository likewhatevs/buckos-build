load("//defs:package.bzl", "package")

# Protocol Buffers - Google's language-neutral data serialization

package(
    build_rule = "cmake",
    name = "protobuf",
    version = "25.1",
    url = "https://github.com/protocolbuffers/protobuf/releases/download/v25.1/protobuf-25.1.tar.gz",
    sha256 = "9bd87b8280ef720d3240514f884e56a712f2218f0d693b48050c836028940a42",
    description = "Google's language-neutral, platform-neutral, extensible data serialization format",
    homepage = "https://protobuf.dev/",
    license = "BSD-3-Clause",
    deps = [
        "//packages/linux/core/zlib:zlib",
        "//packages/linux/dev-libs/google/abseil-cpp:abseil-cpp",
    ],
    use_deps = {
        "python": "//packages/linux/lang/python:python",
    },
    configure_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-Dprotobuf_BUILD_TESTS=OFF",
        "-Dprotobuf_BUILD_EXAMPLES=OFF",
        "-Dprotobuf_ABSL_PROVIDER=package",
    ],
    use_configure = {
        "conformance": ("-DENABLE_CONFORMANCE=ON", "-DENABLE_CONFORMANCE=OFF"),
        "debug": ("-DCMAKE_BUILD_TYPE=Debug", "-DCMAKE_BUILD_TYPE=Release"),
        "emacs": ("-DENABLE_EMACS=ON", "-DENABLE_EMACS=OFF"),
        "examples": ("-DBUILD_EXAMPLES=ON", "-DBUILD_EXAMPLES=OFF"),
        "libprotoc": ("-DENABLE_LIBPROTOC=ON", "-DENABLE_LIBPROTOC=OFF"),
        "libupb": ("-DENABLE_LIBUPB=ON", "-DENABLE_LIBUPB=OFF"),
        "lite": ("-Dprotobuf_BUILD_LIBPROTOC=OFF", "-Dprotobuf_BUILD_LIBPROTOC=ON"),
        "protobuf": ("-DENABLE_PROTOBUF=ON", "-DENABLE_PROTOBUF=OFF"),
        "protoc": ("-DENABLE_PROTOC=ON", "-DENABLE_PROTOC=OFF"),
        "zlib": ("-DENABLE_ZLIB=ON", "-DENABLE_ZLIB=OFF"),
    },
)
