# Cereal - A C++11 header-only serialization library

cmake_package(
    name = "cereal",
    version = "1.3.2",
    src_uri = "https://github.com/USCiLab/cereal/archive/refs/tags/v1.3.2.tar.gz",
    sha256 = "16a7ad9b31ba5880dac55d62b5d6f243c3ebc8d46a3514149e56b5e7ea81f85f",
    description = "A C++11 header-only serialization library",
    homepage = "https://uscilab.github.io/cereal/",
    license = "BSD-3-Clause",
    deps = [],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_DOC=OFF",
        "-DBUILD_SANDBOX=OFF",
        "-DBUILD_TESTS=OFF",
        "-DSKIP_PORTABILITY_TEST=ON",
        "-DSKIP_PERFORMANCE_COMPARISON=ON",
        "-DWITH_WERROR=OFF",
    ],
    visibility = ["PUBLIC"],
)
