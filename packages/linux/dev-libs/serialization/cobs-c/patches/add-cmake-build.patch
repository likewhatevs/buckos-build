+# CMakeLists.txt for cobs-c
+# Consistent Overhead Byte Stuffing (COBS) encoding library
+
+cmake_minimum_required(VERSION 3.10)
+project(cobs-c VERSION 1.0.0 LANGUAGES C)
+
+# Set C standard
+set(CMAKE_C_STANDARD 99)
+set(CMAKE_C_STANDARD_REQUIRED ON)
+
+# Options
+option(BUILD_SHARED_LIBS "Build shared libraries" ON)
+option(BUILD_TESTS "Build test programs" OFF)
+
+# Create cobs library
+add_library(cobs cobs.c)
+
+target_include_directories(cobs PUBLIC
+    $<BUILD_INTERFACE:${CMAKE_CURRENT_SOURCE_DIR}>
+    $<INSTALL_INTERFACE:include/cobs>
+)
+
+set_target_properties(cobs PROPERTIES
+    VERSION 1.0.0
+    SOVERSION 1
+    PUBLIC_HEADER cobs.h
+)
+
+# Create cobsr library (COBS/R variant)
+add_library(cobsr cobsr.c)
+
+target_include_directories(cobsr PUBLIC
+    $<BUILD_INTERFACE:${CMAKE_CURRENT_SOURCE_DIR}>
+    $<INSTALL_INTERFACE:include/cobs>
+)
+
+set_target_properties(cobsr PROPERTIES
+    VERSION 1.0.0
+    SOVERSION 1
+    PUBLIC_HEADER cobsr.h
+)
+
+# Install libraries
+install(TARGETS cobs cobsr
+    EXPORT cobs-targets
+    LIBRARY DESTINATION lib
+    ARCHIVE DESTINATION lib
+    RUNTIME DESTINATION bin
+    PUBLIC_HEADER DESTINATION include/cobs
+)
+
+# Install additional headers
+install(FILES cobs.h cobsr.h
+    DESTINATION include/cobs
+)
