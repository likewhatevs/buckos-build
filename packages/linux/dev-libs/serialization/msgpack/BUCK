load("@root//defs:package_defs.bzl", "cmake_package")

# MessagePack - Efficient binary serialization format

cmake_package(
    name = "msgpack",
    version = "6.1.0",
    iuse = ["examples"],
    use_cmake = {
        "-examples": "-DBUILD_EXAMPLES=OFF",
        "examples": "-DBUILD_EXAMPLES=ON",
    },
    src_uri = "https://github.com/msgpack/msgpack-c/releases/download/cpp-6.1.0/msgpack-cxx-6.1.0.tar.gz",
    sha256 = "23ede7e93c8efee343ad8c6514c28f3708207e5106af3b3e4969b3a9ed7039e7",
    description = "Efficient binary serialization format like JSON but smaller",
    homepage = "https://msgpack.org/",
    license = "BSL-1.0",
    deps = [
        "dev-libs//boost:boost",
    ],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DMSGPACK_BUILD_TESTS=OFF",
        "-DMSGPACK_BUILD_EXAMPLES=OFF",
        "-DMSGPACK_USE_BOOST=ON",
    ],
    visibility = ["PUBLIC"],
)
