    deps = [
        "dev-libs//compression/lz4:lz4",
        "dev-libs//compression/zstd:zstd",
    ],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DMCAP_BUILD_TESTS=OFF",
        "-DMCAP_BUILD_EXAMPLES=OFF",
    ],
    visibility = ["PUBLIC"],
)
