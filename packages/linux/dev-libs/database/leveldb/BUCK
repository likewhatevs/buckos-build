load("//defs:package.bzl", "package")

package(
    build_rule = "cmake",
    name = "leveldb",
    version = "1.23",
    use_configure = {
        "snappy": ("-DENABLE_SNAPPY=ON", "-DENABLE_SNAPPY=OFF"),
        "tcmalloc": ("-DENABLE_TCMALLOC=ON", "-DENABLE_TCMALLOC=OFF"),
    },
    url = "https://github.com/google/leveldb/archive/refs/tags/1.23.tar.gz",
    sha256 = "9a37f8a6174f09bd622bc723b55881dc541cd50747cbd08831c2a82d620f6d76",
    description = "Fast key-value storage library",
    homepage = "https://github.com/google/leveldb",
    license = "BSD-3-Clause",
    configure_args = [
        "-DBUILD_SHARED_LIBS=ON",
        "-DLEVELDB_BUILD_TESTS=OFF",
        "-DLEVELDB_BUILD_BENCHMARKS=OFF",
    ],
    deps = [
        "//packages/linux/system/libs/compression/snappy:snappy",
    ],
)
