load("//defs:package.bzl", "package")

package(
    build_rule = "cmake",
    name = "mimalloc",
    version = "2.1.2",
    use_configure = {
        "debug": ("-DCMAKE_BUILD_TYPE=Debug", "-DCMAKE_BUILD_TYPE=Release"),
        "hardened": ("-DENABLE_HARDENED=ON", "-DENABLE_HARDENED=OFF"),
        "valgrind": ("-DENABLE_VALGRIND=ON", "-DENABLE_VALGRIND=OFF"),
    },
    url = "https://github.com/microsoft/mimalloc/archive/refs/tags/v2.1.2.tar.gz",
    sha256 = "2b1bff6f717f9725c70bf8d79e4786da13de8a270059e4ba0bdd262ae7be46eb",
    description = "Microsoft's compact general purpose allocator with excellent performance",
    homepage = "https://github.com/microsoft/mimalloc",
    license = "MIT",
    configure_args = [
        "-DMI_BUILD_STATIC=OFF",
        "-DMI_BUILD_TESTS=OFF",
    ],
)
