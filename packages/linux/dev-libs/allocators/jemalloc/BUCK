load("//defs:package_defs.bzl", "download_source", "autotools_package")

autotools_package(
    name = "jemalloc",
    version = "5.3.0",
    src_uri = "https://github.com/jemalloc/jemalloc/releases/download/5.3.0/jemalloc-5.3.0.tar.bz2",
    sha256 = "2db82d1e7119df3e71b7640219b6dfe84789bc0537983c3b7ac4f7189aecfeaa",
    signature_required = False,
    description = "General-purpose scalable concurrent malloc implementation",
    homepage = "https://jemalloc.net/",
    license = "BSD-2-Clause",

    iuse = [
        "debug",
        "lazy-lock",
        "prof",
        "static-libs",
        "stats",
        "xmalloc",
    ],
    use_defaults = ["prof"],
    use_configure = {
        "-debug": "--disable-debug",
        "-lazy-lock": "--disable-lazy-lock",
        "-prof": "--disable-prof",
        "-static-libs": "--disable-static",
        "-stats": "--disable-stats",
        "-xmalloc": "--disable-xmalloc",
        "debug": "--enable-debug",
        "lazy-lock": "--enable-lazy-lock",
        "prof": "--enable-prof",
        "static-libs": "--enable-static",
        "stats": "--enable-stats",
        "xmalloc": "--enable-xmalloc",
    },

    visibility = ["PUBLIC"],
)
