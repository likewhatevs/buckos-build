load("@root//defs:package_defs.bzl", "cmake_package")

cmake_package(
    name = "libigl-python",
    version = "2.2.1",
    src_uri = "https://github.com/libigl/libigl-python-bindings/archive/refs/tags/2.2.1.tar.gz",
    sha256 = "6bf6483a493783aba029a2ff28fcca7cf11d9dbaa3fb2b8921683c8317757b47",
    description = "Python bindings for libigl geometry processing library",
    homepage = "https://libigl.github.io/libigl-python-bindings/",
    license = "MIT",
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DPY_IGL_PYTHON_TESTS=OFF",
    ],
    deps = [
        "dev-libs//3d/libigl:libigl",
        "dev-libs//eigen:eigen",
        "dev-libs//python/numpyeigen:numpyeigen",
        "dev-libs//python/pybind11:pybind11",
        "lang//python:python",
    ],
    visibility = ["PUBLIC"],
)
