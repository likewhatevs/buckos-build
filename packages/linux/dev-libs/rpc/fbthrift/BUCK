load("@root//defs:package_defs.bzl", "cmake_package")

# fbthrift - Facebook's branch of Apache Thrift

cmake_package(
    name = "fbthrift",
    version = "2024.01.01.00",
    iuse = ["io-uring"],
    use_cmake = {
        "-io-uring": "-DENABLE_IO_URING=OFF",
        "io-uring": "-DENABLE_IO_URING=ON",
    },
    src_uri = "https://github.com/facebook/fbthrift/archive/refs/tags/v2024.01.01.00.tar.gz",
    sha256 = "7a80b83a54b750055433e0c7342288a4469ff072b4eb7a4cec8e72790bc75e75",
    description = "Facebook's branch of Apache Thrift",
    homepage = "https://github.com/facebook/fbthrift",
    license = "Apache-2.0",
    deps = [
        "dev-libs//misc/folly:folly",
        "dev-libs//misc/fizz:fizz",
        "dev-libs//misc/wangle:wangle",
        "system//libs/crypto/openssl:openssl",
        "dev-libs//boost:boost",
        "dev-libs//google/glog:glog",
        "dev-libs//google/gflags:gflags",
        "dev-libs//misc/fmt:fmt",
        "core//zlib:zlib",
    ],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-Dthriftpy=OFF",
        "-Dthriftpy3=OFF",
    ],
    visibility = ["PUBLIC"],
)
