load("@root//defs:package_defs.bzl", "autotools_package")

# libtar - C library for manipulating POSIX tar files

autotools_package(
    name = "libtar",
    bdepend = [
        "dev-tools//build-systems/autoconf:autoconf",
        "dev-tools//build-systems/automake:automake",
        "dev-tools//build-systems/libtool:libtool",
    ],
    src_prepare = """
autoreconf -fi
""",
    version = "1.2.20",
    src_uri = "https://github.com/tklauser/libtar/archive/refs/tags/v1.2.20.tar.gz",
    sha256 = "3152fc61cf03c82efbf99645596efdadba297eac3e85a52ae189902a072c9a16",
    description = "C library for manipulating POSIX tar files",
    homepage = "https://github.com/tklauser/libtar",
    license = "BSD-3-Clause",
    iuse = ["zlib"],
    use_defaults = ["zlib"],
    deps = [
        "core//zlib:zlib",
    ],
    configure_args = [
        "--enable-shared",
        "--disable-static",
    ],
    use_configure = {
        "zlib": "--with-zlib",
        "-zlib": "--without-zlib",
    },
    visibility = ["PUBLIC"],
)
