load("//defs:package.bzl", "package")

# Bullet Physics SDK - Real-time collision detection and multi-physics simulation

package(
    build_rule = "cmake",
    name = "bullet3",
    version = "3.25",
    url = "https://github.com/bulletphysics/bullet3/archive/refs/tags/3.25.tar.gz",
    sha256 = "c45afb6399e3f68036ddb641c6bf6f552bf332d5ab6be62f7e6c54eda05ceb77",
    description = "Real-time collision detection and multi-physics simulation library",
    homepage = "https://pybullet.org/",
    license = "Zlib",
    deps = [],
    configure_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DUSE_DOUBLE_PRECISION=OFF",
        "-DBUILD_CPU_DEMOS=OFF",
        "-DBUILD_OPENGL3_DEMOS=OFF",
        "-DBUILD_BULLET2_DEMOS=OFF",
        "-DBUILD_EXTRAS=OFF",
        "-DBUILD_UNIT_TESTS=OFF",
        "-DUSE_GRAPHICAL_BENCHMARK=OFF",
        "-DINSTALL_LIBS=ON",
        "-DINSTALL_CMAKE_FILES=ON",
    ],
    use_configure = {
        "double-precision": ("-DUSE_DOUBLE_PRECISION=ON", "-DUSE_DOUBLE_PRECISION=OFF"),
        "extras": ("-DBUILD_EXTRAS=ON", "-DBUILD_EXTRAS=OFF"),
        "opengl": ("-DBUILD_OPENGL3_DEMOS=ON", "-DBUILD_OPENGL3_DEMOS=OFF"),
    },
)
