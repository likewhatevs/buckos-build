load("//defs:package_defs.bzl", "download_source", "ebuild_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# gmp - GNU Multiple Precision Arithmetic Library
download_source(
    name = "gmp-src",
    src_uri = "https://gmplib.org/download/gmp/gmp-6.3.0.tar.xz",
    sha256 = "a3c2b80201b89e68616f4ad30bc66aee4927c3ce50e33929ca819d5c43538898",
    signature_sha256 = "94def8c1a731854de684689126046ec93589147abd4cd0025f12d741d323aa82",
)

ebuild_package(
    name = "gmp",
    source = ":gmp-src",
    iuse = [
        "asm",
        "cpudetection",
        "cxx",
        "pic",
        "static-libs",
    ],
    use_configure = {
        "-asm": "--disable-asm",
        "-cpudetection": "--disable-cpudetection",
        "-cxx": "--disable-cxx",
        "-pic": "--disable-pic",
        "-static-libs": "--disable-static",
        "asm": "--enable-asm",
        "cpudetection": "--enable-cpudetection",
        "cxx": "--enable-cxx",
        "pic": "--enable-pic",
        "static-libs": "--enable-static",
    },
    version = "6.3.0",
    description = "GNU Multiple Precision Arithmetic Library",
    homepage = "https://gmplib.org/",
    license = "LGPL-3.0-or-later OR GPL-2.0-or-later",
    src_configure = """
# Use -std=gnu17 to avoid C23 K&R function declaration issues in GMP's configure tests
# (GCC 14+ defaults to C23 which treats void g(){} as "no parameters")
./configure --prefix=/usr --enable-cxx --enable-shared \
    CFLAGS="-O2 -fomit-frame-pointer -std=gnu17" \
    CXXFLAGS="-O2 -fomit-frame-pointer"
""",
    src_compile = """
make
""",
    src_install = """
make install DESTDIR="$DESTDIR"
""",
    visibility = ["PUBLIC"],
)
