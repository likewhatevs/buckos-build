load("//defs:package_defs.bzl", "simple_package")

simple_package(
    name = "neon2sse",
    version = "2020.10",
    src_uri = "https://github.com/intel/ARM_NEON_2_x86_SSE/archive/refs/heads/master.tar.gz",
    sha256 = "634abac63d22fd9554d49c27ef1b82a92f5b9261019557da13972093ba9d58d9",
    description = "Header-only library to translate ARM NEON intrinsics to x86 SSE",
    homepage = "https://github.com/intel/ARM_NEON_2_x86_SSE",
    license = "BSD-2-Clause",
    deps = [],
    build_commands = [
        "mkdir -p ${PREFIX}/include",
        "cp NEON_2_SSE.h ${PREFIX}/include/",
    ],
    visibility = ["PUBLIC"],
)
