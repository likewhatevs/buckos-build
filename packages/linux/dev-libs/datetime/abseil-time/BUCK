    deps = [],
    configure_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_TESTING=OFF",
        "-DABSL_PROPAGATE_CXX_STD=ON",
        "-DABSL_ENABLE_INSTALL=ON",
        "-DCMAKE_CXX_STANDARD=17",
        "-DABSL_BUILD_TESTING=OFF",
    ],
)
