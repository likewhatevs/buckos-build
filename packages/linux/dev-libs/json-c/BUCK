    license = "MIT",
    configure_args = [
        "-DBUILD_APPS=OFF",
        "-DDISABLE_EXTRA_LIBS=ON",
        "-DDISABLE_WERROR=ON",
        "-DBUILD_TESTING=OFF",
    ],
    use_configure = {
        "static-libs": ("-DBUILD_STATIC_LIBS=ON", "-DBUILD_STATIC_LIBS=OFF"),
        "threads": ("-DENABLE_THREADING=ON", "-DENABLE_THREADING=OFF"),
    },
    deps = [],
)
