load("//defs:package_defs.bzl", "autotools_package")

autotools_package(
    name = "systemc",
    bdepend = [
        "//packages/linux/dev-tools/build-systems/autoconf:autoconf",
        "//packages/linux/dev-tools/build-systems/automake:automake",
        "//packages/linux/dev-tools/build-systems/libtool:libtool",
        "//packages/linux/dev-libs/misc/gettext:gettext",
    ],
    src_prepare = """
autoreconf -fi
""",
    version = "3.0.1",
    iuse = ["debug", "examples", "static-libs"],
    use_configure = {
        "-debug": "--disable-debug",
        "-examples": "--disable-examples",
        "-static-libs": "--disable-static",
        "debug": "--enable-debug",
        "examples": "--enable-examples",
        "static-libs": "--enable-static",
    },
    src_uri = "https://github.com/accellera-official/systemc/archive/refs/tags/3.0.1.tar.gz",
    sha256 = "d07765d0d2ffd6c01767880d0c6aaf53cd9487975f898c593ffffd713258fcbb",
    configure_args = [
        "--enable-debug",
        "--disable-optimize",
        "CXXFLAGS=-std=c++20",
    ],
)
