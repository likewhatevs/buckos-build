load("@root//defs:package_defs.bzl", "download_source", "binary_package")

download_source(
    name = "apache-arrow-src",
    src_uri = "https://github.com/apache/arrow/archive/refs/tags/apache-arrow-17.0.0.tar.gz",
    sha256 = "8379554d89f19f2c8db63620721cabade62541f47a4e706dfb0a401f05a713ef",
    signature_required = False,
)

binary_package(
    name = "apache-arrow",
    srcs = [":apache-arrow-src"],
    version = "17.0.0",
    description = "Apache Arrow - columnar in-memory analytics",
    homepage = "https://arrow.apache.org/",
    license = "Apache-2.0",
    install_script = """
        cd "$SRCS/cpp"
        mkdir -p build && cd build
        cmake .. \
            -DCMAKE_INSTALL_PREFIX=/usr \
            -DCMAKE_INSTALL_LIBDIR=lib64 \
            -DCMAKE_BUILD_TYPE=Release \
            -DARROW_BUILD_SHARED=ON \
            -DARROW_BUILD_STATIC=OFF \
            -DARROW_COMPUTE=ON \
            -DARROW_CSV=ON \
            -DARROW_FILESYSTEM=ON \
            -DARROW_JSON=ON \
            -DARROW_PARQUET=OFF \
            -DARROW_WITH_BROTLI=OFF \
            -DARROW_WITH_LZ4=ON \
            -DARROW_WITH_SNAPPY=ON \
            -DARROW_WITH_ZLIB=ON \
            -DARROW_WITH_ZSTD=ON
        make -j$(nproc)
        make install DESTDIR="$OUT"
    """,
    deps = [
        "core//zlib:zlib",
        "dev-libs//compression/lz4:lz4",
        "system//libs/compression/snappy:snappy",
        "dev-libs//compression/zstd:zstd",
    ],
    visibility = ["PUBLIC"],
)
