load("@root//defs:package_defs.bzl", "cmake_package")

cmake_package(
    name = "crc32c",
    version = "1.1.0",
    src_uri = "https://github.com/google/crc32c/archive/refs/tags/1.1.0.tar.gz",
    sha256 = "49de137bf1c2eb6268d5122674f7dd1524b9148ba65c7b85c5ae4b9be104a25a",
    description = "CRC32C implementation with hardware acceleration",
    homepage = "https://github.com/google/crc32c",
    license = "BSD-3-Clause",
    deps = [],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DCRC32C_BUILD_TESTS=OFF",
        "-DCRC32C_BUILD_BENCHMARKS=OFF",
        "-DCRC32C_USE_GLOG=OFF",
    ],
    visibility = ["PUBLIC"],
)
