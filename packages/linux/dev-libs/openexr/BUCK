load("@root//defs:package_defs.bzl", "cmake_package", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags")

# openexr - High dynamic-range (HDR) image file format
cmake_package(
    name = "openexr",
    version = "3.2.4",
    iuse = [
        "examples",
        "large-stack",
        "threads",
        "utils",
    ],
    use_cmake = {
        "-examples": "-DBUILD_EXAMPLES=OFF",
        "-large-stack": "-DENABLE_LARGE_STACK=OFF",
        "-threads": "-DENABLE_THREADS=OFF",
        "-utils": "-DENABLE_UTILS=OFF",
        "examples": "-DBUILD_EXAMPLES=ON",
        "large-stack": "-DENABLE_LARGE_STACK=ON",
        "threads": "-DENABLE_THREADS=ON",
        "utils": "-DENABLE_UTILS=ON",
    },
    src_uri = "https://github.com/AcademySoftwareFoundation/openexr/archive/v3.2.4.tar.gz",
    sha256 = "81e6518f2c4656fdeaf18a018f135e96a96e7f66dbe1c1f05860dd94772176cc",
    signature_required = False,
    description = "High dynamic-range (HDR) image file format",
    homepage = "https://www.openexr.com/",
    license = "BSD-3-Clause",
    cmake_args = [
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TESTING=OFF",
        "-DOPENEXR_INSTALL_EXAMPLES=OFF",
    ],
    deps = [],
    visibility = ["PUBLIC"],
)
