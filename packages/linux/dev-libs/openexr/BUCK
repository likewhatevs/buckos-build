load("//defs:package.bzl", "package")

# openexr - High dynamic-range (HDR) image file format
package(
    build_rule = "cmake",
    name = "openexr",
    version = "3.2.4",
    use_configure = {
        "examples": ("-DBUILD_EXAMPLES=ON", "-DBUILD_EXAMPLES=OFF"),
        "large-stack": ("-DENABLE_LARGE_STACK=ON", "-DENABLE_LARGE_STACK=OFF"),
        "threads": ("-DENABLE_THREADS=ON", "-DENABLE_THREADS=OFF"),
        "utils": ("-DENABLE_UTILS=ON", "-DENABLE_UTILS=OFF"),
    },
    url = "https://github.com/AcademySoftwareFoundation/openexr/archive/v3.2.4.tar.gz",
    sha256 = "81e6518f2c4656fdeaf18a018f135e96a96e7f66dbe1c1f05860dd94772176cc",
    description = "High dynamic-range (HDR) image file format",
    homepage = "https://www.openexr.com/",
    license = "BSD-3-Clause",
    configure_args = [
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TESTING=OFF",
        "-DOPENEXR_INSTALL_EXAMPLES=OFF",
    ],
    deps = [],
)
