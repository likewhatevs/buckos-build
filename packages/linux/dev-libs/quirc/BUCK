load("//defs:package_defs.bzl", "cmake_package")

cmake_package(
    name = "quirc",
    version = "1.0",
    iuse = [
        "opencv",
        "sdl",
        "tools",
        "v4l",
    ],
    use_cmake = {
        "-opencv": "-DENABLE_OPENCV=OFF",
        "-sdl": "-DENABLE_SDL=OFF",
        "-tools": "-DENABLE_TOOLS=OFF",
        "-v4l": "-DENABLE_V4L=OFF",
        "opencv": "-DENABLE_OPENCV=ON",
        "sdl": "-DENABLE_SDL=ON",
        "tools": "-DENABLE_TOOLS=ON",
        "v4l": "-DENABLE_V4L=ON",
    },
    src_uri = "https://github.com/dlbeer/quirc/archive/v1.0.tar.gz",
    sha256 = "91bba64ffca5b84aa953b88d5f5ccc9507275345c200fd581dca24fbf66b3706",
    cmake_args = [
        "-DBUILD_SHARED_LIBS=OFF",
    ],
    deps = [],
)
