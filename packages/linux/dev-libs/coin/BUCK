load("//defs:package.bzl", "package")

# coin - High-level 3D graphics library with C++ API
package(
    build_rule = "cmake",
    name = "coin",
    version = "4.0.2",
    use_configure = {
        "debug": ("-DCMAKE_BUILD_TYPE=Debug", "-DCMAKE_BUILD_TYPE=Release"),
        "exceptions": ("-DENABLE_EXCEPTIONS=ON", "-DENABLE_EXCEPTIONS=OFF"),
        "openal": ("-DENABLE_OPENAL=ON", "-DENABLE_OPENAL=OFF"),
        "qch": ("-DENABLE_QCH=ON", "-DENABLE_QCH=OFF"),
        "threads": ("-DENABLE_THREADS=ON", "-DENABLE_THREADS=OFF"),
    },
    url = "https://github.com/coin3d/coin/releases/download/v4.0.2/coin-4.0.2-src.tar.gz",
    sha256 = "bd6bce1efedfdbc8a914bc11a10dd319a16d19c3ccc6979faf5c85e5e94a416e",
    description = "High-level 3D graphics toolkit on top of OpenGL",
    homepage = "https://github.com/coin3d/coin",
    license = "BSD-3-Clause",
    configure_args = [
        "-DBUILD_SHARED_LIBS=ON",
        "-DCOIN_BUILD_DOCUMENTATION=OFF",
        "-DCOIN_BUILD_TESTS=OFF",
    ],
    deps = [],
)
