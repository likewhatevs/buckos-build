load("//defs:package_defs.bzl", "cmake_package")

cmake_package(
    name = "stdgpu",
    version = "1.3.0",
    src_uri = "https://github.com/stotko/stdgpu/archive/refs/tags/1.3.0.tar.gz",
    sha256 = "c527dabc6735d8b320b316e9a5b120d258d49c2b7ff9689c8a9b5ad474532a05",
    cmake_args = [
        "-DSTDGPU_BUILD_SHARED_LIBS=ON",
        "-DSTDGPU_BUILD_EXAMPLES=OFF",
        "-DSTDGPU_BUILD_BENCHMARKS=OFF",
        "-DSTDGPU_BUILD_TESTS=OFF",
        "-DSTDGPU_BACKEND=STDGPU_BACKEND_CUDA",
    ],
    deps = [
        "//packages/linux/dev-libs/cuda:cuda",
    ],
)
