load("//defs:package_defs.bzl", "cmake_package")

# cuCollections - GPU-accelerated concurrent data structures
# Header-only library providing GPU-accelerated data structures similar to STL

cmake_package(
    name = "cucollections",
    version = "0.0.1",
    src_uri = "https://github.com/NVIDIA/cuCollections/archive/a4fb98500fc29401983e7d668c2ba12a5c86e7bf.tar.gz",
    sha256 = "794db0e37f184376fee352d93bbc42422601babc71291904f2595265e8036e1b",
    signature_required = False,

    deps = [],

    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_CXX_STANDARD=17",
        "-DCMAKE_CUDA_STANDARD=17",
        "-DBUILD_TESTS=OFF",
        "-DBUILD_BENCHMARKS=OFF",
        "-DBUILD_EXAMPLES=OFF",
        "-DINSTALL_CUCO=ON",
    ],

    visibility = ["PUBLIC"],
    labels = ["buckos:hw:cuda"],
)
