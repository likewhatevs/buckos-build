load("//defs:package.bzl", "package")

# eigen - C++ template library for linear algebra
package(
    build_rule = "cmake",
    name = "eigen",
    version = "3.4.0",
    use_configure = {
        "benchmark": ("-DENABLE_BENCHMARK=ON", "-DENABLE_BENCHMARK=OFF"),
        "clang": ("-DENABLE_CLANG=ON", "-DENABLE_CLANG=OFF"),
        "cuda": ("-DWITH_CUDA=ON", "-DWITH_CUDA=OFF"),
        "debug": ("-DCMAKE_BUILD_TYPE=Debug", "-DCMAKE_BUILD_TYPE=Release"),
        "hip": ("-DENABLE_HIP=ON", "-DENABLE_HIP=OFF"),
        "lapack": ("-DENABLE_LAPACK=ON", "-DENABLE_LAPACK=OFF"),
        "mathjax": ("-DENABLE_MATHJAX=ON", "-DENABLE_MATHJAX=OFF"),
    },
    url = "https://gitlab.com/libeigen/eigen/-/archive/3.4.0/eigen-3.4.0.tar.gz",
    sha256 = "8586084f71f9bde545ee7fa6d00288b264a2b7ac3607b974e54d13e7162c1c72",
    description = "C++ template library for linear algebra",
    homepage = "https://eigen.tuxfamily.org/",
    license = "MPL-2.0",
    configure_args = [
        "-DBUILD_TESTING=OFF",
    ],
    deps = [],
)
