load("//defs:package_defs.bzl", "cmake_package")

# autodiff - Automatic differentiation library for C++

cmake_package(
    name = "autodiff",
    version = "1.0.1",
    src_uri = "https://github.com/autodiff/autodiff/archive/refs/tags/v1.0.1.tar.gz",
    sha256 = "63f2c8aaf940fbb1d1e7098b1d6c08794da0194eec3faf773f3123dc7233838c",
    description = "Automatic differentiation library for C++",
    homepage = "https://autodiff.github.io/",
    license = "MIT",
    deps = [
        "//packages/linux/dev-libs/math/eigen:eigen",
    ],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_CXX_STANDARD=17",
        "-DAUTODIFF_BUILD_TESTS=OFF",
        "-DAUTODIFF_BUILD_PYTHON=OFF",
        "-DAUTODIFF_BUILD_EXAMPLES=OFF",
        "-DAUTODIFF_BUILD_DOCS=OFF",
    ],
    visibility = ["PUBLIC"],
)
