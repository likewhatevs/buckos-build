load("//defs:package.bzl", "package")

# GSL - GNU Scientific Library

package(
    build_rule = "autotools",
    name = "gsl",
    # GNU release tarball includes pre-generated configure script
    version = "2.8",
    use_configure = {
        "cblas-external": ("--enable-cblas-external", "--disable-cblas-external"),
        "deprecated": ("--enable-deprecated", "--disable-deprecated"),
        "static-libs": ("--enable-static", "--disable-static"),
    },
    url = "https://mirrors.kernel.org/gnu/gsl/gsl-2.8.tar.gz",
    sha256 = "6a99eeed15632c6354895b1dd542ed5a855c0f15d9ad1326c6fe2b2c9e423190",
    description = "GNU Scientific Library - numerical library for C and C++ programmers",
    homepage = "https://www.gnu.org/software/gsl/",
    license = "GPL-3.0",
    deps = [],
    configure_args = [
        "--prefix=${PREFIX}",
        "--enable-shared",
        "--disable-static",
    ],
)
