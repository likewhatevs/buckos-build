load("@root//defs:package_defs.bzl", "cmake_package")

cmake_package(
    name = "nanoflann",
    version = "1.1.8",
    iuse = ["examples"],
    use_cmake = {
        "-examples": "-DBUILD_EXAMPLES=OFF",
        "examples": "-DBUILD_EXAMPLES=ON",
    },
    src_uri = "https://github.com/jlblancoc/nanoflann/archive/refs/tags/v1.1.8.tar.gz",
    sha256 = "389be4f08deb13761e8c50f7b1766dcecd0876459414c1cc4aa1d5dbd8031fc7",
    description = "C++ header-only library for KD-Trees and nearest neighbor searches",
    homepage = "https://github.com/jlblancoc/nanoflann",
    license = "BSD",
    deps = [],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DNANOFLANN_BUILD_EXAMPLES=OFF",
        "-DNANOFLANN_BUILD_TESTS=OFF",
    ],
    visibility = ["PUBLIC"],
)
