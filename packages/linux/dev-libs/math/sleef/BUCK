load("//defs:package_defs.bzl", "cmake_package")

cmake_package(
    name = "sleef",
    version = "3.4.1",
    src_uri = "https://github.com/shibatch/sleef/archive/refs/tags/3.4.1.tar.gz",
    sha256 = "25babe83b9358817ac05bbec09b7557439e4e96b907b86717906e6d980ff2036",
    cmake_args = [
        "-DBUILD_SHARED_LIBS=OFF",
        "-DSLEEF_BUILD_TESTS=OFF",
        "-DSLEEF_BUILD_DFT=OFF",
        "-DSLEEF_BUILD_GNUABI_LIBS=OFF",
        "-DSLEEF_BUILD_SCALAR_LIB=ON",
    ],
)
