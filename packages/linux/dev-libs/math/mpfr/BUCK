    name = "mpfr",
    version = "4.2.2",
    iuse = ["static-libs"],
    use_configure = {
        "-static-libs": "--disable-static",
        "static-libs": "--enable-static",
    },
    src_uri = "https://www.mpfr.org/mpfr-4.2.2/mpfr-4.2.2.tar.xz",
    sha256 = "b67ba0383ef7e8a8563734e2e889ef5ec3c3b898a01d00fa0a6869ad81c6ce01",
    deps = [
        "//packages/linux/dev-libs/gmp:gmp",
    ],
    configure_args = [
        "--enable-shared",
        "--disable-static",
    ],
    visibility = ["PUBLIC"],
)
