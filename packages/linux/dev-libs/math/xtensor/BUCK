    deps = [],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_TESTS=OFF",
        "-DBUILD_BENCHMARK=OFF",
    ],
    visibility = ["PUBLIC"],
