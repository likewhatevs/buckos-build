cmake_package(
    name = "xtensor",
    version = "0.24.7",
    src_uri = "https://github.com/xtensor-stack/xtensor/archive/refs/tags/0.24.7.tar.gz",
    sha256 = "0fbbd524dde2199b731b6af99b16063780de6cf1d0d6cb1f3f4d4ceb318f3106",
