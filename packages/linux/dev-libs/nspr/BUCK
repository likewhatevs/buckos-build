load("//defs:package_defs.bzl", "download_source", "ebuild_package")

# NSPR - Netscape Portable Runtime
# Cross-platform abstraction for system-level functions
download_source(
    name = "nspr-src",
    src_uri = "https://archive.mozilla.org/pub/nspr/releases/v4.36/src/nspr-4.36.tar.gz",
    sha256 = "55dec317f1401cd2e5dba844d340b930ab7547f818179a4002bce62e6f1c6895",
    signature_required = False,
)

# NSPR - has its own configure, doesn't use standard autotools
ebuild_package(
    name = "nspr",
    # No autoreconf needed - tarball has pre-generated configure in nspr/ subdir
    bdepend = [],
    src_prepare = "",
    source = ":nspr-src",
    iuse = ["debug"],
    use_configure = {
        "-debug": "--disable-debug",
        "debug": "--enable-debug",
    },
    version = "4.36",
    description = "Netscape Portable Runtime - cross-platform abstraction library",
    homepage = "https://www.mozilla.org/projects/nspr/",
    license = "MPL-2.0 OR GPL-2 OR LGPL-2.1",
    # NSPR configure is in nspr/ subdirectory
    src_configure = """
cd nspr
./configure \\
    --prefix=/usr \\
    --libdir=/usr/lib64 \\
    --enable-64bit \\
    --disable-debug \\
    --enable-optimize
""",
    src_compile = """
cd nspr
make -j$(nproc)
""",
    src_install = """
cd nspr
make DESTDIR="$DESTDIR" install
""",
    visibility = ["PUBLIC"],
)
