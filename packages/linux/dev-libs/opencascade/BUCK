load("//defs:package.bzl", "package")

# opencascade - Open CASCADE Technology - 3D modeling & numerical simulation
# Use GitHub mirror since git.dev.opencascade.org often times out
package(
    build_rule = "cmake",
    name = "opencascade",
    version = "7.7.2",
    use_configure = {
        "X": ("-DENABLE_X=ON", "-DENABLE_X=OFF"),
        "debug": ("-DCMAKE_BUILD_TYPE=Debug", "-DCMAKE_BUILD_TYPE=Release"),
        "freeimage": ("-DENABLE_FREEIMAGE=ON", "-DENABLE_FREEIMAGE=OFF"),
        "gles2": ("-DENABLE_GLES2=ON", "-DENABLE_GLES2=OFF"),
        "jemalloc": ("-DENABLE_JEMALLOC=ON", "-DENABLE_JEMALLOC=OFF"),
        "json": ("-DENABLE_JSON=ON", "-DENABLE_JSON=OFF"),
        "opengl": ("-DENABLE_OPENGL=ON", "-DENABLE_OPENGL=OFF"),
        "optimize": ("-DENABLE_OPTIMIZE=ON", "-DENABLE_OPTIMIZE=OFF"),
        "tbb": ("-DENABLE_TBB=ON", "-DENABLE_TBB=OFF"),
        "testprograms": ("-DENABLE_TESTPROGRAMS=ON", "-DENABLE_TESTPROGRAMS=OFF"),
        "tk": ("-DENABLE_TK=ON", "-DENABLE_TK=OFF"),
        "truetype": ("-DENABLE_TRUETYPE=ON", "-DENABLE_TRUETYPE=OFF"),
        "vtk": ("-DENABLE_VTK=ON", "-DENABLE_VTK=OFF"),
    },
    url = "https://github.com/Open-Cascade-SAS/OCCT/archive/refs/tags/V7_7_2.tar.gz",
    sha256 = "0b3cce50b859cd2ed6809fab0de2eb8c8424768bdb6307834766bad0b583605b",
    description = "Open CASCADE Technology - development platform for 3D CAD/CAM/CAE",
    homepage = "https://dev.opencascade.org/",
    license = "LGPL-2.1-or-later",
    configure_args = [
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_MODULE_Draw=OFF",
        "-DBUILD_DOC_Overview=OFF",
        "-DINSTALL_TEST_CASES=OFF",
    ],
    deps = [],
)
