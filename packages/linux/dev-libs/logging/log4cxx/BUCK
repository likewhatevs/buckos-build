load("//defs:package.bzl", "package")

# log4cxx - Apache logging framework for C++

package(
    build_rule = "cmake",
    name = "log4cxx",
    version = "1.3.0",
    use_configure = {
        "odbc": ("-DENABLE_ODBC=ON", "-DENABLE_ODBC=OFF"),
        "smtp": ("-DENABLE_SMTP=ON", "-DENABLE_SMTP=OFF"),
    },
    url = "https://github.com/apache/logging-log4cxx/archive/refs/tags/rel/v1.3.0.tar.gz",
    sha256 = "d46b4e856d8275a8993fb0b8df895b658d97b6d91e949463e624c55e25ed9a4c",
    description = "Apache logging framework for C++",
    homepage = "https://logging.apache.org/log4cxx/",
    license = "Apache-2.0",
    deps = [
        "//packages/linux/dev-libs/misc/apr:apr",
        "//packages/linux/dev-libs/misc/apr-util:apr-util",
    ],
    configure_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TESTING=OFF",
    ],
)
