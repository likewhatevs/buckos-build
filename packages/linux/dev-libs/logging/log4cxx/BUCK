load("@root//defs:package_defs.bzl", "cmake_package")

# log4cxx - Apache logging framework for C++

cmake_package(
    name = "log4cxx",
    version = "1.3.0",
    iuse = ["odbc", "smtp"],
    use_cmake = {
        "-odbc": "-DENABLE_ODBC=OFF",
        "-smtp": "-DENABLE_SMTP=OFF",
        "odbc": "-DENABLE_ODBC=ON",
        "smtp": "-DENABLE_SMTP=ON",
    },
    src_uri = "https://github.com/apache/logging-log4cxx/archive/refs/tags/rel/v1.3.0.tar.gz",
    sha256 = "d46b4e856d8275a8993fb0b8df895b658d97b6d91e949463e624c55e25ed9a4c",
    description = "Apache logging framework for C++",
    homepage = "https://logging.apache.org/log4cxx/",
    license = "Apache-2.0",
    deps = [
        "dev-libs//misc/apr:apr",
        "dev-libs//misc/apr-util:apr-util",
    ],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_TESTING=OFF",
    ],
    visibility = ["PUBLIC"],
)
