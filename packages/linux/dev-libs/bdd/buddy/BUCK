load("//defs:package_defs.bzl", "autotools_package", "download_source")

autotools_package(
    name = "buddy",
    # SourceForge release tarball includes pre-generated configure script
    bdepend = [],
    src_prepare = "",
    version = "2.4",
    iuse = ["examples"],
    use_configure = {
        "-examples": "--disable-examples",
        "examples": "--enable-examples",
    },
    src_uri = "https://sourceforge.net/projects/buddy/files/buddy/BuDDy%202.4/buddy-2.4.tar.gz/download",

    sha256 = "d3df80a6a669d9ae408cb46012ff17bd33d855529d20f3a7e563d0d913358836",
    description = "Binary Decision Diagram library",
    homepage = "http://buddy.sourceforge.net/",
    license = "MIT",
    visibility = ["PUBLIC"],
)
