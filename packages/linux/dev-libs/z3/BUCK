load("@root//defs:package_defs.bzl", "cmake_package")

cmake_package(
    name = "z3",
    version = "4.15.2",
    iuse = [
        "examples",
        "gmp",
        "isabelle",
        "java",
        "python",
    ],
    use_cmake = {
        "-examples": "-DBUILD_EXAMPLES=OFF",
        "-gmp": "-DENABLE_GMP=OFF",
        "-isabelle": "-DENABLE_ISABELLE=OFF",
        "-java": "-DENABLE_JAVA=OFF",
        "-python": "-DENABLE_PYTHON=OFF",
        "examples": "-DBUILD_EXAMPLES=ON",
        "gmp": "-DENABLE_GMP=ON",
        "isabelle": "-DENABLE_ISABELLE=ON",
        "java": "-DENABLE_JAVA=ON",
        "python": "-DENABLE_PYTHON=ON",
    },
    src_uri = "https://github.com/Z3Prover/z3/archive/refs/tags/z3-4.15.2.tar.gz",
    sha256 = "3486bf5b35b185981cab0b0a81f870547648a1ca433085aa79afd17c44959751",
    cmake_args = [
        "-DZ3_BUILD_LIBZ3_SHARED=OFF",
        "-DZ3_BUILD_TEST_EXECUTABLES=OFF",
        "-DZ3_ENABLE_EXAMPLE_TARGETS=OFF",
        "-DZ3_USE_LIB_GMP=OFF",
    ],
)
