load("//defs:package.bzl", "package")

# TRE - Lightweight, robust, and efficient POSIX compliant regexp matching library
package(
    build_rule = "autotools",
    name = "tre",
    url = "https://github.com/laurikari/tre/archive/refs/tags/v0.8.0.tar.gz",

    sha256 = "c0d53e6052ef306ff9f02074ab8c28cb10ae4a001bf409d0859494fc32f1c29d",
    version = "0.8.0",
    description = "Lightweight, robust POSIX compliant regexp matching library with approximate matching",
    homepage = "https://github.com/laurikari/tre",
    license = "BSD-2-Clause",
    configure_args = [
        "--enable-shared",
    ],
    use_configure = {
        "agrep": ("--enable-agrep", "--disable-agrep"),
        "alloca": ("--enable-alloca", "--disable-alloca"),
        "approx": ("--enable-approx", "--disable-approx"),
        "debug": ("--enable-debug", "--disable-debug"),
        "nls": ("--enable-nls", "--disable-nls"),
        "profile": ("--enable-profile", "--disable-profile"),
        "python": ("--enable-python", "--disable-python"),
        "static-libs": ("--enable-static", "--disable-static"),
    },
    deps = [
        "//packages/linux/dev-tools/build-systems/autoconf:autoconf",
        "//packages/linux/dev-tools/build-systems/automake:automake",
        "//packages/linux/dev-tools/build-systems/libtool:libtool",
        "//packages/linux/dev-libs/misc/gettext:gettext",
    ],
    pre_configure_cmds = ["""
libtoolize --copy --force
autoreconf -fiv
"""],
    visibility = ["PUBLIC"],
)
