load("@root//defs:package_defs.bzl", "download_source", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags", "use_dep")

# TRE - Lightweight, robust, and efficient POSIX compliant regexp matching library
download_source(
    name = "tre-src",
    src_uri = "https://github.com/laurikari/tre/archive/refs/tags/v0.8.0.tar.gz",
    sha256 = "c0d53e6052ef306ff9f02074ab8c28cb10ae4a001bf409d0859494fc32f1c29d",
    signature_required = False,
)

autotools_package(
    name = "tre",
    source = ":tre-src",
    version = "0.8.0",
    description = "Lightweight, robust POSIX compliant regexp matching library with approximate matching",
    homepage = "https://github.com/laurikari/tre",
    license = "BSD-2-Clause",
    iuse = [
        "agrep",
        "alloca",
        "approx",
        "debug",
        "nls",
        "profile",
        "python",
        "static-libs",
    ],
    use_defaults = ["nls"],
    configure_args = [
        "--enable-shared",
    ],
    use_configure = {
        "-agrep": "--disable-agrep",
        "-alloca": "--disable-alloca",
        "-approx": "--disable-approx",
        "-debug": "--disable-debug",
        "-nls": "--disable-nls",
        "-profile": "--disable-profile",
        "-python": "--disable-python",
        "-static-libs": "--disable-static",
        "agrep": "--enable-agrep",
        "alloca": "--enable-alloca",
        "approx": "--enable-approx",
        "debug": "--enable-debug",
        "nls": "--enable-nls",
        "profile": "--enable-profile",
        "python": "--enable-python",
        "static-libs": "--enable-static",
    },
    bdepend = [
        "//packages/linux/dev-tools/build-systems/autoconf:autoconf",
        "//packages/linux/dev-tools/build-systems/automake:automake",
        "//packages/linux/dev-tools/build-systems/libtool:libtool",
        "//packages/linux/dev-libs/misc/gettext:gettext",
    ],
    src_prepare = """
libtoolize --copy --force
autoreconf -fiv
""",
    visibility = ["PUBLIC"],
)
