load("//defs:package.bzl", "package")

# oniguruma - official release tarball includes pre-generated configure
package(
    build_rule = "autotools",
    name = "oniguruma",
    # No autoreconf needed - tarball has pre-generated configure
    url = "https://github.com/kkos/oniguruma/releases/download/v6.9.9/onig-6.9.9.tar.gz",

    sha256 = "60162bd3b9fc6f4886d4c7a07925ffd374167732f55dce8c491bfd9cd818a6cf",
    use_configure = {
        "crnl-as-line-terminator": ("--enable-crnl-as-line-terminator", "--disable-crnl-as-line-terminator"),
        "static-libs": ("--enable-static", "--disable-static"),
    },
    version = "6.9.9",
    description = "Regular expressions library with a variety of character encodings",
    homepage = "https://github.com/kkos/oniguruma",
    license = "BSD-2-Clause",
    configure_args = [
        "--disable-static",
    ],
    # Force C17 to avoid C23 bool keyword conflict
    env = {
        "CFLAGS": "-std=gnu17 -O2",
    },
    visibility = ["PUBLIC"],
)
