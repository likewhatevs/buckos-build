load("@root//defs:package_defs.bzl", "cmake_package", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags", "use_dep")

cmake_package(
    name = "utf8proc",
    version = "2.9.0",
    src_uri = "https://github.com/JuliaStrings/utf8proc/archive/refs/tags/v2.9.0.tar.gz",
    sha256 = "18c1626e9fc5a2e192311e36b3010bfc698078f692888940f1fa150547abb0c1",
    signature_required = False,
    description = "Clean C library for processing UTF-8 Unicode data",
    homepage = "https://github.com/JuliaStrings/utf8proc",
    license = "MIT",
    cmake_args = [
        "-DBUILD_SHARED_LIBS=ON",
        "-DCMAKE_POLICY_VERSION_MINIMUM=3.5",
    ],
    visibility = ["PUBLIC"],
)
