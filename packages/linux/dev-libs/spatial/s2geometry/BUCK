load("@root//defs:package_defs.bzl", "cmake_package")

cmake_package(
    name = "s2geometry",
    version = "0.10.0",
    src_uri = "https://github.com/google/s2geometry/archive/refs/tags/v0.10.0.tar.gz",
    sha256 = "1c17b04f1ea20ed09a67a83151ddd5d8529716f509dde49a8190618d70532a3d",
    description = "Google S2 spherical geometry library",
    homepage = "https://github.com/google/s2geometry",
    license = "Apache-2.0",
    deps = [
        "//packages/linux/dev-libs/google/abseil-cpp:abseil-cpp",
        "//packages/linux/dev-libs/google/glog:glog",
        "//packages/linux/system/libs/crypto/openssl:openssl",
    ],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DWITH_GFLAGS=OFF",
        "-DWITH_GLOG=ON",
        "-DWITH_PYTHON=OFF",
        "-DBUILD_EXAMPLES=OFF",
    ],
    visibility = ["PUBLIC"],
)
