load("@root//defs:package_defs.bzl", "download_source", "ebuild_package", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags")

# opencsg - Library for CSG (Constructive Solid Geometry) using OpenGL
download_source(
    name = "opencsg-src",
    src_uri = "https://github.com/floriankirsch/OpenCSG/archive/refs/tags/opencsg-1-6-0-release.tar.gz",
    sha256 = "a912405c55ad9ea185589ea073518bf895613e22175d5c8dd8edabab75e19be2",
    signature_required = False,
)

ebuild_package(
    name = "opencsg",
    source = ":opencsg-src",
    version = "1.6.0",
    description = "Library for CSG rendering using OpenGL",
    homepage = "http://www.opencsg.org/",
    license = "GPL-2.0-or-later",
    src_configure = """
cd src
qmake opencsg.pro PREFIX=/usr
""",
    src_compile = """
cd src
make -j$(nproc)
""",
    src_install = """
cd src
make INSTALL_ROOT="$DESTDIR" install
""",
    rdepend = [
        "//packages/linux/desktop/qt:qt5",
    ],
    bdepend = [
        "//packages/linux/desktop/qt:qt5",
    ],
    visibility = ["PUBLIC"],
)
