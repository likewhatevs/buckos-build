# Container runtime packages aggregator

filegroup(
    name = "runtimes",
    srcs = [
        "//packages/linux/system/containers/runc:runc",
        "//packages/linux/system/containers/runtime:crun",
    ],
    default_target_platform = "//platforms:linux-target",
)

