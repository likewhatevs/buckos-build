    # Postfix doesn't use autotools - skip autoreconf
    pre_configure_cmds = ["""
# Postfix uses its own build system, no autoreconf needed
true
"""],
    # Configure step: Generate Makefiles with custom options
    # Standard make for compilation
    make_args = [],
    # Install using postfix's custom install target
    deps = [
        "//packages/linux/system/libs/crypto/openssl:openssl",
        "//packages/linux/system/libs/database/lmdb:lmdb",
    ],
    visibility = ["PUBLIC"],
