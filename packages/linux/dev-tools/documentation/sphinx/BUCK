load("@root//defs:package_defs.bzl", "python_package")

# Sphinx - Python documentation generator

python_package(
    name = "sphinx",
    version = "7.2.6",
    iuse = [
        "debug",
        "id64",
        "mariadb",
        "mysql",
        "odbc",
        "postgres",
        "stemmer",
        "syslog",
        "xml",
    ],
    use_configure = {
        "-debug": "--disable-debug",
        "-id64": "--disable-id64",
        "-mariadb": "--disable-mariadb",
        "-mysql": "--disable-mysql",
        "-odbc": "--disable-odbc",
        "-postgres": "--disable-postgres",
        "-stemmer": "--disable-stemmer",
        "-syslog": "--disable-syslog",
        "-xml": "--disable-xml",
        "debug": "--enable-debug",
        "id64": "--enable-id64",
        "mariadb": "--enable-mariadb",
        "mysql": "--enable-mysql",
        "odbc": "--enable-odbc",
        "postgres": "--enable-postgres",
        "stemmer": "--enable-stemmer",
        "syslog": "--enable-syslog",
        "xml": "--enable-xml",
    },
    src_uri = "https://github.com/sphinx-doc/sphinx/archive/refs/tags/v7.2.6.tar.gz",
    sha256 = "b41c04543148937b887097f396d7b2b54ae49d0597b68625f06ffdf702d4d917",
    description = "Python documentation generator",
    homepage = "https://www.sphinx-doc.org/",
    license = "BSD-2-Clause",
    deps = [
        "lang//python:python",
    ],
    visibility = ["PUBLIC"],
)
