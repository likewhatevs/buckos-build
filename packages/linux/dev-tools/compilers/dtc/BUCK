    license = "GPL-2.0-or-later AND BSD-2-Clause",
    meson_args = [
        "-Dtools=true",
        "-Dyaml=disabled",
        "-Dvalgrind=disabled",
        "-Dpython=disabled",
        "-Dstatic-build=false",
        "-Dtests=disabled",
    ],
    deps = [
