load("//defs:package.bzl", "package")

package(
    build_rule = "binary",
    name = "sccache",
    version = "0.8.1",
    url = "https://github.com/mozilla/sccache/archive/refs/tags/v0.8.1.tar.gz",
    sha256 = "30b951b49246d5ca7d614e5712215cb5f39509d6f899641f511fb19036b5c4e5",
    description = "Shared compilation cache with cloud storage support",
    homepage = "https://github.com/mozilla/sccache",
    license = "Apache-2.0",
    install_script = """
        cd $SRCS
        mkdir -p "$OUT/usr/bin"
        cp sccache "$OUT/usr/bin/"
        chmod +x "$OUT/usr/bin/sccache"
    """,
    visibility = ["PUBLIC"],
)
