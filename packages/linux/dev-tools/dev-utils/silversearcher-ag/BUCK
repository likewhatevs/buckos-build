load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags", "use_dep")

download_source(
    name = "ag-src",
    src_uri = "https://github.com/ggreer/the_silver_searcher/archive/refs/tags/2.2.0.tar.gz",
    sha256 = "6a0a19ca5e73b2bef9481c29a508d2413ca1a0a9a5a6b1bd9bbd695a7626cbf9",
    signature_required = False,
)

autotools_package(
    name = "silversearcher-ag",
    source = ":ag-src",
    version = "2.2.0",
    description = "A code searching tool similar to ack, with a focus on speed",
    homepage = "https://geoff.greer.fm/ag/",
    license = "Apache-2.0",
    bdepend = [
        "//packages/linux/dev-tools/build-systems/pkg-config:pkg-config",
    ],
    deps = [
        "//packages/linux/dev-libs/text/pcre:pcre",
    ],
    visibility = ["PUBLIC"],
)
