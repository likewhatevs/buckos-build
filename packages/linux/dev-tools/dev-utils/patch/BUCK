load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "patch",
    # GNU release tarball includes pre-generated configure script
    bdepend = [],
    src_prepare = "",
    version = "2.7.6",
    src_uri = "https://mirrors.kernel.org/gnu/patch/patch-2.7.6.tar.xz",
    sha256 = "ac610bda97abe0d9f6b7c963255a11dcb196c25e337c61f94e4778d632f1d8fd",
    signature_sha256 = "2398352147c006e0737430247960d1c75ce33377a3278023cdc34ebd4a810cd9",
    signature_required=False,
    description = "Apply a diff file to an original",
    homepage = "https://www.gnu.org/software/patch/",
    license = "GPL-3+",

    # USE flags this package supports
    iuse = ["ocamlopt", "xattr"],

    # Default USE flags
    use_defaults = [],

    # Conditional configure arguments
    use_configure = {
        "-ocamlopt": "--disable-ocamlopt",
        "-xattr": "--disable-xattr",
        "ocamlopt": "--enable-ocamlopt",
        "xattr": "--enable-xattr",
    },

    visibility = ["PUBLIC"],
)
