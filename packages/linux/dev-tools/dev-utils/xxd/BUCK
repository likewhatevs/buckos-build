load("//defs:package_defs.bzl", "make_package")

# xxd - Hexdump utility from Vim
# xxd uses a simple Makefile, not autoconf

make_package(
    name = "xxd",
    version = "9.1.0",
    src_uri = "https://github.com/vim/vim/archive/refs/tags/v9.1.0.tar.gz",
    sha256 = "ddb435f6e386c53799a3025bdc5a3533beac735a0ee596cb27ada97366a1c725",
    signature_required = False,
    description = "Hexdump utility from Vim",
    homepage = "https://www.vim.org/",
    license = "GPL-2+",
    src_configure = "true",
    src_compile = """
        cd src/xxd
        make
    """,
    src_install = """
        cd src/xxd
        install -Dm755 xxd "$DESTDIR/usr/bin/xxd"
        # Man page is in runtime/doc/, not src/xxd/
        install -Dm644 ../../runtime/doc/xxd.1 "$DESTDIR/usr/share/man/man1/xxd.1"
    """,
    visibility = ["PUBLIC"],
)
