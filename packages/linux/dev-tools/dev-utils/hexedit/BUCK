load("//defs:package_defs.bzl", "download_source", "autotools_package")

autotools_package(
    name = "hexedit",
    version = "1.6",
    src_uri = "https://github.com/pixel/hexedit/archive/refs/tags/1.6.tar.gz",
    sha256 = "598906131934f88003a6a937fab10542686ce5f661134bc336053e978c4baae3",
    signature_required = False,
    description = "View and edit files in hexadecimal or ASCII",
    homepage = "https://github.com/pixel/hexedit",
    license = "GPL-2+",

    iuse = ["ncurses"],
    use_defaults = ["ncurses"],
    use_deps = {
        "ncurses": ["//packages/linux/system/terminal/ncurses:ncurses"],
    },
    use_configure = {
        "ncurses": "--with-ncurses",
        "-ncurses": "--without-ncurses",
    },

    visibility = ["PUBLIC"],
)
