load("//defs:package_defs.bzl", "download_source", "autotools_package")

autotools_package(
    name = "cscope",
    version = "15.9",
    src_uri = "https://downloads.sourceforge.net/cscope/cscope-15.9.tar.gz",
    sha256 = "c5505ae075a871a9cd8d9801859b0ff1c09782075df281c72c23e72115d9f159",
    signature_required = False,
    description = "Tool for browsing source code",
    homepage = "http://cscope.sourceforge.net/",
    license = "BSD-3-Clause",

    iuse = ["emacs", "ncurses"],
    use_defaults = ["ncurses"],
    use_deps = {
        "ncurses": ["//packages/linux/system/terminal/ncurses:ncurses"],
    },
    use_configure = {
        "-emacs": "--disable-emacs",
        "-ncurses": "--without-ncurses",
        "emacs": "--enable-emacs",
        "ncurses": "--with-ncurses",
    },

    visibility = ["PUBLIC"],
)
