load("@root//defs:package_defs.bzl","download_source", "make_package")
load("@root//defs:use_flags.bzl", "set_use_flags", "use_dep")

download_source(
    name = "lcov-src",
    src_uri = "https://github.com/linux-test-project/lcov/releases/download/v2.0/lcov-2.0.tar.gz",
    sha256 = "1857bb18e27abe8bcec701a907d5c47e01db4d4c512fc098d1a6acd29267bf46",
    signature_required = False,
)

make_package(
    name = "lcov",
    source = ":lcov-src",
    version = "2.0",
    description = "Graphical front-end for GCC's coverage testing tool gcov",
    homepage = "https://github.com/linux-test-project/lcov",
    license = "GPL-2+",
    visibility = ["PUBLIC"],
)
