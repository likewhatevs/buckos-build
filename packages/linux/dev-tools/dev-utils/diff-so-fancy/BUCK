load("//defs:package.bzl", "package")

package(
    build_rule = "binary",
    name = "diff-so-fancy",
    version = "1.4.4",
    url = "https://github.com/so-fancy/diff-so-fancy/archive/refs/tags/v1.4.4.tar.gz",
    sha256 = "3eac2cfb3b1de9d14b6a712941985d6b240b7f3726c94a5e337317c7161e869d",
    description = "Good-lookin' diffs with diff-highlight and more",
    homepage = "https://github.com/so-fancy/diff-so-fancy",
    license = "MIT",
    install_script = """
        cd $SRCS
        mkdir -p "$OUT/usr/bin" "$OUT/usr/lib/diff-so-fancy"
        cp -r lib/* "$OUT/usr/lib/diff-so-fancy/"
        cp diff-so-fancy "$OUT/usr/bin/"
        chmod +x "$OUT/usr/bin/diff-so-fancy"
    """,
    visibility = ["PUBLIC"],
)
