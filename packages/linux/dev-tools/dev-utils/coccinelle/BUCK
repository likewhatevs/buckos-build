load("@root//defs:package_defs.bzl", "download_source", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags", "use_dep")

# coccinelle - Semantic patching tool for C
download_source(
    name = "coccinelle-src",
    src_uri = "https://gitlab.inria.fr/coccinelle/coccinelle/-/archive/1.3.0/coccinelle-1.3.0.tar.bz2",
    sha256 = "32e541430916ab6556e4f771439f64395b051d50ba346165833a5216e327d63b",
    signature_required = False,
)

autotools_package(
    name = "coccinelle",
    source = ":coccinelle-src",
    iuse = [
        "emacs",
        "ocamlopt",
        "pcre",
        "python",
    ],
    use_configure = {
        "-emacs": "--disable-emacs",
        "-ocamlopt": "--disable-ocamlopt",
        "-pcre": "--disable-pcre",
        "-python": "--disable-python",
        "emacs": "--enable-emacs",
        "ocamlopt": "--enable-ocamlopt",
        "pcre": "--enable-pcre",
        "python": "--enable-python",
    },
    version = "1.1.1",
    description = "Semantic patching tool for C programs",
    homepage = "https://coccinelle.lip6.fr",
    license = "GPL-2",
    configure_args = [
        "--prefix=/usr",
        "--disable-python",
    ],
    deps = [
        "lang//ocaml:ocaml",
    ],
    visibility = ["PUBLIC"],
)
