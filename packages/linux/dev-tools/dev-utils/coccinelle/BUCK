load("//defs:package.bzl", "package")

# coccinelle - Semantic patching tool for C
package(
    build_rule = "autotools",
    name = "coccinelle",
    url = "https://gitlab.inria.fr/coccinelle/coccinelle/-/archive/1.3.0/coccinelle-1.3.0.tar.bz2",

    sha256 = "32e541430916ab6556e4f771439f64395b051d50ba346165833a5216e327d63b",
    use_configure = {
        "emacs": ("--enable-emacs", "--disable-emacs"),
        "ocamlopt": ("--enable-ocamlopt", "--disable-ocamlopt"),
        "pcre": ("--enable-pcre", "--disable-pcre"),
        "python": ("--enable-python", "--disable-python"),
    },
    version = "1.1.1",
    description = "Semantic patching tool for C programs",
    homepage = "https://coccinelle.lip6.fr",
    license = "GPL-2",
    configure_args = [
        "--prefix=/usr",
        "--disable-python",
    ],
    deps = [
        "//packages/linux/lang/ocaml:ocaml",
    ],
)
