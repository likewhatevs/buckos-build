load("//defs:package.bzl", "package")

# ccache is a CMake-based project
package(
    build_rule = "cmake",
    name = "ccache",
    version = "4.9.1",
    use_configure = {
        "redis": ("-DENABLE_REDIS=ON", "-DENABLE_REDIS=OFF"),
        "static-c++": ("-DENABLE_STATIC_C++=ON", "-DENABLE_STATIC_C++=OFF"),
    },
    url = "https://github.com/ccache/ccache/releases/download/v4.9.1/ccache-4.9.1.tar.xz",
    sha256 = "4c03bc840699127d16c3f0e6112e3f40ce6a230d5873daa78c60a59c7ef59d25",
    description = "Fast C/C++ compiler cache",
    homepage = "https://ccache.dev/",
    license = "GPL-3+",
    configure_args = [
        "-DREDIS_STORAGE_BACKEND=OFF",  # Disable redis to avoid network fetch of hiredis
        "-DENABLE_DOCUMENTATION=OFF",
        "-DENABLE_TESTING=OFF",
    ],
    deps = [],
)
