load("//defs:package.bzl", "package")

package(
    name = "colordiff",
    build_rule = "autotools",
    skip_configure = True,
    version = "1.0.21",
    url = "https://www.colordiff.org/colordiff-1.0.21.tar.gz",
    sha256 = "9b30f4257ef0f0806dea5a27c9ad8edc3f7999f05ddaff6f0627064dc927e615",
    description = "Colorizes diff output",
    homepage = "https://www.colordiff.org/",
    license = "GPL-2+",

    # Skip building docs (requires xmlto) by disabling make
    make_args = [],
    src_compile = """
# Colordiff is a Perl script, no compilation needed
true
""",
    src_install = """
# Install manually
install -Dm755 colordiff.pl "$DESTDIR/usr/bin/colordiff"
install -Dm644 colordiffrc "$DESTDIR/etc/colordiffrc"
install -Dm644 colordiffrc-lightbg "$DESTDIR/usr/share/colordiff/colordiffrc-lightbg"
""",

    visibility = ["PUBLIC"],
)
