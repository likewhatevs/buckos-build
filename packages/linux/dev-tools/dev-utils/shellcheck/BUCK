load("@root//defs:package_defs.bzl", "download_source", "binary_package", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags", "use_dep")

download_source(
    name = "shellcheck-src",
    src_uri = "https://github.com/koalaman/shellcheck/releases/download/v0.10.0/shellcheck-v0.10.0.linux.x86_64.tar.xz",
    sha256 = "6c881ab0698e4e6ea235245f22832860544f17ba386442fe7e9d629f8cbedf87",
    signature_required = False,
)

binary_package(
    name = "shellcheck",
    srcs = [":shellcheck-src"],
    version = "0.10.0",
    description = "Shell script static analysis tool",
    homepage = "https://www.shellcheck.net/",
    license = "GPL-3",
    install_script = """
        cd $SRCS
        mkdir -p "$OUT/usr/bin"
        cp shellcheck "$OUT/usr/bin/"
        chmod +x "$OUT/usr/bin/shellcheck"
    """,
    visibility = ["PUBLIC"],
)
