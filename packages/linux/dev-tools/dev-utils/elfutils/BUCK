load("@root//defs:package_defs.bzl", "download_source", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "elfutils",
    # Sourceware release tarball includes pre-generated configure script
    bdepend = [],
    src_prepare = "",
    version = "0.194",
    src_uri = "https://mirrors.kernel.org/sourceware/elfutils/0.194/elfutils-0.194.tar.bz2",
    sha256 = "09e2ff033d39baa8b388a2d7fbc5390bfde99ae3b7c67c7daaf7433fbcf0f01e",
    signature_required = False,
    description = "Collection of utilities and libraries to read, create and modify ELF files",
    homepage = "https://sourceware.org/elfutils/",
    license = "GPL-2+ LGPL-3+",

    iuse = [
        "bzip2",
        "debuginfod",
        "libarchive",
        "lzma",
        "nls",
        "stacktrace",
        "static-libs",
        "utils",
        "valgrind",
        "zstd",
    ],
    use_defaults = ["nls"],
    use_configure = {
        "-bzip2": "--without-bzip2",
        "-debuginfod": "--disable-debuginfod --disable-libdebuginfod",
        "-libarchive": "--disable-libarchive",
        "-lzma": "--without-lzma",
        "-nls": "--disable-nls",
        "-stacktrace": "--disable-stacktrace",
        "-static-libs": "--disable-static",
        "-utils": "--disable-utils",
        "-valgrind": "--disable-valgrind",
        "-zstd": "--without-zstd",
        "bzip2": "--with-bzip2",
        "debuginfod": "--enable-debuginfod",
        "libarchive": "--enable-libarchive",
        "lzma": "--with-lzma",
        "nls": "--enable-nls",
        "stacktrace": "--enable-stacktrace",
        "static-libs": "--enable-static",
        "utils": "--enable-utils",
        "valgrind": "--enable-valgrind",
        "zstd": "--with-zstd",
    },

    visibility = ["PUBLIC"],
)
