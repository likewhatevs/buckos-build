load("@root//defs:package_defs.bzl", "download_source", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "elfutils",
    # Sourceware release tarball includes pre-generated configure script
    bdepend = [],
    src_prepare = "",
    version = "0.191",
    src_uri = "https://mirrors.kernel.org/sourceware/elfutils/0.191/elfutils-0.191.tar.bz2",
    sha256 = "df76db71366d1d708365fc7a6c60ca48398f14367eb2b8954efc8897147ad871",
    signature_sha256 = "d07b86df17cbe5187b311cd6e02fc47228cdd20545779cde5cd2a26ca03b7cb1",
    signature_required = False,
    description = "Collection of utilities and libraries to read, create and modify ELF files",
    homepage = "https://sourceware.org/elfutils/",
    license = "GPL-2+ LGPL-3+",

    iuse = [
        "bzip2",
        "debuginfod",
        "libarchive",
        "lzma",
        "nls",
        "stacktrace",
        "static-libs",
        "utils",
        "valgrind",
        "zstd",
    ],
    use_defaults = ["nls"],
    use_configure = {
        "-bzip2": "--without-bzip2",
        "-debuginfod": "--disable-debuginfod --disable-libdebuginfod",
        "-libarchive": "--disable-libarchive",
        "-lzma": "--without-lzma",
        "-nls": "--disable-nls",
        "-stacktrace": "--disable-stacktrace",
        "-static-libs": "--disable-static",
        "-utils": "--disable-utils",
        "-valgrind": "--disable-valgrind",
        "-zstd": "--without-zstd",
        "bzip2": "--with-bzip2",
        "debuginfod": "--enable-debuginfod",
        "libarchive": "--enable-libarchive",
        "lzma": "--with-lzma",
        "nls": "--enable-nls",
        "stacktrace": "--enable-stacktrace",
        "static-libs": "--enable-static",
        "utils": "--enable-utils",
        "valgrind": "--enable-valgrind",
        "zstd": "--with-zstd",
    },

    visibility = ["PUBLIC"],
)
