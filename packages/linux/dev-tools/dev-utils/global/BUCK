load("//defs:package.bzl", "package")

package(
    build_rule = "autotools",
    name = "global",
    # GNU release tarball includes pre-generated configure script
    version = "6.6.12",
    url = "https://mirrors.kernel.org/gnu/global/global-6.6.12.tar.gz",
    sha256 = "542a5b06840e14eca548b4bb60b44c0adcf01024e68eb362f8bf716007885901",
    description = "GNU GLOBAL source code tagging system",
    homepage = "https://www.gnu.org/software/global/",
    license = "GPL-3+",
    use_configure = {
        "emacs": ("--enable-emacs", "--disable-emacs"),
        "python": ("--with-python", "--without-python"),
        "sqlite": ("--with-sqlite3", "--without-sqlite3"),
    },
    configure_args = [
        "--with-exuberant-ctags=/usr/bin/ctags",
    ],

)
