load("//defs:package.bzl", "package")

package(
    build_rule = "binary",
    name = "trec-eval",
    version = "9.0.8",
    url = "https://github.com/usnistgov/trec_eval/archive/refs/tags/v9.0.8.tar.gz",
    sha256 = "c3994a73103ec842e12df693749584a45814c35c36dcc15f38984bd463566ba1",
    description = "TREC evaluation tool for information retrieval",
    install_script = """
        cd $SRCS
        make CC="${CC:-gcc}" CFLAGS="$CFLAGS -DVERSIONID='\\\"9.0.8\\\"'"
        mkdir -p "$OUT/usr/bin"
        cp trec_eval "$OUT/usr/bin/"
    """,
    visibility = ["PUBLIC"],
)
