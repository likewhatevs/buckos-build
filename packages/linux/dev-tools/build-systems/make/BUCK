load("//defs:package.bzl", "package")

# GNU Make - official tarball includes pre-generated configure
package(
    build_rule = "autotools",
    name = "make",
    version = "4.4.1",
    url = "https://mirrors.kernel.org/gnu/make/make-4.4.1.tar.gz",
    sha256 = "dd16fb1d67bfab79a72f5e8390735c49e3e8e70b4945a15ab1f81ddb78658fb3",
    description = "GNU make utility to maintain groups of programs",
    homepage = "https://www.gnu.org/software/make/",
    license = "GPL-3+",

    make_args = [
        # Stub out makeinfo â€” the build host may not have texinfo installed.
        "MAKEINFO=true",
    ],
    use_configure = {
        "guile": ("--with-guile", "--without-guile"),
        "nls": ("--enable-nls", "--disable-nls"),
        "static": ("--enable-static", "--disable-static"),
    },

)
