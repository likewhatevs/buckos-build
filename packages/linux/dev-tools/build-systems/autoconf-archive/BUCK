    name = "autoconf-archive",
    version = "2024.10.16",
    url = "https://mirror.buckos.org/a/autoconf-archive-2024.10.16.tar.xz",
    sha256 = "FIXME",
    description = "GNU Autoconf Macro Archive",
    homepage = "https://www.gnu.org/software/autoconf-archive/",
    license = "GPL-3",
    configure_args = [
        "--prefix=/usr",
        "--datadir=/usr/share",
    ],
    deps = [],
)
