load("//defs:package.bzl", "package")

# pkgconf - Package compiler and linker metadata toolkit

package(
    build_rule = "autotools",
    name = "pkgconf",
    # Official release tarball includes pre-generated configure script
    version = "2.1.0",
    url = "https://distfiles.ariadne.space/pkgconf/pkgconf-2.1.0.tar.xz",
    sha256 = "266d5861ee51c52bc710293a1d36622ae16d048d71ec56034a02eb9cf9677761",
    description = "Package compiler and linker metadata toolkit",
    homepage = "https://pkgconf.org/",
    license = "ISC",

    # USE flags this package supports

    # Default USE flags

    # Conditional configure arguments
    use_configure = {
        "native-symlinks": ("--enable-native-symlinks", "--disable-native-symlinks"),
        "static-libs": ("--enable-static", "--disable-static"),
    },

    # Base configure arguments (always applied)
    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
        "--with-pkg-config-dir=/usr/lib/pkgconfig:/usr/share/pkgconfig",
        "--with-system-libdir=/usr/lib",
        "--with-system-includedir=/usr/include",
    ],

    deps = [
    ],
    visibility = ["PUBLIC"],
)
