load("//defs:package.bzl", "package")

# Gradle - Build automation tool

package(
    name = "gradle",
    build_rule = "binary",
    version = "8.5",
    url = "https://services.gradle.org/distributions/gradle-8.5-bin.zip",
    sha256 = "9d926787066a081739e8200858338b4a69e837c3a821a33aca9db09dd4a41026",
    description = "A powerful build automation tool for the JVM",
    homepage = "https://gradle.org/",
    license = "Apache-2.0",
    deps = [
        "//packages/linux/lang/java:openjdk",
    ],
    install_script = """cp -r * ${PREFIX}/\nln -s ${PREFIX}/bin/gradle ${PREFIX}/bin/gradle""",
    visibility = ["PUBLIC"],
)
