load("//defs:package.bzl", "package")

package(
    build_rule = "cmake",
    name = "srcml",
    version = "1.0.0",
    url = "https://github.com/srcML/srcML/archive/refs/tags/v1.0.0.tar.gz",
    sha256 = "3ddf33271c3b3953d5e3ecbb14c4f925fc0e609a81250d921d3516537dcffae2",
    description = "Toolkit for source code to srcML (XML) and back",
    homepage = "https://www.srcml.org",
    license = "GPL-2.0",
    deps = [
        "//packages/linux/system/libs/compression/libarchive:libarchive",
        "//packages/linux/system/libs/data/libxml2:libxml2",
        "//packages/linux/system/libs/network/curl:curl",
        "//packages/linux/dev-libs/boost:boost",
        "//packages/linux/system/libs/data/libxslt:libxslt",
    ],
    configure_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_CLIENT_TESTS=OFF",
        "-DBUILD_LIBSRCML_TESTS=OFF",
        "-DBUILD_PARSER_TESTS=OFF",
        "-DBUILD_EXAMPLES=OFF",
        "-DBUILD_CLIENT_DOC=OFF",
        "-DBUILD_LIBSRCML_DOC=OFF",
        "-DDYNAMIC_LOAD_ENABLED=OFF",
    ],
)
