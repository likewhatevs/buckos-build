load("//defs:package_defs.bzl", "cmake_package")

# ANTLR4 C++ Runtime - Parser generator runtime

cmake_package(
    name = "antlr4",
    version = "4.13.1",
    src_uri = "https://github.com/antlr/antlr4/archive/refs/tags/4.13.1.tar.gz",
    sha256 = "da20d487524d7f0a8b13f73a8dc326de7fc2e5775f5a49693c0a4e59c6b1410c",
    description = "ANTLR4 C++ runtime library",
    homepage = "https://www.antlr.org/",
    license = "BSD-3-Clause",
    deps = [],
    source_subdir = "runtime/Cpp",
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DANTLR4_INSTALL=ON",
        "-DWITH_DEMO=OFF",
    ],
    visibility = ["PUBLIC"],
)
