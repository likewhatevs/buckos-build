load("@root//defs:package_defs.bzl", "autotools_package")

# GDB - The GNU Debugger

autotools_package(
    name = "gdb",
    version = "14.1",
    src_uri = "https://ftp.gnu.org/gnu/gdb/gdb-14.1.tar.xz",
    sha256 = "d66df51276143451fcbff464cc8723d68f1e9df45a6a2d5635a54e71643edb80",
    description = "The GNU Debugger",
    homepage = "https://www.gnu.org/software/gdb/",
    license = "GPL-3.0",
    iuse = [
        "babeltrace",
        "cet",
        "debuginfod",
        "guile",
        "lzma",
        "multitarget",
        "nls",
        "python",
        "rocm",
        "server",
        "sim",
        "source-highlight",
        "tui",
        "vanilla",
        "xml",
        "xxhash",
        "zstd",
    ],
    use_configure = {
        "-babeltrace": "--disable-babeltrace",
        "-cet": "--disable-cet",
        "-debuginfod": "--disable-debuginfod",
        "-guile": "--disable-guile",
        "-lzma": "--without-lzma",
        "-multitarget": "--disable-multitarget",
        "-nls": "--disable-nls",
        "-rocm": "--disable-rocm",
        "-server": "--disable-server",
        "-sim": "--disable-sim",
        "-vanilla": "--disable-vanilla",
        "-xml": "--disable-xml",
        "-xxhash": "--disable-xxhash",
        "-zstd": "--without-zstd",
        "babeltrace": "--enable-babeltrace",
        "cet": "--enable-cet",
        "debuginfod": "--enable-debuginfod",
        "guile": "--enable-guile",
        "lzma": "--with-lzma",
        "multitarget": "--enable-multitarget",
        "nls": "--enable-nls",
        "rocm": "--enable-rocm",
        "server": "--enable-server",
        "sim": "--enable-sim",
        "vanilla": "--enable-vanilla",
        "xml": "--enable-xml",
        "xxhash": "--enable-xxhash",
        "zstd": "--with-zstd",
    },
    use_defaults = ["python", "tui"],
    deps = [
        "core//ncurses:ncurses",
        "core//readline:readline",
        "system//libs/utility/gmp:gmp",
        "system//libs/utility/mpfr:mpfr",
    ],
    use_deps = {
        "python": ["lang//python:python"],
    },
    configure_args = [
        "--prefix=${PREFIX}",
        "--enable-shared",
        "--disable-static",
        "--with-system-readline",
        "--with-system-zlib",
        "--with-expat",
    ],
    visibility = ["PUBLIC"],
)
