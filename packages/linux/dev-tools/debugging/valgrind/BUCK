load("@root//defs:package_defs.bzl", "autotools_package")

# Valgrind - Instrumentation framework for building dynamic analysis tools

autotools_package(
    name = "valgrind",
    # Sourceware release tarball includes pre-generated configure script
    bdepend = [],
    src_prepare = "",
    version = "3.22.0",
    iuse = ["mpi"],
    use_configure = {
        "-mpi": "--disable-mpi",
        "mpi": "--enable-mpi",
    },
    src_uri = "https://sourceware.org/pub/valgrind/valgrind-3.22.0.tar.bz2",
    sha256 = "c811db5add2c5f729944caf47c4e7a65dcaabb9461e472b578765dd7bf6d2d4c",
    description = "Instrumentation framework for building dynamic analysis tools",
    homepage = "https://valgrind.org/",
    license = "GPL-2.0",
    deps = [],
    configure_args = [
        "--prefix=${PREFIX}",
        "--enable-lto=yes",
    ],
    visibility = ["PUBLIC"],
)
