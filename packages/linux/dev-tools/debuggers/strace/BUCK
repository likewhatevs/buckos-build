load("//defs:package_defs.bzl", "download_source", "autotools_package")

autotools_package(
    name = "strace",
    env = {"CFLAGS": "-Wno-error"},
    version = "6.19",
    src_uri = "https://strace.io/files/6.19/strace-6.19.tar.xz",
    sha256 = "e076c851eec0972486ec842164fdc54547f9d17abd3d1449de8b120f5d299143",
    # strace 6.19 lacks a handler for the listns syscall (nr 470) added in
    # newer kernel headers â€” fall back to the generic printargs decoder
    src_prepare = """
        sed -i 's/SEN(listns)/SEN(printargs)/g' src/linux/generic/syscallent-common.h
    """,
    signature_required = False,
    description = "System call tracer for Linux",
    homepage = "https://strace.io/",
    license = "LGPL-2.1+",

    # USE flags this package supports
    iuse = [
        "unwind",
    ],

    # Default USE flags
    use_defaults = ["unwind"],

    # Conditional dependencies
    use_deps = {
        "unwind": ["//packages/linux/system/libs/libunwind:libunwind"],
    },

    # Conditional configure arguments
    use_configure = {
        "unwind": "--with-libunwind",
        "-unwind": "--without-libunwind",
    },

    visibility = ["PUBLIC"],
)
