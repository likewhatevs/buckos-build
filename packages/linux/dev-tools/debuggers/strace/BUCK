load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "strace",
    version = "6.17",
    src_uri = "https://strace.io/files/6.17/strace-6.17.tar.xz",
    sha256 = "0a7c7bedc7efc076f3242a0310af2ae63c292a36dd4236f079e88a93e98cb9c0",
    signature_required = False,
    description = "System call tracer for Linux",
    homepage = "https://strace.io/",
    license = "LGPL-2.1+",

    # USE flags this package supports
    iuse = [
        "unwind",
    ],

    # Default USE flags
    use_defaults = ["unwind"],

    # Conditional dependencies
    use_deps = {
        "unwind": ["//packages/linux/system/libs/libunwind:libunwind"],
    },

    # Conditional configure arguments
    use_configure = {
        "unwind": "--with-libunwind",
        "-unwind": "--without-libunwind",
    },

    # Fix GCC 15+ warning for unterminated string initialization
    env = {"CFLAGS": "-std=gnu17 -O2 -Wno-error=unterminated-string-initialization"},

    visibility = ["PUBLIC"],
)
