load("@root//defs:package_defs.bzl", "download_source", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "ltrace",
    bdepend = [
        "dev-tools//build-systems/autoconf:autoconf",
        "dev-tools//build-systems/automake:automake",
        "dev-tools//build-systems/libtool:libtool",
    ],
    src_prepare = """
mkdir -p config/m4 config/autoconf
autoreconf -fi
""",
    version = "0.7.91_pre20221216",
    src_uri = "https://gitlab.com/cespedes/ltrace/-/archive/5cffc0d2134f697fbac8627ec5b5f0085cd47c8a.tar.bz2",
    sha256 = "52200d6262a8de40e494301f6af015da2b34fe69d85b55f6223464c03a999800",
    signature_required = False,
    description = "Library call tracer",
    homepage = "https://gitlab.com/cespedes/ltrace",
    license = "GPL-2+",

    # USE flags this package supports
    iuse = [
        "debug",
        "elfutils",
        "selinux",
        "unwind",
    ],

    # Default USE flags
    use_defaults = [],

    # Conditional configure arguments
    use_configure = {
        "-debug": "--disable-debug",
        "-elfutils": "--disable-elfutils",
        "-selinux": "--disable-selinux",
        "-unwind": "--without-libunwind",
        "debug": "--enable-debug",
        "elfutils": "--enable-elfutils",
        "selinux": "--enable-selinux",
        "unwind": "--with-libunwind",
    },

    # Base configure arguments (always applied)
    configure_args = [
        "--disable-werror",
    ],

    visibility = ["PUBLIC"],
)
