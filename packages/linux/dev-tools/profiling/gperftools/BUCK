load("//defs:package.bzl", "package")

# gperftools - Performance tools for C++

package(
    build_rule = "autotools",
    name = "gperftools",
    version = "2.15",
    url = "https://github.com/gperftools/gperftools/releases/download/gperftools-2.15/gperftools-2.15.tar.gz",
    sha256 = "c69fef855628c81ef56f12e3c58f2b7ce1f326c0a1fe783e5cae0b88cbbe9a80",
    description = "Fast, multi-threaded malloc and performance analysis tools",
    homepage = "https://github.com/gperftools/gperftools",
    license = "BSD-3-Clause",
    deps = [
        "//packages/linux/system/libs/compression/xz-utils:xz-utils",
    ],
    use_deps = {
        "libunwind": "//packages/linux/system/libs/libunwind:libunwind",
    },
    configure_args = [
        "--prefix=${PREFIX}",
        "--enable-shared",
        "--disable-static",
    ],
    use_configure = {
        "libunwind": ("--enable-libunwind", "--disable-libunwind"),
    },
    visibility = ["PUBLIC"],
)
