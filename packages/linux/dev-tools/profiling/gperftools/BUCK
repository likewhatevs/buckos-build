load("@root//defs:package_defs.bzl", "autotools_package")

# gperftools - Performance tools for C++

autotools_package(
    name = "gperftools",
    version = "2.15",
    src_uri = "https://github.com/gperftools/gperftools/releases/download/gperftools-2.15/gperftools-2.15.tar.gz",
    sha256 = "c69fef855628c81ef56f12e3c58f2b7ce1f326c0a1fe783e5cae0b88cbbe9a80",
    bdepend = [],
    src_prepare = "",
    description = "Fast, multi-threaded malloc and performance analysis tools",
    homepage = "https://github.com/gperftools/gperftools",
    license = "BSD-3-Clause",
    iuse = ["libunwind"],
    use_defaults = ["libunwind"],
    deps = [
        "system//libs/compression/xz-utils:xz-utils",
    ],
    use_deps = {
        "libunwind": ["system//libs/libunwind:libunwind"],
    },
    configure_args = [
        "--prefix=${PREFIX}",
        "--enable-shared",
        "--disable-static",
    ],
    use_configure = {
        "libunwind": "--enable-libunwind",
        "-libunwind": "--disable-libunwind",
    },
    visibility = ["PUBLIC"],
)
