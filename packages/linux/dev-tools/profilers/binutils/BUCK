load("@root//defs:package_defs.bzl", "download_source", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "binutils",
    bdepend = [],
    src_prepare = "",
    version = "2.41",
    src_uri = "https://mirrors.kernel.org/gnu/binutils/binutils-2.41.tar.xz",
    sha256 = "ae9a5789e23459e59606e6714723f2d3ffc31c03174191ef0d015bdf06007450",
    signature_sha256 = "6f72b25f95614ecbfd050ffdae628e00e90aec9073e30d8ab366e4fc9d1e9e2d",
    signature_required=False,
    description = "GNU Binary Utilities (objdump, nm, readelf, strings, etc.)",
    homepage = "https://www.gnu.org/software/binutils/",
    license = "GPL-3+",

    # USE flags this package supports
    iuse = [
        "cet",
        "debuginfod",
        "gold",
        "gprofng",
        "hardened",
        "multitarget",
        "nls",
        "pgo",
        "plugins",
        "static-libs",
        "vanilla",
        "xxhash",
        "zstd",
    ],

    # Default USE flags
    use_defaults = ["gold", "plugins"],

    # Conditional configure arguments
    use_configure = {
        "-cet": "--disable-cet",
        "-debuginfod": "--disable-debuginfod",
        "-gold": "--disable-gold",
        "-gprofng": "--disable-gprofng",
        "-hardened": "--disable-hardening",
        "-multitarget": "--disable-multitarget",
        "-nls": "--disable-nls",
        "-pgo": "--disable-pgo",
        "-plugins": "--disable-plugins",
        "-static-libs": "--disable-static",
        "-vanilla": "--disable-vanilla",
        "-xxhash": "--disable-xxhash",
        "-zstd": "--without-zstd",
        "cet": "--enable-cet",
        "debuginfod": "--enable-debuginfod",
        "gold": "--enable-gold",
        "gprofng": "--enable-gprofng",
        "hardened": "--enable-hardening",
        "multitarget": "--enable-multitarget",
        "nls": "--enable-nls",
        "pgo": "--enable-pgo",
        "plugins": "--enable-plugins",
        "static-libs": "--enable-static",
        "vanilla": "--enable-vanilla",
        "xxhash": "--enable-xxhash",
        "zstd": "--with-zstd",
    },

    # Base configure arguments (always applied)
    configure_args = [
        "--enable-ld=default",
        "--enable-shared",
        "--disable-werror",
        "--with-system-zlib",
    ],

    deps = [
        "core//zlib:zlib",
    ],
    visibility = ["PUBLIC"],
)
