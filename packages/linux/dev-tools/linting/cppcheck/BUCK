load("//defs:package.bzl", "package")

# Cppcheck - Static analysis tool for C/C++

package(
    build_rule = "cmake",
    name = "cppcheck",
    version = "2.13.0",
    url = "https://github.com/danmar/cppcheck/archive/refs/tags/2.13.0.tar.gz",
    sha256 = "8229afe1dddc3ed893248b8a723b428dc221ea014fbc76e6289840857c03d450",
    description = "Static analysis tool for C/C++ code",
    homepage = "https://cppcheck.sourceforge.io/",
    license = "GPL-3.0",
    use_configure = {
        "charts": ("-DENABLE_CHARTS=ON", "-DENABLE_CHARTS=OFF"),
        "gui": ("-DENABLE_GUI=ON", "-DENABLE_GUI=OFF"),
        "pcre": ("-DENABLE_PCRE=ON", "-DENABLE_PCRE=OFF"),
    },
    deps = [
        "//packages/linux/system/libs/utility/pcre2:pcre2",
    ],
    configure_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DHAVE_RULES=ON",
        "-DBUILD_GUI=OFF",
        "-DBUILD_TESTS=OFF",
    ],
)
