load("//defs:package_defs.bzl", "cmake_package")

# Catch2 - Modern C++ test framework

cmake_package(
    name = "catch2",
    version = "3.5.2",
    src_uri = "https://github.com/catchorg/Catch2/archive/refs/tags/v3.5.2.tar.gz",
    sha256 = "269543a49eb76f40b3f93ff231d4c24c27a7e16c90e47d2e45bcc564de470c6e",
    description = "Modern, C++-native, test framework for unit tests, TDD and BDD",
    homepage = "https://github.com/catchorg/Catch2",
    license = "BSL-1.0",
    deps = [],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DCATCH_BUILD_TESTING=OFF",
        "-DCATCH_BUILD_EXAMPLES=OFF",
        "-DCATCH_INSTALL_DOCS=OFF",
    ],
    visibility = ["PUBLIC"],
)
