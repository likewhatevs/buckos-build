# Greatest - Unit testing framework for C (single-header)

simple_package(
    name = "greatest",
    version = "1.5.0",
    src_uri = "https://github.com/silentbicycle/greatest/archive/refs/tags/v1.5.0.tar.gz",
    sha256 = "33e4c93b1b7f631fec173b8675582d1739b1238a5440b7f4ad50582f0cf38c34",
    description = "A C testing library in 1 file. No dependencies, no dynamic allocation",
    homepage = "https://github.com/silentbicycle/greatest",
    license = "ISC",
    deps = [],
    build_commands = [
        "install -Dm644 greatest.h ${PREFIX}/include/greatest.h",
    ],
    visibility = ["PUBLIC"],
)
