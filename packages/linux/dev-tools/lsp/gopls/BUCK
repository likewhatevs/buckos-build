load("//defs:package.bzl", "package")

# gopls - Go language server
# Note: gopls lives in the gopls/ subdirectory of golang.org/x/tools
# and has its own go.mod file.

package(
    build_rule = "binary",
    name = "gopls",
    version = "0.20.0",
    url = "https://github.com/golang/tools/archive/refs/tags/gopls/v0.20.0.tar.gz",
    sha256 = "1ff2a83be8be5a61b97fc5d72eab66f368ec20b52c513cc6656fc2e502e46f19",
    description = "Go language server providing IDE features",
    homepage = "https://github.com/golang/tools/tree/master/gopls",
    license = "BSD-3-Clause",
    install_script = """
        cd $SRCS/gopls
        export GOPATH="${GOPATH:-$SRCS/../go}"
        export GOCACHE="${GOCACHE:-$SRCS/../.cache/go-build}"
        export GOMODCACHE="${GOMODCACHE:-$GOPATH/pkg/mod}"
        export CGO_ENABLED=0
        if [ "${GOPROXY:-}" = "off" ] && [ -n "${GOMODCACHE:-}" ]; then
            echo "Using pre-fetched Go module cache: $GOMODCACHE (GOPROXY=off)"
        fi
        mkdir -p "$OUT/usr/bin"
        go build -v -ldflags="-s -w" -o "$OUT/usr/bin/gopls" .
    """,
    deps = [
        "//packages/linux/lang/go:go",
    ],
    visibility = ["PUBLIC"],
)
