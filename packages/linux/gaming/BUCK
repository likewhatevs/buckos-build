load("//defs:package.bzl", "package")

# Gaming packages for Linux
# Includes game launchers, utilities, compatibility layers, emulators, and libraries

# =============================================================================
# Game Launchers
# =============================================================================
# Digital distribution platforms and game library managers

filegroup(
    name = "launchers",
    srcs = [
        "//packages/linux/gaming/launchers/steam:steam",
        "//packages/linux/gaming/launchers/lutris:lutris",
        "//packages/linux/gaming/launchers/heroic:heroic",
    ],
    default_target_platform = "//platforms:linux-target",
)

# =============================================================================
# Gaming Utilities
# =============================================================================
# Performance monitoring, optimization, and display tools

filegroup(
    name = "utilities",
    srcs = [
        "//packages/linux/gaming/utilities/mangohud:mangohud",
        "//packages/linux/gaming/utilities/gamemode:gamemode",
        "//packages/linux/gaming/utilities/gamescope:gamescope",
    ],
    default_target_platform = "//platforms:linux-target",
)

# =============================================================================
# Compatibility Layers
# =============================================================================
# Wine, DirectX translation, and Windows compatibility

filegroup(
    name = "compatibility",
    srcs = [
        "//packages/linux/gaming/compatibility/wine:wine",
        "//packages/linux/gaming/compatibility/dxvk:dxvk",
        "//packages/linux/gaming/compatibility/vkd3d-proton:vkd3d-proton",
    ],
    default_target_platform = "//platforms:linux-target",
)

# =============================================================================
# Emulators
# =============================================================================
# Console and retro gaming emulators

filegroup(
    name = "emulators",
    srcs = [
        "//packages/linux/gaming/emulators/retroarch:retroarch",
        "//packages/linux/gaming/emulators/dolphin:dolphin",
        "//packages/linux/gaming/emulators/pcsx2:pcsx2",
    ],
    default_target_platform = "//platforms:linux-target",
)

# =============================================================================
# Gaming Libraries
# =============================================================================
# Core libraries and tools for game development and runtime

filegroup(
    name = "libraries",
    srcs = [
        "//packages/linux/system/libs/multimedia/sdl2:sdl2",
    ],
    default_target_platform = "//platforms:linux-target",
)

# =============================================================================
# Complete Gaming Stack
# =============================================================================

filegroup(
    name = "gaming",
    srcs = [
        ":launchers",
        ":utilities",
        ":compatibility",
        ":emulators",
        ":libraries",
    ],
    default_target_platform = "//platforms:linux-target",
)

