# Editor package aliases

# =============================================================================
# Editor aliases - Map subdirectory targets to this package
# =============================================================================

alias(
    name = "vim",
    actual = "editors//vim:vim",
    visibility = ["PUBLIC"],
)

alias(
    name = "vim-minimal",
    actual = "editors//vim-minimal:vim-minimal",
    visibility = ["PUBLIC"],
)

