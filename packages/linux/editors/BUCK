# =============================================================================
# Editor filegroups
# =============================================================================

filegroup(
    name = "all-editors",
    srcs = [
        ":vim",
        ":vim-minimal",
        ":neovim",
        ":emacs",
        ":emacs-nox",
        ":vscodium",
        ":ed",
    ],
    default_target_platform = "//platforms:linux-target",
)

filegroup(
    name = "gui-editors",
    srcs = [
        ":emacs",
        ":vscodium",
    ],
    default_target_platform = "//platforms:linux-target",
)

filegroup(
    name = "vim-editors",
    srcs = [
        ":vim",
        ":vim-minimal",
        ":neovim",
    ],
    default_target_platform = "//platforms:linux-target",
)

