    build_rule = "autotools",
    name = "ghostscript",
    url = "https://github.com/ArtifexSoftware/ghostpdl-downloads/releases/download/gs10030/ghostscript-10.03.0.tar.xz",

    sha256 = "f25ff491a726d883f0b0f9c8af9b895c674cf77cddd814aa3824b3223f439ee5",
    version = "10.03.0",
    description = "PostScript and PDF interpreter",
    homepage = "https://www.ghostscript.com",
    license = "AGPL-3",
    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
        "--with-system-libtiff",
        "--disable-compile-inits",
    ],
    deps = [
        "//packages/linux/system/libs/image/libjpeg-turbo:libjpeg-turbo",
        "//packages/linux/system/libs/image/libpng:libpng",
        "//packages/linux/system/libs/image/libtiff:libtiff",
    ],
)
