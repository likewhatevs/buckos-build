load("//defs:package.bzl", "package")

# libXtst - X Test extension library (RECORD/XTEST)
package(
    build_rule = "autotools",
    name = "libXtst",
    version = "1.2.5",
    url = "https://xorg.freedesktop.org/archive/individual/lib/libXtst-1.2.5.tar.xz",
    sha256 = "b50d4c25b97009a744706c1039c598f4d8e64910c9fde381994e1cae235d9242",
    description = "X Test extension library",
    homepage = "https://xorg.freedesktop.org/",
    license = "MIT",
    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
        "--libdir=/usr/lib64",
        "--disable-specs",
    ],
    post_install_cmds = ["""\
find \"$DESTDIR\" -name '*.la' -delete
"""],
    deps = [
        "//packages/linux/graphics/xorg/libX11:libX11",
