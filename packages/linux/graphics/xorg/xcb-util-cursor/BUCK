load("@root//defs:package_defs.bzl", "autotools_package")

# xcb-util-cursor - XCB cursor library
autotools_package(
    name = "xcb-util-cursor",
    version = "0.1.5",
    src_uri = "https://xcb.freedesktop.org/dist/xcb-util-cursor-0.1.5.tar.xz",
    sha256 = "0caf99b0d60970f81ce41c7ba694e5eaaf833227bb2cbcdb2f6dc9666a663c57",
    description = "XCB cursor library",
    homepage = "https://xcb.freedesktop.org/",
    license = "MIT",
    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
        "--libdir=/usr/lib64",
    ],
    # Remove .la files that cause libtool path issues
    src_install = "make DESTDIR=\"$DESTDIR\" install && find \"$DESTDIR\" -name '*.la' -delete",
    deps = [
        "graphics//xorg/libxcb:libxcb",
        "graphics//xorg/xcb-util:xcb-util",
        "graphics//xorg/xcb-util-image:xcb-util-image",
        "graphics//xorg/xcb-util-renderutil:xcb-util-renderutil",
        "graphics//xorg/libXau:libXau",
        "graphics//xorg/libXdmcp:libXdmcp",
        "graphics//xorg/xorgproto:xorgproto",
    ],
    visibility = ["PUBLIC"],
)
