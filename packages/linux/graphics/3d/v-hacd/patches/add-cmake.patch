--- /dev/null
+++ b/CMakeLists.txt
@@ -0,0 +1,34 @@
+cmake_minimum_required(VERSION 3.10)
+project(v-hacd VERSION 4.1.0 LANGUAGES CXX)
+
+set(CMAKE_CXX_STANDARD 11)
+set(CMAKE_CXX_STANDARD_REQUIRED ON)
+
+# Build static library from implementation
+add_library(vhacd STATIC
+    src/VHACD_implementation.cpp
+)
+
+target_include_directories(vhacd PUBLIC
+    $<BUILD_INTERFACE:${CMAKE_CURRENT_SOURCE_DIR}/include>
+    $<INSTALL_INTERFACE:include>
+)
+
+target_compile_definitions(vhacd PRIVATE ENABLE_VHACD_IMPLEMENTATION=1)
+
+# Install headers
+install(FILES include/VHACD.h
+    DESTINATION include
+)
+
+# Install library
+install(TARGETS vhacd
+    EXPORT vhacd-targets
+    LIBRARY DESTINATION lib
+    ARCHIVE DESTINATION lib
+)
+
+# Export targets
+install(EXPORT vhacd-targets
+    DESTINATION lib/cmake/vhacd
+)
