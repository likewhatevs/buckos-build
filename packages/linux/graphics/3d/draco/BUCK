load("//defs:package.bzl", "package")

# Draco - 3D Data Compression Library from Google
# Draco is a library for compressing and decompressing 3D geometric meshes and point clouds.
# It is designed to improve the storage and transmission of 3D graphics.

package(
    build_rule = "cmake",
    name = "draco",
    version = "1.5.7",
    url = "https://github.com/google/draco/archive/refs/tags/1.5.7.tar.gz",
    sha256 = "bf6b105b79223eab2b86795363dfe5e5356050006a96521477973aba8f036fe1",
    description = "3D geometric mesh and point cloud compression library",
    homepage = "https://github.com/google/draco",
    license = "Apache-2.0",
    deps = [],
    configure_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        # Disable features not needed by default
        "-DDRACO_JS_GLUE=OFF",
        "-DDRACO_TRANSCODER_SUPPORTED=OFF",
    ],
    visibility = ["PUBLIC"],
)
