+cmake_minimum_required(VERSION 3.10)
+project(etc2comp VERSION 0.9.0)
+
+# Set C++ standard
+set(CMAKE_CXX_STANDARD 11)
+set(CMAKE_CXX_STANDARD_REQUIRED ON)
+
+# Options
+option(BUILD_SHARED_LIBS "Build shared libraries" ON)
+option(BUILD_TOOL "Build EtcTool executable" ON)
+
+# Collect EtcLib sources
+file(GLOB ETC_SOURCES
+    Etc/*.cpp
+)
+
+file(GLOB ETCCODEC_SOURCES
+    EtcCodec/*.cpp
+)
+
+# Create EtcLib library
+add_library(EtcLib ${ETC_SOURCES} ${ETCCODEC_SOURCES})
+
+target_include_directories(EtcLib PUBLIC
+    $<BUILD_INTERFACE:${CMAKE_CURRENT_SOURCE_DIR}/Etc>
+    $<BUILD_INTERFACE:${CMAKE_CURRENT_SOURCE_DIR}/EtcCodec>
+    $<INSTALL_INTERFACE:include/etc2comp>
+)
+
+# Install library
+install(TARGETS EtcLib
+    EXPORT etc2comp-targets
+    LIBRARY DESTINATION lib
+    ARCHIVE DESTINATION lib
+    RUNTIME DESTINATION bin
+)
+
+# Install headers
+install(DIRECTORY Etc/ EtcCodec/
+    DESTINATION include/etc2comp
+    FILES_MATCHING PATTERN "*.h"
+)
+
+# Build EtcTool if requested
+if(BUILD_TOOL)
+    add_subdirectory(EtcTool)
+endif()
