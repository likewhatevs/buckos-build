# Video packages aggregator
# This file provides convenient groups for video-related packages

# Core Video Libraries - Essential video encoding/decoding libraries
filegroup(
    name = "libraries",
    srcs = [
        "graphics//video/ffmpeg:ffmpeg",
        "graphics//video/x264:x264",
        "graphics//video/x265:x265",
        "graphics//video/libvpx:libvpx",
        "media//video/dav1d:dav1d",
        "graphics//video/aom:aom",
        "graphics//video/gstreamer:gstreamer",
        "graphics//video/gstreamer:gst-plugins-base",
        "graphics//video/gstreamer:gst-plugins-good",
        "graphics//video/gstreamer:gst-plugins-bad",
        "graphics//video/gstreamer:gst-plugins-ugly",
        "graphics//video/gstreamer:gst-libav",
        "graphics//video/libva:libva",
        "graphics//video/libva:libva-utils",
        "graphics//video/libva:intel-media-driver",
        "graphics//video/vdpau:vdpau",
        "graphics//video/vdpau:libvdpau-va-gl",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

