        "//packages/linux/graphics/video/gstreamer:gstreamer",
        "//packages/linux/graphics/video/gstreamer:gst-plugins-base",
        "//packages/linux/graphics/video/gstreamer:gst-plugins-good",
        "//packages/linux/graphics/video/gstreamer:gst-plugins-bad",
        "//packages/linux/graphics/video/gstreamer:gst-plugins-ugly",
        "//packages/linux/graphics/video/gstreamer:gst-libav",
        "//packages/linux/graphics/video/libva:libva",
        "//packages/linux/graphics/video/libva:libva-utils",
        "//packages/linux/graphics/video/libva:intel-media-driver",
