# libvdpau - Video Decode and Presentation API for Unix

package(
    build_rule = "meson",
    name = "vdpau",
    version = "1.5",
    url = "https://github.com/gitlab-freedesktop-mirrors/libvdpau/archive/refs/tags/1.5.tar.gz",
    sha256 = "66490802f30426d30ff9e8af35263bbbbaa23b52d0a2d797d06959c3d19638fd",
    description = "Video Decode and Presentation API for Unix",
    homepage = "https://www.freedesktop.org/wiki/Software/VDPAU/",
    license = "MIT",
    configure_args = [
        "-Ddocumentation=false",
    ],
    deps = [
        "//packages/linux/desktop/libdrm:libdrm",
        "//packages/linux/graphics/xorg/libX11:libX11",
        "//packages/linux/graphics/xorg/libXext:libXext",
        "//packages/linux/graphics/xorg/xorgproto:xorgproto",
    ],
)

