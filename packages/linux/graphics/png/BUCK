load("@root//defs:package_defs.bzl", "cmake_package")

cmake_package(
    name = "png",
    version = "1.6.37",
    src_uri = "https://github.com/glennrp/libpng/archive/refs/tags/v1.6.37.tar.gz",
    sha256 = "ca74a0dace179a8422187671aee97dd3892b53e168627145271cad5b5ac81307",
    cmake_args = [
        "-DPNG_SHARED=ON",
        "-DPNG_STATIC=OFF",
        "-DPNG_TESTS=OFF",
    ],
    deps = [
        "//packages/linux/core/zlib:zlib",
    ],
)
