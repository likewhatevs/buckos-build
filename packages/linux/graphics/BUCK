# Graphics packages aggregator
# This file provides convenient groups for graphics-related packages

# Image Editors - Full-featured image manipulation applications
filegroup(
    name = "editors",
    srcs = [
        "//packages/linux/graphics/editors/gimp:gimp",
        "//packages/linux/graphics/editors/krita:krita",
        "//packages/linux/graphics/editors/inkscape:inkscape",
        "//packages/linux/graphics/editors/darktable:darktable",
        "//packages/linux/graphics/editors/rawtherapee:rawtherapee",
        "//packages/linux/graphics/editors/mypaint:mypaint",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

