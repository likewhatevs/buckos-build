        "//packages/linux/graphics/rendering/imgui:imgui",
    ],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DIMNODES_EXAMPLES=OFF",
    ],
    visibility = ["PUBLIC"],
)
