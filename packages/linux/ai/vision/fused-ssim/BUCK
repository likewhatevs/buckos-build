load("@root//defs:package_defs.bzl", "python_package")

# Fused SSIM - CUDA-accelerated Structural Similarity Index
#
# This package requires CUDA and PyTorch with CUDA support for building.
# It provides a fast, fused implementation of SSIM for GPU-accelerated
# image quality assessment, commonly used in 3D Gaussian Splatting.

python_package(
    name = "fused-ssim",
    version = "0.0.1",
    src_uri = "https://github.com/rahul-goel/fused-ssim/archive/d99e3d27513fa3563d98f74fcd40fd429e9e9b0e.tar.gz",
    sha256 = "ca4c9acde1abb8d27138a78d0512bb8e33773afadf2b3c3b3f5f044bd5ffc1a6",
    deps = [
        "ai//ml-frameworks/pytorch:pytorch",
        "system//gpu/libraries/cuda-toolkit:cuda-toolkit",
    ],
)
