load("@root//defs:package_defs.bzl","download_source", "make_package")
load("@root//defs:use_flags.bzl", "set_use_flags")

# =============================================================================
# bspwm - Binary space partitioning window manager
# =============================================================================

download_source(
    name = "bspwm-src",
    src_uri = "https://github.com/baskerville/bspwm/archive/refs/tags/0.9.10.tar.gz",
    sha256 = "0d0f5e465b9c27a5c2143c86189392fa297fad55253b9ed8f6854473d3928f8f",
    signature_required = False,
)

make_package(
    name = "bspwm",
    source = ":bspwm-src",
    version = "0.9.10",
    description = "bspwm - Tiling window manager based on binary space partitioning",
    homepage = "https://github.com/baskerville/bspwm",
    license = "BSD-2-Clause",
    make_args = ["PREFIX=/usr"],
    deps = [
        "graphics//xorg/libxcb:libxcb",
        "graphics//xorg/xcb-util:xcb-util",
        "graphics//xorg/xcb-util-wm:xcb-util-wm",
        "graphics//xorg/xcb-util-keysyms:xcb-util-keysyms",
    ],
    visibility = ["PUBLIC"],
)

# bspwm meta-package
filegroup(
    name = "bspwm-desktop",
    srcs = [
        ":bspwm",
        "desktop//lightdm:lightdm",
        "desktop//mesa:mesa",
    ],
    default_target_platform = "root//platforms:linux-target",
    visibility = ["PUBLIC"],
)
