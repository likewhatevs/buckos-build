load("//defs:package_defs.bzl","download_source", "autotools_package", "meson_package", "make_package")

# =============================================================================
# File Managers for Various Desktop Environments
# =============================================================================

# Nautilus - GNOME Files
meson_package(
    name = "nautilus",
    version = "46.0",
    iuse = [
        "cloudproviders",
        "gnome",
        "gstreamer",
        "introspection",
        "previewer",
        "selinux",
    ],
    use_configure = {
        "-cloudproviders": "-Dcloudproviders=disabled",
        "-gnome": "-Dgnome-desktop=false",
        "-gstreamer": "-Dgstreamer=disabled",
        "-introspection": "-Dintrospection=disabled",
        "-previewer": "-Dpreviewer=disabled",
        "-selinux": "-Dselinux=disabled",
        "cloudproviders": "-Dcloudproviders=enabled",
        "gnome": "-Dgnome-desktop=true",
        "gstreamer": "-Dgstreamer=enabled",
        "introspection": "-Dintrospection=enabled",
        "previewer": "-Dpreviewer=enabled",
        "selinux": "-Dselinux=enabled",
    },
    src_uri = "https://download.gnome.org/sources/nautilus/46/nautilus-46.0.tar.xz",
    sha256 = "e6d75ed9f7aa68a00a2a559a0bf7010c6077e158d2d900fa365a8973f6ef11ce",
    signature_required = False,
    description = "GNOME Files - file manager for GNOME",
    homepage = "https://wiki.gnome.org/Apps/Files",
    license = "GPL-3.0-or-later",
    meson_args = [
        "-Ddocs=false",
        "-Dtests=none",
        "-Dextensions=true",
    ],
    deps = [
        "//packages/linux/dev-libs/glib:glib",
        "//packages/linux/system/filesystem/gvfs:gvfs",
        "//packages/linux/desktop/gtk+-3:gtk+-3.0",
    ],
    visibility = ["PUBLIC"],
)

# Thunar - XFCE File Manager
make_package(
    name = "thunar",
    src_uri = "https://archive.xfce.org/src/xfce/thunar/4.18/thunar-4.18.10.tar.bz2",

    sha256 = "e8308a1f139602d8c125f594bfcebb063b7dac1fbb6e14293bab4cdb3ecf1d08",
    version = "4.18.10",
    description = "Modern file manager for XFCE",
    homepage = "https://docs.xfce.org/xfce/thunar/start",
    license = "GPL-2.0-or-later",
    deps = [
        "//packages/linux/dev-libs/glib:glib",
        "//packages/linux/system/filesystem/gvfs:gvfs",
        "//packages/linux/desktop/xfce:libxfce4ui",
    ],
    visibility = ["PUBLIC"],
)

# PCManFM - Lightweight file manager
make_package(
    name = "pcmanfm",
    src_uri = "https://downloads.sourceforge.net/pcmanfm/pcmanfm-1.3.2.tar.xz",

    sha256 = "14cb7b247493c4cce65fbb5902611e3ad00a7a870fbc1e50adc50428c5140cf7",
    version = "1.3.2",
    description = "Extremely fast and lightweight file manager",
    homepage = "https://github.com/lxde/pcmanfm",
    license = "GPL-2.0-or-later",
    deps = [
        ":libfm",
    ],
    visibility = ["PUBLIC"],
)

