# Nemo - Cinnamon File Manager (fork of Nautilus)
meson_package(
    name = "nemo",
    version = "6.0.2",
    src_uri = "https://github.com/linuxmint/nemo/archive/refs/tags/6.0.2.tar.gz",
    sha256 = "0bbdafebefd2be7faf2263a176bbfb0deb3157da1210ddcf21986147c09775b1",
    signature_required = False,
    description = "File manager for Cinnamon",
    homepage = "https://github.com/linuxmint/nemo",
    license = "GPL-2.0-or-later",
    meson_args = [
        "-Dgtk_doc=false",
        "-Dselinux=false",
    ],
    deps = [
        "//packages/linux/dev-libs/glib:glib",
        "//packages/linux/system/filesystem/gvfs:gvfs",
    ],
    visibility = ["PUBLIC"],
)

