load("//defs:package.bzl", "package")

# =============================================================================
# File Managers for Various Desktop Environments
# =============================================================================

# Nautilus - GNOME Files
package(
    build_rule = "meson",
    name = "nautilus",
    version = "46.0",
    use_configure = {
        "cloudproviders": ("-Dcloudproviders=enabled", "-Dcloudproviders=disabled"),
        "gnome": ("-Dgnome-desktop=true", "-Dgnome-desktop=false"),
        "gstreamer": ("-Dgstreamer=enabled", "-Dgstreamer=disabled"),
        "introspection": ("-Dintrospection=enabled", "-Dintrospection=disabled"),
        "previewer": ("-Dpreviewer=enabled", "-Dpreviewer=disabled"),
        "selinux": ("-Dselinux=enabled", "-Dselinux=disabled"),
    },
    url = "https://download.gnome.org/sources/nautilus/46/nautilus-46.0.tar.xz",
    sha256 = "e6d75ed9f7aa68a00a2a559a0bf7010c6077e158d2d900fa365a8973f6ef11ce",
    description = "GNOME Files - file manager for GNOME",
    homepage = "https://wiki.gnome.org/Apps/Files",
    license = "GPL-3.0-or-later",
    configure_args = [
        "-Ddocs=false",
        "-Dtests=none",
        "-Dextensions=true",
    ],
    deps = [
        "//packages/linux/dev-libs/glib:glib",
        "//packages/linux/system/filesystem/gvfs:gvfs",
        "//packages/linux/desktop/gtk+-3:gtk+-3.0",
    ],
    visibility = ["PUBLIC"],
)

# Thunar - XFCE File Manager
package(
    name = "thunar",
    build_rule = "autotools",
    skip_configure = True,
    url = "https://archive.xfce.org/src/xfce/thunar/4.18/thunar-4.18.10.tar.bz2",

    sha256 = "e8308a1f139602d8c125f594bfcebb063b7dac1fbb6e14293bab4cdb3ecf1d08",
    version = "4.18.10",
    description = "Modern file manager for XFCE",
    homepage = "https://docs.xfce.org/xfce/thunar/start",
    license = "GPL-2.0-or-later",
    deps = [
        "//packages/linux/dev-libs/glib:glib",
        "//packages/linux/system/filesystem/gvfs:gvfs",
        "//packages/linux/desktop/xfce:libxfce4ui",
    ],
    visibility = ["PUBLIC"],
)

