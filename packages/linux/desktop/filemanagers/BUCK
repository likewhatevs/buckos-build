# Ranger - Console file manager with VI key bindings
package(
    name = "ranger",
    build_rule = "autotools",
    skip_configure = True,
    url = "https://github.com/ranger/ranger/archive/refs/tags/v1.9.3.tar.gz",

    sha256 = "ce088a04c91c25263a9675dc5c43514b7ec1b38c8ea43d9a9d00923ff6cdd251",
    version = "1.9.3",
    description = "Console file manager with VI key bindings",
    homepage = "https://github.com/ranger/ranger",
    license = "GPL-3.0-or-later",
    make_args = [],
    post_install_cmds = ["""
        python setup.py install --prefix=/usr --root="$OUT"
    """, """
        go build -o lf
        mkdir -p "$OUT/usr/bin"
        cp lf "$OUT/usr/bin/"
    """],
    deps = [
        "//packages/linux/lang/python:python",
    ],
    visibility = ["PUBLIC"],
)

# lf - Terminal file manager
package(
    name = "lf",
    build_rule = "autotools",
    skip_configure = True,
    url = "https://github.com/gokcehan/lf/archive/refs/tags/r31.tar.gz",

    sha256 = "ed47fc22c58cf4f4e4116a58c500bdb9f9ccc0b89f87be09f321e8d1431226ab",
    version = "r31",
    description = "Terminal file manager written in Go",
    homepage = "https://github.com/gokcehan/lf",
    license = "MIT",
    make_args = [],
    deps = [
        "//packages/linux/lang/go:go",
    ],
    visibility = ["PUBLIC"],
)

# Filegroup for all file managers
filegroup(
    name = "filemanagers",
    srcs = [
        ":nautilus",
        ":thunar",
        ":pcmanfm",
        ":nemo",
        ":caja",
        ":ranger",
        ":lf",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)
