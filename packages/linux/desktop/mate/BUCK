load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# =============================================================================
# MATE - Traditional GNOME 2-style desktop
# =============================================================================

download_source(
    name = "mate-panel-src",
    src_uri = "https://pub.mate-desktop.org/releases/1.28/mate-panel-1.28.1.tar.xz",
    sha256 = "5133c64f5969ae8eeebe6e8bba450dea792cb0be06d9ae1c36e8569d2f8524ba",
    signature_required = False,
)

autotools_package(
    name = "mate-panel",
    bdepend = [
        "//packages/linux/dev-tools/build-systems/autoconf:autoconf",
        "//packages/linux/dev-tools/build-systems/automake:automake",
        "//packages/linux/dev-tools/build-systems/libtool:libtool",
    ],
    src_prepare = """
NOCONFIGURE=1 ./autogen.sh
""",
    configure_flags = [
        "--disable-gtk-doc",
        "--disable-gtk-doc-html",
    ],
    source = ":mate-panel-src",
    iuse = ["X", "introspection", "wayland"],
    use_configure = {
        "-X": "--without-x",
        "-introspection": "--disable-introspection",
        "-wayland": "--disable-wayland",
        "X": "--with-x",
        "introspection": "--enable-introspection",
        "wayland": "--enable-wayland",
    },
    version = "1.28.1",
    description = "MATE Panel",
    homepage = "https://mate-desktop.org/",
    license = "GPL-2.0",
    deps = [
        "//packages/linux/desktop/gtk:gtk3",
    ],
    visibility = ["PUBLIC"],
)

download_source(
    name = "marco-src",
    src_uri = "https://pub.mate-desktop.org/releases/1.28/marco-1.28.1.tar.xz",
    sha256 = "2496e5e40ee980cd6849493ac3e0f8fd0dec8b81c674da8d9ba19a577f0ac2e1",
    signature_required = False,
)

autotools_package(
    name = "marco",
    bdepend = [
        "//packages/linux/dev-tools/build-systems/autoconf:autoconf",
        "//packages/linux/dev-tools/build-systems/automake:automake",
        "//packages/linux/dev-tools/build-systems/libtool:libtool",
    ],
    src_prepare = """
NOCONFIGURE=1 ./autogen.sh
""",
    configure_flags = [
        "--disable-gtk-doc",
        "--disable-gtk-doc-html",
    ],
    source = ":marco-src",
    version = "1.28.1",
    description = "Marco - MATE window manager",
    homepage = "https://mate-desktop.org/",
    license = "GPL-2.0",
    deps = [
        "//packages/linux/desktop/gtk:gtk3",
    ],
    visibility = ["PUBLIC"],
)

# MATE meta-package
filegroup(
    name = "mate",
    srcs = [
        ":mate-panel",
        ":marco",
        "//packages/linux/desktop/lightdm:lightdm",
        "//packages/linux/desktop/mesa:mesa",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)
