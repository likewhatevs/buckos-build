    build_rule = "cmake",
    name = "kitemviews",
    url = "https://download.kde.org/stable/frameworks/6.22/kitemviews-6.22.0.tar.xz",

    sha256 = "9044204fcdeb60d5a327de18910e2467326f23b4fa837c30855abf358e30efdf",
    version = "6.22.0",
    description = "KDE Item Views Framework",
    homepage = "https://kde.org/",
    license = "LGPL-2.1+",
    configure_args = [
        "-DCMAKE_INSTALL_PREFIX=/usr",
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_TESTING=OFF",
        "-DBUILD_DESIGNERPLUGIN=OFF",
    ] + KDE_DISABLE_PYTHON_ARGS,
