    homepage = "https://kde.org/",
    license = "LGPL-2.1+",
    cmake_args = [
        "-DCMAKE_INSTALL_PREFIX=/usr",
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_TESTING=OFF",
        "-DBUILD_DESIGNERPLUGIN=OFF",
    ],
