    name = "kunitconversion-src",
    src_uri = "https://download.kde.org/stable/frameworks/6.9/kunitconversion-6.9.0.tar.xz",
    sha256 = "ea57ac6fa0ccc22dbcbcf87057cabc813a7f7b25a5cfa4349829d00e134bfd1c",
    signature_required = False,
)

