# KParts - Document component framework
package(
    build_rule = "cmake",
    name = "kparts",
    url = "https://download.kde.org/stable/frameworks/6.22/kparts-6.22.0.tar.xz",

    sha256 = "e302ee44891e98fda74872cf3acdde44eb56a625da76339b58f2f5518726230f",
    version = "6.22.0",
    description = "KDE Parts Framework",
    homepage = "https://kde.org/",
    license = "LGPL-2.1+",
    configure_args = [
        "-DCMAKE_INSTALL_PREFIX=/usr",
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_TESTING=OFF",
    ] + KDE_DISABLE_PYTHON_ARGS,
    pre_configure_cmds = ["sed -i 's/^ecm_install_po_files_as_qm/#ecm_install_po_files_as_qm/' CMakeLists.txt || true"],
    deps = [
        "//packages/linux/desktop/qt:qt6",
