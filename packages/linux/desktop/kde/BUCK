    homepage = "https://kde.org/",
    license = "LGPL-2.1+",
    configure_args = [
        "-DCMAKE_INSTALL_PREFIX=/usr",
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_TESTING=OFF",
    ] + KDE_DISABLE_PYTHON_ARGS,
