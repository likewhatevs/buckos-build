# Font packages - libraries, tools, and font collections

# Sub-category groups
filegroup(
    name = "libraries",
    srcs = ["fonts//libraries:all-libraries"],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "tools",
    srcs = ["fonts//tools:all-tools"],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "collections",
    srcs = ["fonts//collections:all-collections"],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# Themed groups
filegroup(
    name = "essential",
    srcs = [
        "fonts//libraries/freetype:freetype",
        "fonts//libraries/fontconfig:fontconfig",
        "fonts//libraries/harfbuzz:harfbuzz",
        "fonts//collections:essential-fonts",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "development",
    srcs = [
        "fonts//libraries:all-libraries",
        "fonts//tools:all-tools",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "desktop",
    srcs = [
        "fonts//libraries:all-libraries",
        "fonts//collections:all-collections",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# All fonts packages
filegroup(
    name = "all",
    srcs = [
        ":libraries",
        ":tools",
        ":collections",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)
