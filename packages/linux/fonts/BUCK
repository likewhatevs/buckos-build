        "//packages/linux/fonts/collections:essential-fonts",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "development",
    srcs = [
        "//packages/linux/fonts/libraries:all-libraries",
        "//packages/linux/fonts/tools:all-tools",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "desktop",
    srcs = [
        "//packages/linux/fonts/libraries:all-libraries",
        "//packages/linux/fonts/collections:all-collections",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# All fonts packages
filegroup(
    name = "all",
