# Font packages - libraries, tools, and font collections

# Sub-category groups
filegroup(
    name = "libraries",
    srcs = ["//packages/linux/fonts/libraries:all-libraries"],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "tools",
    srcs = ["//packages/linux/fonts/tools:all-tools"],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

filegroup(
    name = "collections",
    srcs = ["//packages/linux/fonts/collections:all-collections"],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

# Themed groups
filegroup(
    name = "essential",
    srcs = [
        "//packages/linux/system/libs/font/freetype:freetype",
        "//packages/linux/system/libs/font/fontconfig:fontconfig",
