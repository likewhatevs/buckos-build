load("//defs:package.bzl", "package")

package(
    name = "liberation-fonts",
    build_rule = "binary",
    version = "2.1.5",
    url = "https://github.com/liberationfonts/liberation-fonts/files/7261482/liberation-fonts-ttf-2.1.5.tar.gz",
    sha256 = "7191c669bf38899f73a2094ed00f7b800553364f90e2637010a69c0e268f25d0",
    description = "Liberation fonts - metrically compatible with Arial, Times New Roman, Courier New",
    homepage = "https://github.com/liberationfonts/liberation-fonts",
    license = "OFL-1.1",
    install_script = """
mkdir -p "$DESTDIR/usr/share/fonts/liberation"
for font in *.ttf; do
    if [ -f "$font" ]; then
        install -m 0644 "$font" "$DESTDIR/usr/share/fonts/liberation/"
    fi
done
""",
    deps = [
        "//packages/linux/system/libs/font/fontconfig:fontconfig",
    ],
    visibility = ["PUBLIC"],
)
