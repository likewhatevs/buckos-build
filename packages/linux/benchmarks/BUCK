# Package group for all benchmarks
filegroup(
    name = "all-benchmarks",
    srcs = [
        "benchmarks//stress-ng:stress-ng",
        "benchmarks//fio:fio",
        "benchmarks//iperf3:iperf3",
        "benchmarks//hackbench:hackbench",
        "benchmarks//memtester:memtester",
        "benchmarks//bonnie:bonnie",
        "benchmarks//iozone:iozone",
        "benchmarks//stream:stream",
        "benchmarks//netperf:netperf",
        "benchmarks//dbench:dbench",
        "benchmarks//perf:perf",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

