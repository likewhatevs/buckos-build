load("//defs:package.bzl", "package")

# tmux-bash-completion - Bash completion for tmux
package(
    name = "tmux-bash-completion",
    build_rule = "binary",
    version = "2.0.0",
    url = "https://github.com/imomaliev/tmux-bash-completion/archive/refs/heads/master.tar.gz",
    sha256 = "e19ab4070ff99fcbb8969c9cfb85a984b775567eff6495ce58ee242723e72ca1",
    description = "Bash completion for tmux",
    homepage = "https://github.com/imobert/tmux-bash-completion",
    license = "BSD",
    deps = [
        "//packages/linux/core/bash:bash",
        "//packages/linux/system/apps/tmux:tmux",
    ],
    install_script = """
mkdir -p "$OUT/usr/share/bash-completion/completions"
cp "$SRCS/completions/tmux" "$OUT/usr/share/bash-completion/completions/"
""",
)
