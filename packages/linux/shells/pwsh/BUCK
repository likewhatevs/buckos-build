load("@root//defs:package_defs.bzl", "download_source", "ebuild_package", "autotools_package")
load("@root//defs:use_flags.bzl", "set_use_flags", "use_dep")

# pwsh - PowerShell for Linux (prebuilt binary)
download_source(
    name = "pwsh-src",
    src_uri = "https://github.com/PowerShell/PowerShell/releases/download/v7.4.1/powershell-7.4.1-linux-x64.tar.gz",
    sha256 = "8beabac4431b75e9b67c6d9fafd8b02cc019f21f230ea3d94aec1348c50529d3",
    signature_required = False,
)

ebuild_package(
    name = "pwsh",
    source = ":pwsh-src",
    iuse = ["gui", "vanilla"],
    use_configure = {
        "-gui": "--disable-gui",
        "-vanilla": "--disable-vanilla",
        "gui": "--enable-gui",
        "vanilla": "--enable-vanilla",
    },
    version = "7.4.1",
    description = "Cross-platform PowerShell",
    homepage = "https://github.com/PowerShell/PowerShell",
    license = "MIT",
    src_configure = "true",
    src_compile = "true",
    src_install = """
mkdir -p "$DESTDIR/usr/lib/powershell"
cp -r * "$DESTDIR/usr/lib/powershell/"
mkdir -p "$DESTDIR/usr/bin"
ln -s /usr/lib/powershell/pwsh "$DESTDIR/usr/bin/pwsh"
""",
    rdepend = [],
    visibility = ["PUBLIC"],
)
