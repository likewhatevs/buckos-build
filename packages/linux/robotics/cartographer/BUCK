load("@root//defs:package_defs.bzl", "cmake_package")

# cartographer - Google Cartographer SLAM (Simultaneous Localization and Mapping)

cmake_package(
    name = "cartographer",
    version = "1.0.0",
    src_uri = "https://github.com/cartographer-project/cartographer/archive/refs/tags/1.0.0.tar.gz",
    sha256 = "474a410bf6457eb8a0fd92ea412d7889fb013051e625d3ee25e8d65e4113fd6c",
    description = "Cartographer is a system that provides real-time simultaneous localization and mapping (SLAM) in 2D and 3D across multiple platforms and sensor configurations",
    homepage = "https://github.com/cartographer-project/cartographer",
    license = "Apache-2.0",
    deps = [
        "robotics//ceres-solver:ceres-solver",
        "robotics//eigen3:eigen3",
        "dev-libs//serialization/protobuf:protobuf",
        "graphics//cairo:cairo",
        "dev-libs//misc/boost:boost",
        "system//libs/glog:glog",
        "dev-libs//misc/gflags:gflags",
        "dev-libs//misc/lua:lua",
        "dev-libs//abseil-cpp:abseil-cpp",
    ],
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_GRPC=OFF",
        "-DBUILD_PROMETHEUS=OFF",
    ],
    visibility = ["PUBLIC"],
)
