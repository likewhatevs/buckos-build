load("//defs:package.bzl", "package")

# cartographer - Google Cartographer SLAM (Simultaneous Localization and Mapping)

package(
    build_rule = "cmake",
    name = "cartographer",
    version = "1.0.0",
    url = "https://github.com/cartographer-project/cartographer/archive/refs/tags/1.0.0.tar.gz",
    sha256 = "474a410bf6457eb8a0fd92ea412d7889fb013051e625d3ee25e8d65e4113fd6c",
    description = "Cartographer is a system that provides real-time simultaneous localization and mapping (SLAM) in 2D and 3D across multiple platforms and sensor configurations",
    homepage = "https://github.com/cartographer-project/cartographer",
    license = "Apache-2.0",
    deps = [
        "//packages/linux/dev-libs/math/ceres-solver:ceres-solver",
        "//packages/linux/dev-libs/eigen3:eigen3",
        "//packages/linux/dev-libs/serialization/protobuf:protobuf",
        "//packages/linux/system/libs/graphics/cairo:cairo",
        "//packages/linux/dev-libs/misc/boost:boost",
        "//packages/linux/system/libs/glog:glog",
        "//packages/linux/dev-libs/misc/gflags:gflags",
        "//packages/linux/dev-libs/misc/lua:lua",
        "//packages/linux/dev-libs/abseil-cpp:abseil-cpp",
    ],
    configure_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_GRPC=OFF",
        "-DBUILD_PROMETHEUS=OFF",
    ],
)
